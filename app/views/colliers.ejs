    <!-- JavaScript FONCTIONNEL -->
    <script>
        console.log('üéØ Initialisation du template bagues COMPLET');

        // ===== TOGGLE FILTRES ULTRA SIMPLE ET FORC√â =====
        function toggleFilterDropdown(filterType) {
            console.log('üîÑ Toggle filtre FORC√â:', filterType);
            
            const menu = document.getElementById('filter-' + filterType);
            const button = document.querySelector(`[onclick*="'${filterType}'"]`);
            
            if (!menu) {
                console.error('‚ùå Menu non trouv√©:', 'filter-' + filterType);
                // Lister tous les √©l√©ments pour debug
                console.log('üîç Tous les menus disponibles:');
                document.querySelectorAll('[id^="filter-"]').forEach(el => {
                    console.log('  -', el.id, el);
                });
                return;
            }
            
            console.log('‚úÖ Menu trouv√©:', menu);
            console.log('üîç √âtat initial:', {
                display: menu.style.display,
                visibility: menu.style.visibility,
                opacity: menu.style.opacity,
                classes: menu.className
            });
            
            // Fermer tous les autres menus
            document.querySelectorAll('.filter-menu').forEach(m => {
                if (m !== menu) {
                    m.classList.remove('show');
                    m.style.display = 'none';
                    m.style.visibility = 'hidden';
                    m.style.opacity = '0';
                }
            });
            
            // Retirer la classe open de tous les boutons
            document.querySelectorAll('.filter-toggle-btn').forEach(b => {
                if (b !== button) {
                    b.classList.remove('open');
                }
            });
            
            // Toggle le menu actuel avec FORCE MAXIMALE
            if (menu.classList.contains('show')) {
                // FERMER
                menu.classList.remove('show');
                menu.style.display = 'none';
                menu.style.visibility = 'hidden';
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                if (button) button.classList.remove('open');
                console.log('üìÑ FERMETURE FORC√âE');
            } else {
                // OUVRIR AVEC FORCE MAXIMALE
                menu.classList.add('show');
                menu.style.display = 'block';
                menu.style.visibility = 'visible';
                menu.style.opacity = '1';
                menu.style.transform = 'translateY(0)';
                menu.style.position = 'absolute';
                menu.style.top = '100%';
                menu.style.left = '0';
                menu.style.right = '0';
                menu.style.zIndex = '99999';
                menu.style.background = 'white';
                menu.style.border = '2px solid #e8c2c8';
                menu.style.borderRadius = '0 0 8px 8px';
                menu.style.boxShadow = '0 8px 25px rgba(0, 0, 0, 0.15)';
                menu.style.minHeight = '100px';
                menu.style.maxHeight = '300px';
                menu.style.overflowY = 'auto';
                
                if (button) button.classList.add('open');
                console.log('üìã OUVERTURE FORC√âE');
                
                // Forcer l'affichage du contenu
                const options = menu.querySelector('.filter-options');
                if (options) {
                    options.style.display = 'block';
                    options.style.padding = '15px';
                    options.style.background = 'white';
                    console.log('‚úÖ Contenu forc√© visible');
                }
                
                // Forcer l'affichage des options individuelles
                menu.querySelectorAll('.filter-option').forEach(option => {
                    option.style.display = 'flex';
                    option.style.padding = '10px 12px';
                    option.style.marginBottom = '6px';
                    option.style.background = 'white';
                    option.style.border = '1px solid transparent';
                    option.style.borderRadius = '6px';
                });
                
                console.log('üéØ Options individuelles forc√©es');
            }
            
            console.log('üîç √âtat final:', {
                display: menu.style.display,
                visibility: menu.style.visibility,
                opacity: menu.style.opacity,
                classes: menu.className,
                hasShowClass: menu.classList.contains('show')
            });
        }

        // ===== FERMER LES MENUS AU CLIC EXT√âRIEUR =====
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.filter-group')) {
                document.querySelectorAll('.filter-menu').forEach(menu => {
                    menu.classList.remove('show');
                    menu.style.display = 'none';
                });
                document.querySelectorAll('.filter-toggle-btn').forEach(btn => {
                    btn.classList.remove('open');
                });
            }
        });

        // ===== GESTION DES CHECKBOXES =====
        let filterTimeout;
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                console.log('‚òëÔ∏è Checkbox chang√©e:', this.name, this.value, this.checked);
                
                // Mettre √† jour l'apparence
                const filterOption = this.closest('.filter-option');
                if (this.checked) {
                    filterOption.classList.add('selected');
                } else {
                    filterOption.classList.remove('selected');
                }
                
                // Auto-submit avec d√©lai (optionnel)
                // Comment√© pour permettre s√©lection multiple avant submit
                /*
                clearTimeout(filterTimeout);
                filterTimeout = setTimeout(() => {
                    console.log('üì§ Soumission automatique');
                    document.getElementById('filterForm').submit();
                }, 1500);
                */
            });
        });

        // ===== FONCTION CLEAR FILTERS =====
        function clearFilters() {
            console.log('üßπ Effacement des filtres');
            
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
                const filterOption = checkbox.closest('.filter-option');
                if (filterOption) {
                    filterOption.classList.remove('selected');
                }
            });
            
            document.querySelector('select[name="sort"]').value = 'newest';
            
            // Soumettre le formulaire pour r√©initialiser
            document.getElementById('filterForm').submit();
        }

        // ===== CAROUSEL PRODUITS =====
        class ProductCarousel {
            constructor() {
                this.carousels = new Map();
                this.intervals = new Map();
                this.init();
            }

            init() {
                console.log('üé† Initialisation carousel produits');
                
                setTimeout(() => {
                    document.querySelectorAll('.product-image-container').forEach((container, index) => {
                        const images = container.querySelectorAll('.product-image, .placeholder-image');
                        
                        if (images.length > 1) {
                            const carouselId = 'carousel_' + index;
                            
                            this.carousels.set(carouselId, {
                                container,
                                imagesContainer: container.querySelector('.product-images'),
                                images: Array.from(images),
                                indicators: container.querySelectorAll('.indicator-dot'),
                                currentIndex: 0,
                                totalImages: images.length
                            });

                            // Auto-play diff√©r√© pour √©viter surcharge
                            setTimeout(() => {
                                this.startAutoPlay(carouselId);
                            }, index * 2000);

                            console.log(`‚úÖ Carousel ${carouselId}: ${images.length} images`);
                        }
                    });
                }, 500);
            }

            startAutoPlay(carouselId) {
                const interval = setInterval(() => {
                    this.nextImage(carouselId);
                }, 4000);
                
                this.intervals.set(carouselId, interval);
            }

            nextImage(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = (carousel.currentIndex + 1) % carousel.totalImages;
                this.updateDisplay(carouselId);
            }

            prevImage(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = (carousel.currentIndex - 1 + carousel.totalImages) % carousel.totalImages;
                this.updateDisplay(carouselId);
            }

            goToImage(carouselId, index) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = index;
                this.updateDisplay(carouselId);
            }

            updateDisplay(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.imagesContainer.style.transform = `translateX(-${carousel.currentIndex * 100}%)`;
                
                carousel.indicators.forEach((indicator, index) => {
                    indicator.classList.toggle('active', index === carousel.currentIndex);
                });
            }

            getCarouselIdByElement(element) {
                const container = element.closest('.product-image-container');
                const containers = Array.from(document.querySelectorAll('.product-image-container'));
                const index = containers.indexOf(container);
                return 'carousel_' + index;
            }
        }

        // ===== FONCTIONS GLOBALES POUR LES FL√àCHES =====
        function navigateImage(button, direction) {
            if (!window.productCarousel) return;
            
            const carouselId = window.productCarousel.getCarouselIdByElement(button);
            
            if (direction === 1) {
                window.productCarousel.nextImage(carouselId);
            } else {
                window.productCarousel.prevImage(carouselId);
            }
        }

        function goToImage(dotElement, index) {
            if (!window.productCarousel) return;
            
            const carouselId = window.productCarousel.getCarouselIdByElement(dotElement);
            window.productCarousel.goToImage(carouselId, index);
        }

        // ===== INITIALISATION COMPL√àTE =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ DOM charg√©, initialisation compl√®te...');
            
            // Marquer les filtres s√©lectionn√©s au chargement
            document.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
                const filterOption = checkbox.closest('.filter-option');
                if (filterOption) {
                    filterOption.classList.add('selected');
                }
            });
            
            // Initialiser le carousel
            window.productCarousel = new ProductCarousel();
            
            // Navigation par clic sur carte produit
            document.querySelectorAll('.product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    // Ne pas naviguer si on clique sur les contr√¥les du carousel
                    if (!e.target.closest('.image-nav-arrows') && !e.target.closest('.indicator-dot')) {
                        const jewelSlug = this.dataset.jewelSlug;
                        const jewelId = this.dataset.jewelId;
                        
                        if (jewelSlug) {
                            window.location.href = '/bijoux/' + jewelSlug;
                        } else if (jewelId) {
                            window.location.href = '/bijoux/detail/' + jewelId;
                        }
                    }
                });
            });
            
            // Test des filtres pour debug
            setTimeout(() => {
                console.log('üß™ Test des filtres...');
                
                const menus = document.querySelectorAll('.filter-menu');
                console.log('üìã Menus trouv√©s:', menus.length);
                
                const buttons = document.querySelectorAll('.filter-toggle-btn');
                console.log('üîò Boutons trouv√©s:', buttons.length);
                
                // Test d'ouverture du premier filtre
                if (buttons.length > 0) {
                    const firstButton = buttons[0];
                    const onclick = firstButton.getAttribute('onclick');
                    console.log('üéØ Test du premier bouton:', onclick);
                }
            }, 1000);
            
            console.log('‚úÖ Initialisation termin√©e avec succ√®s');
        });

        // Clean up avant fermeture
        window.addEventListener('beforeunload', () => {
            if (window.productCarousel && window.productCarousel.intervals) {
                window.productCarousel.intervals.forEach(interval => {
                    clearInterval(interval);
                });
            }
        });
    </script>
