    <style>
        /* Styles pour les bannières promotionnelles */
        .promo-banner {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
            text-align: center;
            padding: 12px 0;
            font-weight: 600;
            font-size: 14px;
            animation: pulse 2s infinite;
            position: relative;
            overflow: hidden;
            margin-bottom: 0;
        }
        
           html {
                width: 100%;
            overflow-x: hidden; /* Évite le scroll horizontal */
                }
                
        .promo-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            animation: shine 3s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }
        
        @keyframes shine {
            0% { left: -100%; }
            100% { left: 100%; }
        }

        /* Styles pour les badges des produits */
        .product-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            z-index: 5;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            animation: badgeAppear 0.5s ease-out;
        }
        
        @keyframes badgeAppear {
            from { opacity: 0; transform: scale(0.8); }
            to { opacity: 1; transform: scale(1); }
        }
        
        /* Badge Promo */
        .product-badge.promo {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            animation: pulse 2s infinite, badgeAppear 0.5s ease-out;
        }
        
        /* Badge Nouveau */
        .product-badge.nouveau {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
        }
        
        /* Badge Populaire */
        .product-badge.populaire {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            color: white;
            position: relative;
        }
        
        .product-badge.populaire::before {
            content: '🔥';
            margin-right: 4px;
        }

        /* Styles pour les prix avec réduction */
        .product-price-container {
            display: flex;
            flex-direction: column;
            gap: 5px;
            margin: 10px 0;
        }
        
        .price-current {
            font-size: 18px;
            font-weight: 700;
            color: #e74c3c;
        }
        
        .price-original {
            font-size: 14px;
            color: #7f8c8d;
            text-decoration: line-through;
        }
        
        .price-single {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
        }

        /* Effet de survol pour les cartes */
        .product-card {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }
        
        .product-card:hover .product-badge {
            animation: bounce 1s infinite alternate;
        }
        
        @keyframes bounce {
            0% { transform: translateY(0); }
            100% { transform: translateY(-3px); }
        }

        /* Styles pour les boutons admin */
        .admin-actions {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 5px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .product-card:hover .admin-actions {
            opacity: 1;
        }
        
        .btn-admin-small {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            border: none;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 12px;
        }
        
        .btn-edit-small {
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }
        
        .btn-delete-small {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }
        
        .btn-admin-small:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .promo-banner {
                font-size: 12px;
                padding: 8px 0;
            }
            
            .product-badge {
                font-size: 10px;
                padding: 4px 8px;
            }
            
            .admin-actions {
                opacity: 1; /* Toujours visible sur mobile */
            }
        }
    </style>

