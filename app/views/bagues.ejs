        // Syst√®me de notification
        function showNotification(message, title = "Succ√®s", isSuccess = true) {
            const notification = document.getElementById('notification');
            const messageElement = document.getElementById('notification-message');
            const titleElement = notification.querySelector('.notification-title');
            const icon = notification.querySelector('.notification-icon');
            
            // Annuler tout timer pr√©c√©dent de fermeture
            if (window.notificationTimer) {
                clearTimeout(window.notificationTimer);
            }
            
            // Changez le message et le titre
            messageElement.textContent = message;
            titleElement.textContent = title;
            
            // D√©finissez le style selon le type (succ√®s ou erreur)
            if (isSuccess) {
                notification.classList.remove('error');
                if (title === "Information") {
                    icon.className = 'fas fa-info-circle notification-icon';
                } else {
                    icon.className = 'fas fa-check-circle notification-icon';
                }
            } else {
                notification.classList.add('error');
                icon.className = 'fas fa-exclamation-circle notification-icon';
                if (title === "Succ√®s" || title === "Information") {
                    titleElement.textContent = "Erreur";
                }
            }
            
            // Si une notification est d√©j√† visible, la faire dispara√Ætre bri√®vement avant d'afficher la nouvelle
            if (notification.classList.contains('show')) {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.classList.add('show');
                }, 300);
            } else {
                // Sinon, afficher directement
                notification.classList.add('show');
            }
            
            // Masquer apr√®s 4 secondes
            window.notificationTimer = setTimeout(() => {
                notification.classList.remove('show');
            }, 4000);
        }
        
        // Fermer la notification en cliquant sur la croix
        document.getElementById('notification-close').addEventListener('click', function() {
            document.getElementById('notification').classList.remove('show');
        });

