<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Bagues - CrystoJewel' %></title>
    <link rel="stylesheet" href="/css/bijoux.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --rose-gold: #b76e79;
            --rose-gold-light: #e8c2c8;
            --rose-gold-dark: #7d4b53;
            --cream: #fff8f0;
            --dark-text: #3a3a3a;
            --light-text: #666;
            --border-light: #e0e0e0;
            --white-soft: #fafafa;
            --shadow-soft: 0 4px 15px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--white-soft);
            color: var(--dark-text);
            line-height: 1.6;
        }

        /* Header avec navigation existante */
        .header-clean {
            background: white;
            padding: 15px 0;
            border-bottom: 1px solid var(--border-light);
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow-soft);
        }

        /* Container principal */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px;
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 60px;
        }

        /* FILTRES AVEC VRAIE LOGIQUE DE DROPDOWN */
        .filters-sidebar {
            background: white;
            border-radius: 12px;
            padding: 30px;
            height: fit-content;
            box-shadow: var(--shadow-soft);
            position: sticky;
            top: 120px;
            border: 1px solid var(--rose-gold-light);
        }

        .filters-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 25px;
            color: var(--rose-gold-dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .filter-group {
            margin-bottom: 20px;
            position: relative;
        }

        .filter-group:last-child {
            margin-bottom: 0;
        }

        /* BOUTON CLIQUABLE POUR OUVRIR LE MENU */
        .filter-toggle-btn {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 16px;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            border: 1px solid var(--rose-gold-light);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            user-select: none;
            font-size: 14px;
            font-weight: 500;
            color: var(--dark-text);
        }

        .filter-toggle-btn:hover {
            background: linear-gradient(135deg, var(--rose-gold-light), rgba(232, 194, 200, 0.3));
            border-color: var(--rose-gold);
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(183, 110, 121, 0.2);
        }

        .filter-toggle-btn.open {
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
            border-color: var(--rose-gold-dark);
        }

        .filter-toggle-btn .chevron {
            font-size: 12px;
            transition: transform 0.3s ease;
        }

        .filter-toggle-btn.open .chevron {
            transform: rotate(180deg);
        }

        /* MENU DÉROULANT ULTRA SIMPLE */
        .filter-menu {
            position: absolute !important;
            top: 100% !important;
            left: 0 !important;
            right: 0 !important;
            background: white !important;
            border: 1px solid #e8c2c8 !important;
            border-radius: 0 0 8px 8px !important;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1) !important;
            z-index: 9999 !important;
            display: none !important;
        }

        .filter-menu.show {
            display: block !important;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .filter-options {
            padding: 15px;
        }

        /* OPTIONS DANS LE MENU */
        .filter-option {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 12px;
            cursor: pointer;
            transition: all 0.2s ease;
            border-radius: 6px;
            margin-bottom: 4px;
        }

        .filter-option:hover {
            background: rgba(183, 110, 121, 0.1);
            color: var(--rose-gold);
        }

        .filter-option.selected {
            background: linear-gradient(135deg, var(--rose-gold-light), rgba(232, 194, 200, 0.4));
            color: var(--rose-gold-dark);
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(183, 110, 121, 0.2);
        }

        .filter-option input[type="checkbox"] {
            margin-right: 10px;
            accent-color: var(--rose-gold);
            transform: scale(1.1);
        }

        .filter-option label {
            flex: 1;
            cursor: pointer;
            font-size: 13px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0;
        }

        .filter-count {
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 10px;
            font-weight: 500;
            min-width: 18px;
            text-align: center;
        }

        /* Boutons d'action */
        .filter-actions {
            margin-top: 25px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .btn-filter {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-apply {
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
        }

        .btn-apply:hover {
            background: linear-gradient(135deg, var(--rose-gold-dark), #6d3f47);
            transform: translateY(-1px);
        }

        .btn-clear {
            background: #f5f5f5;
            color: var(--dark-text);
            border: 1px solid var(--border-light);
        }

        .btn-clear:hover {
            background: #e5e5e5;
        }

        /* Section produits */
        .products-section {
            min-height: 100vh;
        }

        .products-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .products-title {
            font-size: 28px;
            font-weight: 600;
            color: var(--rose-gold-dark);
        }

        .products-count {
            font-size: 14px;
            color: var(--light-text);
        }

        .sort-select {
            padding: 8px 15px;
            border: 1px solid var(--rose-gold-light);
            border-radius: 6px;
            background: white;
            font-size: 13px;
            cursor: pointer;
            color: var(--dark-text);
        }

        .sort-select:focus {
            outline: none;
            border-color: var(--rose-gold);
        }

        /* Grille produits responsive */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
        }

        /* RESPONSIVE MOBILE */
        @media (max-width: 768px) {
            .main-container {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 20px 15px;
            }

            .filters-sidebar {
                position: relative;
                top: 0;
                padding: 15px;
                order: 1;
            }

            .products-section {
                order: 2;
            }

            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
            }

            .products-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }
        }

        /* CARTES PRODUITS AVEC CAROUSEL */
        .product-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-soft);
            transition: all 0.3s ease;
            position: relative;
            cursor: pointer;
            border: 1px solid var(--border-light);
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
            border-color: var(--rose-gold-light);
        }

        /* CONTENEUR IMAGE AVEC CAROUSEL */
        .product-image-container {
            position: relative;
            height: 300px;
            overflow: hidden;
            background: var(--cream);
        }

        @media (max-width: 768px) {
            .product-image-container {
                height: 200px;
            }
        }

        .product-images {
            display: flex;
            height: 100%;
            transition: transform 0.4s ease;
        }

        .product-image {
            min-width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        .placeholder-image {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--rose-gold-light), var(--cream));
            color: var(--rose-gold);
            font-size: 3rem;
        }

        /* FLÈCHES DE NAVIGATION */
        .image-nav-arrows {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.7);
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0.8;
            transition: all 0.3s ease;
            z-index: 20;
            color: white;
            font-size: 14px;
        }

        .product-card:hover .image-nav-arrows {
            opacity: 1;
        }

        .image-nav-arrows:hover {
            background: var(--rose-gold);
            transform: translateY(-50%) scale(1.1);
        }

        .nav-prev {
            left: 10px;
        }

        .nav-next {
            right: 10px;
        }

        /* INDICATEURS DE NAVIGATION */
        .image-indicators {
            position: absolute;
            bottom: 15px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 6px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card:hover .image-indicators {
            opacity: 1;
        }

        .indicator-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.6);
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .indicator-dot.active {
            background: var(--rose-gold);
            transform: scale(1.2);
        }

        /* Badge produit */
        .product-badge {
            position: absolute;
            top: 12px;
            left: 12px;
            background: var(--rose-gold);
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 500;
            z-index: 15;
        }

        .product-badge.promo {
            background: #E74C3C;
        }

        .product-badge.nouveau {
            background: #27AE60;
        }

        /* Info produit */
        .product-info {
            padding: 20px;
        }

        @media (max-width: 768px) {
            .product-info {
                padding: 15px;
            }
        }

        .product-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--dark-text);
        }

        .product-description {
            font-size: 13px;
            color: var(--light-text);
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .product-materials {
            font-size: 12px;
            color: var(--light-text);
            margin-bottom: 12px;
        }

        .product-price {
            font-size: 18px;
            font-weight: 600;
            color: var(--rose-gold);
            margin-bottom: 12px;
        }

        /* Animation d'entrée */
        .product-card {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-card:nth-child(1) { animation-delay: 0.1s; }
        .product-card:nth-child(2) { animation-delay: 0.2s; }
        .product-card:nth-child(3) { animation-delay: 0.3s; }
        .product-card:nth-child(4) { animation-delay: 0.4s; }
        .product-card:nth-child(5) { animation-delay: 0.5s; }
        .product-card:nth-child(6) { animation-delay: 0.6s; }
    </style>
</head>
<body>
    <!-- Header avec navigation existante -->
    <header class="header-clean">
        <%- include('partials/navbarre.ejs') %>
    </header>

    <!-- Container principal -->
    <div class="main-container">
        <!-- Sidebar filtres FONCTIONNELS -->
        <aside class="filters-sidebar">
            <div class="filters-title">
                <i class="fas fa-filter"></i>
                Filtres
            </div>

            <form method="GET" action="/bijoux/bagues" id="filterForm">
                <!-- Filtre Matériau QUI FONCTIONNE -->
                <% if (typeof availableFilters !== 'undefined' && availableFilters && availableFilters.materials && availableFilters.materials.length > 0) { %>
                <div class="filter-group">
                    <div class="filter-toggle-btn" onclick="toggleFilterDropdown('matiere')">
                        <span>Matériau</span>
                        <i class="fas fa-chevron-down chevron"></i>
                    </div>
                    <div class="filter-menu" id="filter-matiere">
                        <div class="filter-options">
                            <% availableFilters.materials.forEach(material => { %>
                                <% if (material.count > 0) { %>
                                <div class="filter-option">
                                    <input type="checkbox" name="matiere" value="<%= material.name %>" id="mat_<%= material.name.replace(/\s+/g, '_') %>"
                                        <% if (filters && filters.matiere && Array.isArray(filters.matiere) && filters.matiere.includes(material.name)) { %>checked<% } %>
                                        <% if (filters && filters.matiere && !Array.isArray(filters.matiere) && filters.matiere === material.name) { %>checked<% } %>>
                                    <label for="mat_<%= material.name.replace(/\s+/g, '_') %>">
                                        <span><%= material.name %></span>
                                        <span class="filter-count"><%= material.count %></span>
                                    </label>
                                </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Filtre Prix AVEC STRUCTURE CORRIGÉE -->
                <div class="filter-group">
                    <div class="filter-toggle-btn" onclick="toggleFilterDropdown('prix')">
                        <span>Prix</span>
                        <i class="fas fa-chevron-down chevron"></i>
                    </div>
                    <div class="filter-menu" id="filter-prix">
                        <div class="filter-options">
                            <div class="filter-option">
                                <input type="checkbox" name="prix" value="0-20" id="price_0-20">
                                <label for="price_0-20">
                                    <span>Moins de 20€</span>
                                    <span class="filter-count">3</span>
                                </label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="prix" value="21-40" id="price_21-40">
                                <label for="price_21-40">
                                    <span>21€ - 40€</span>
                                    <span class="filter-count">5</span>
                                </label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="prix" value="41-60" id="price_41-60">
                                <label for="price_41-60">
                                    <span>41€ - 60€</span>
                                    <span class="filter-count">4</span>
                                </label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="prix" value="61-80" id="price_61-80">
                                <label for="price_61-80">
                                    <span>61€ - 80€</span>
                                    <span class="filter-count">2</span>
                                </label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="prix" value="80+" id="price_80+">
                                <label for="price_80+">
                                    <span>Plus de 80€</span>
                                    <span class="filter-count">1</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filtre Tailles QUI FONCTIONNE -->
                <% if (typeof availableFilters !== 'undefined' && availableFilters && availableFilters.sizes && availableFilters.sizes.length > 0) { %>
                <div class="filter-group">
                    <div class="filter-toggle-btn" onclick="toggleFilterDropdown('taille')">
                        <span>Taille</span>
                        <i class="fas fa-chevron-down chevron"></i>
                    </div>
                    <div class="filter-menu" id="filter-taille">
                        <div class="filter-options">
                            <% availableFilters.sizes.forEach(size => { %>
                                <% if (size.count > 0) { %>
                                <div class="filter-option">
                                    <input type="checkbox" name="taille" value="<%= size.name %>" id="size_<%= size.name.replace(/\s+/g, '_') %>"
                                        <% if (filters && filters.taille && Array.isArray(filters.taille) && filters.taille.includes(size.name)) { %>checked<% } %>
                                        <% if (filters && filters.taille && !Array.isArray(filters.taille) && filters.taille === size.name) { %>checked<% } %>>
                                    <label for="size_<%= size.name.replace(/\s+/g, '_') %>">
                                        <span><%= size.name %></span>
                                        <span class="filter-count"><%= size.count %></span>
                                    </label>
                                </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Filtre Carats QUI FONCTIONNE -->
                <% if (typeof availableFilters !== 'undefined' && availableFilters && availableFilters.carats && availableFilters.carats.length > 0) { %>
                <div class="filter-group">
                    <div class="filter-toggle-btn" onclick="toggleFilterDropdown('carat')">
                        <span>Carat</span>
                        <i class="fas fa-chevron-down chevron"></i>
                    </div>
                    <div class="filter-menu" id="filter-carat">
                        <div class="filter-options">
                            <% availableFilters.carats.forEach(carat => { %>
                                <% if (carat.count > 0) { %>
                                <div class="filter-option">
                                    <input type="checkbox" name="carat" value="<%= carat.carat %>" id="carat_<%= carat.carat %>"
                                        <% if (filters && filters.carat && Array.isArray(filters.carat) && filters.carat.includes(carat.carat.toString())) { %>checked<% } %>
                                        <% if (filters && filters.carat && !Array.isArray(filters.carat) && filters.carat === carat.carat.toString()) { %>checked<% } %>>
                                    <label for="carat_<%= carat.carat %>">
                                        <span><%= carat.carat %>k</span>
                                        <span class="filter-count"><%= carat.count %></span>
                                    </label>
                                </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Actions -->
                <div class="filter-actions">
                    <button type="submit" class="btn-filter btn-apply">
                        <i class="fas fa-check"></i> Appliquer
                    </button>
                    <button type="button" class="btn-filter btn-clear" onclick="clearFilters()">
                        <i class="fas fa-times"></i> Effacer
                    </button>
                </div>
            </form>
        </aside>

        <!-- Section produits -->
        <main class="products-section">
            <!-- Header produits -->
            <div class="products-header">
                <div>
                    <h1 class="products-title">Bagues</h1>
                    <% if (jewels && jewels.length > 0) { %>
                        <div class="products-count">
                            <%= jewels.length %> produit<%= jewels.length > 1 ? 's' : '' %>
                        </div>
                    <% } %>
                </div>
                <select name="sort" class="sort-select" onchange="document.getElementById('filterForm').submit()">
                    <option value="newest" <% if (filters && filters.sort === 'newest') { %>selected<% } %>>Nouveautés</option>
                    <option value="price_asc" <% if (filters && filters.sort === 'price_asc') { %>selected<% } %>>Prix croissant</option>
                    <option value="price_desc" <% if (filters && filters.sort === 'price_desc') { %>selected<% } %>>Prix décroissant</option>
                    <option value="popular" <% if (filters && filters.sort === 'popular') { %>selected<% } %>>Popularité</option>
                    <option value="name_asc" <% if (filters && filters.sort === 'name_asc') { %>selected<% } %>>Nom A-Z</option>
                </select>
            </div>

            <!-- Grille produits -->
            <div class="products-grid">
                <% if (jewels && jewels.length > 0) { %>
                    <% jewels.forEach((jewel, index) => { %>
                        <div class="product-card" data-jewel-id="<%= jewel.id %>" data-jewel-slug="<%= jewel.slug %>" style="animation-delay: <%= (index % 6) * 0.1 %>s">
                            <!-- Badge -->
                            <% if (jewel.discount_percentage && jewel.discount_percentage > 0) { %>
                                <div class="product-badge promo">-<%= jewel.discount_percentage %>%</div>
                            <% } else if (jewel.is_featured) { %>
                                <div class="product-badge nouveau">Nouveau</div>
                            <% } %>

                            <!-- Images avec carousel automatique -->
                            <div class="product-image-container" data-current-image="0" data-card-index="<%= index %>">
                                <% 
                                // Images depuis la DB comme dans edit-jewel.ejs
                                let allImages = [];
                                
                                // Image principale
                                if (jewel.image && jewel.image !== 'no-image.jpg') {
                                    allImages.push({
                                        id: null,
                                        image_url: jewel.image,
                                        jewel_id: jewel.id,
                                        is_main: true
                                    });
                                }
                                
                                // Images additionnelles
                                if (jewel.additionalImages && Array.isArray(jewel.additionalImages)) {
                                    jewel.additionalImages.forEach(addImg => {
                                        if (addImg.image_url && addImg.image_url !== jewel.image) {
                                            allImages.push({
                                                id: addImg.id,
                                                image_url: addImg.image_url,
                                                jewel_id: addImg.jewel_id,
                                                is_main: false
                                            });
                                        }
                                    });
                                }
                                
                                if (allImages.length === 0) {
                                    allImages.push({ 
                                        image_url: 'placeholder', 
                                        is_main: true 
                                    });
                                }
                                %>
                                
                                <div class="product-images">
                                    <% allImages.forEach((img, imgIndex) => { %>
                                        <% if (img.image_url === 'placeholder') { %>
                                            <div class="placeholder-image">
                                                <i class="fas fa-gem"></i>
                                            </div>
                                        <% } else { %>
                                            <img src="/uploads/jewels/<%= img.image_url %>" 
                                                 alt="<%= jewel.name %> - vue <%= imgIndex + 1 %>" 
                                                 class="product-image"
                                                 loading="lazy"
                                                 onerror="this.style.display='none';">
                                        <% } %>
                                    <% }) %>
                                </div>
                                
                                <!-- Flèches si plus d'une image -->
                                <% if (allImages.length > 1 && allImages[0].image_url !== 'placeholder') { %>
                                <button class="image-nav-arrows nav-prev" onclick="event.stopPropagation(); navigateImage(this, -1)">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <button class="image-nav-arrows nav-next" onclick="event.stopPropagation(); navigateImage(this, 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                                
                                <div class="image-indicators">
                                    <% allImages.forEach((img, dotIndex) => { %>
                                        <span class="indicator-dot <%= dotIndex === 0 ? 'active' : '' %>" 
                                              onclick="event.stopPropagation(); goToImage(this, <%= dotIndex %>)"></span>
                                    <% }) %>
                                </div>
                                <% } %>
                            </div>

                            <!-- Info produit -->
                            <div class="product-info">
                                <h3 class="product-name"><%= jewel.name %></h3>
                                <p class="product-description"><%= jewel.description || 'Magnifique bague de notre collection' %></p>
                                
                                <% if (jewel.matiere || (jewel.tailles && jewel.tailles.length > 0) || jewel.carat) { %>
                                <div class="product-materials">
                                    <% if (jewel.matiere) { %>
                                        <%= jewel.matiere %>
                                    <% } %>
                                    <% if (jewel.tailles && jewel.tailles.length > 0) { %>
                                        <% if (jewel.matiere) { %> · <% } %>
                                        Tailles: <% jewel.tailles.forEach((taille, index) => { %>
                                            <%= typeof taille === 'object' ? (taille.taille || taille) : taille %><% if (index < jewel.tailles.length - 1) { %>, <% } %>
                                        <% }); %>
                                    <% } %>
                                    <% if (jewel.carat) { %>
                                        <% if (jewel.matiere || (jewel.tailles && jewel.tailles.length > 0)) { %> · <% } %>
                                        <%= jewel.carat %>k
                                    <% } %>
                                </div>
                                <% } %>
                                
                                <div class="product-price">
                                    <% if (jewel.discount_percentage && jewel.discount_percentage > 0) { %>
                                        <%= (jewel.price_ttc * (1 - jewel.discount_percentage / 100)).toFixed(2) %>€
                                        <del style="font-size: 14px; color: #999; margin-left: 8px;"><%= Number(jewel.price_ttc).toFixed(2) %>€</del>
                                    <% } else { %>
                                        <%= Number(jewel.price_ttc).toFixed(2) %>€
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="grid-column: 1 / -1; text-align: center; padding: 60px 20px; color: var(--light-text);">
                        <h3 style="font-size: 1.5rem; margin-bottom: 15px; color: var(--rose-gold);">Aucune bague trouvée</h3>
                        <p>Essayez de modifier vos filtres ou effacez-les pour voir tous les produits.</p>
                        <button onclick="clearFilters()" style="margin-top: 20px; padding: 12px 24px; background: var(--rose-gold); color: white; border: none; border-radius: 8px; cursor: pointer;">
                            Voir tous les produits
                        </button>
                    </div>
                <% } %>
            </div>

            <!-- Pagination -->
            <% if (pagination && pagination.totalPages > 1) { %>
                <div style="display: flex; justify-content: center; align-items: center; gap: 10px; margin-top: 50px;">
                    <% if (pagination.hasPrevPage) { %>
                        <a href="?page=<%= pagination.prevPage %>" style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--border-light); text-decoration: none; color: var(--dark-text); font-size: 14px; font-weight: 600; transition: all 0.3s ease; background: white;">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                    
                    <% 
                    const currentPage = pagination.currentPage;
                    const totalPages = pagination.totalPages;
                    let startPage = Math.max(1, currentPage - 2);
                    let endPage = Math.min(totalPages, currentPage + 2);
                    %>
                    
                    <% if (startPage > 1) { %>
                        <a href="?page=1" style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--border-light); text-decoration: none; color: var(--dark-text); font-size: 14px; font-weight: 600; transition: all 0.3s ease; background: white;">1</a>
                        <% if (startPage > 2) { %>
                            <span style="color: var(--light-text); padding: 0 10px;">...</span>
                        <% } %>
                    <% } %>
                    
                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <% if (i === currentPage) { %>
                            <span style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark)); color: white; border: 2px solid var(--rose-gold); font-size: 14px; font-weight: 600; box-shadow: 0 4px 15px rgba(183, 110, 121, 0.3);"><%= i %></span>
                        <% } else { %>
                            <a href="?page=<%= i %>" style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--border-light); text-decoration: none; color: var(--dark-text); font-size: 14px; font-weight: 600; transition: all 0.3s ease; background: white;"><%= i %></a>
                        <% } %>
                    <% } %>
                    
                    <% if (endPage < totalPages) { %>
                        <% if (endPage < totalPages - 1) { %>
                            <span style="color: var(--light-text); padding: 0 10px;">...</span>
                        <% } %>
                        <a href="?page=<%= totalPages %>" style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--border-light); text-decoration: none; color: var(--dark-text); font-size: 14px; font-weight: 600; transition: all 0.3s ease; background: white;"><%= totalPages %></a>
                    <% } %>
                    
                    <% if (pagination.hasNextPage) { %>
                        <a href="?page=<%= pagination.nextPage %>" style="display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--border-light); text-decoration: none; color: var(--dark-text); font-size: 14px; font-weight: 600; transition: all 0.3s ease; background: white;">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </main>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- JavaScript SIMPLE et FONCTIONNEL -->
    <script>
        console.log('🎯 Initialisation du template bagues CORRIGÉ');

        // ===== FONCTION SUPER SIMPLE POUR TOGGLE =====
        function toggleFilterDropdown(filterType) {
            console.log('🔄 Click sur:', filterType);
            
            const menu = document.getElementById('filter-' + filterType);
            
            if (!menu) {
                console.error('❌ Menu non trouvé:', 'filter-' + filterType);
                return;
            }
            
            console.log('✅ Menu trouvé:', menu);
            
            // Fermer tous les autres
            document.querySelectorAll('.filter-menu').forEach(m => {
                if (m !== menu) {
                    m.classList.remove('show');
                    m.style.display = 'none';
                }
            });
            
            // Toggle celui-ci
            if (menu.classList.contains('show')) {
                console.log('📄 Fermeture');
                menu.classList.remove('show');
                menu.style.display = 'none';
            } else {
                console.log('📋 Ouverture');
                menu.classList.add('show');
                menu.style.display = 'block';
                menu.style.opacity = '1';
                menu.style.visibility = 'visible';
                menu.style.position = 'absolute';
                menu.style.top = '100%';
                menu.style.left = '0';
                menu.style.right = '0';
                menu.style.zIndex = '9999';
                menu.style.background = 'white';
                menu.style.border = '1px solid #e8c2c8';
                menu.style.borderRadius = '0 0 8px 8px';
                menu.style.boxShadow = '0 4px 15px rgba(0, 0, 0, 0.1)';
            }
            
            console.log('🔍 Classes finales:', menu.className);
            console.log('🔍 Style final:', menu.style.cssText);
        }

        // ===== FERMER LES MENUS AU CLIC EXTÉRIEUR =====
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.filter-group')) {
                document.querySelectorAll('.filter-menu').forEach(menu => {
                    menu.classList.remove('show');
                    menu.previousElementSibling.classList.remove('open');
                });
            }
        });

        // ===== GESTION DES CHECKBOXES =====
        let filterTimeout;
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                console.log('☑️ Checkbox changée:', this.name, this.value, this.checked);
                
                // Mettre à jour l'apparence
                const filterOption = this.closest('.filter-option');
                if (this.checked) {
                    filterOption.classList.add('selected');
                } else {
                    filterOption.classList.remove('selected');
                }
                
                // Auto-submit avec délai
                clearTimeout(filterTimeout);
                filterTimeout = setTimeout(() => {
                    console.log('📤 Soumission du formulaire');
                    document.getElementById('filterForm').submit();
                }, 1500);
            });
        });

        // ===== FONCTION CLEAR FILTERS =====
        function clearFilters() {
            console.log('🧹 Effacement des filtres');
            
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
                const filterOption = checkbox.closest('.filter-option');
                filterOption.classList.remove('selected');
            });
            
            document.querySelector('select[name="sort"]').value = 'newest';
            document.getElementById('filterForm').submit();
        }

        // ===== CAROUSEL AUTOMATIQUE SIMPLE =====
        class SimpleCarousel {
            constructor() {
                this.carousels = new Map();
                this.intervals = new Map();
                this.init();
            }

            init() {
                console.log('🎠 Initialisation carousel');
                
                setTimeout(() => {
                    document.querySelectorAll('.product-image-container').forEach((container, index) => {
                        const images = container.querySelectorAll('.product-image, .placeholder-image');
                        
                        if (images.length > 1) {
                            const carouselId = 'carousel_' + index;
                            
                            this.carousels.set(carouselId, {
                                container,
                                imagesContainer: container.querySelector('.product-images'),
                                images: Array.from(images),
                                indicators: container.querySelectorAll('.indicator-dot'),
                                currentIndex: 0,
                                totalImages: images.length
                            });

                            // Démarrer l'auto-play avec délai
                            setTimeout(() => {
                                this.startAutoPlay(carouselId);
                            }, index * 2000);

                            console.log(`✅ Carousel ${carouselId}: ${images.length} images`);
                        }
                    });
                }, 1000);
            }

            startAutoPlay(carouselId) {
                const interval = setInterval(() => {
                    this.nextImage(carouselId);
                }, 4000);
                
                this.intervals.set(carouselId, interval);
            }

            nextImage(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = (carousel.currentIndex + 1) % carousel.totalImages;
                this.updateDisplay(carouselId);
            }

            prevImage(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = (carousel.currentIndex - 1 + carousel.totalImages) % carousel.totalImages;
                this.updateDisplay(carouselId);
            }

            goToImage(carouselId, index) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.currentIndex = index;
                this.updateDisplay(carouselId);
            }

            updateDisplay(carouselId) {
                const carousel = this.carousels.get(carouselId);
                if (!carousel) return;

                carousel.imagesContainer.style.transform = `translateX(-${carousel.currentIndex * 100}%)`;
                
                carousel.indicators.forEach((indicator, index) => {
                    indicator.classList.toggle('active', index === carousel.currentIndex);
                });
            }

            getCarouselIdByElement(element) {
                const container = element.closest('.product-image-container');
                const containers = Array.from(document.querySelectorAll('.product-image-container'));
                const index = containers.indexOf(container);
                return 'carousel_' + index;
            }
        }

        // ===== FONCTIONS GLOBALES POUR LES FLÈCHES =====
        function navigateImage(button, direction) {
            const carouselId = window.simpleCarousel.getCarouselIdByElement(button);
            
            if (direction === 1) {
                window.simpleCarousel.nextImage(carouselId);
            } else {
                window.simpleCarousel.prevImage(carouselId);
            }
        }

        function goToImage(dotElement, index) {
            const carouselId = window.simpleCarousel.getCarouselIdByElement(dotElement);
            window.simpleCarousel.goToImage(carouselId, index);
        }

        // ===== INITIALISATION =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 DOM chargé, initialisation...');
            
            // Marquer les filtres sélectionnés au chargement
            document.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
                const filterOption = checkbox.closest('.filter-option');
                filterOption.classList.add('selected');
            });
            
            // Initialiser le carousel
            window.simpleCarousel = new SimpleCarousel();
            
            // Navigation par clic sur carte
            document.querySelectorAll('.product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.closest('.image-nav-arrows') && !e.target.closest('.indicator-dot')) {
                        const jewelSlug = this.dataset.jewelSlug;
                        const jewelId = this.dataset.jewelId;
                        
                        if (jewelSlug) {
                            window.location.href = '/bijoux/' + jewelSlug;
                        } else if (jewelId) {
                            window.location.href = '/bijoux/detail/' + jewelId;
                        }
                    }
                });
            });
            
            // Test des dropdowns avec plus de debug
            setTimeout(() => {
                console.log('🧪 Test des dropdowns...');
                
                // Lister tous les menus trouvés
                const menus = document.querySelectorAll('.filter-menu');
                console.log('📋 Menus trouvés:', menus.length);
                menus.forEach((menu, index) => {
                    console.log(`Menu ${index}:`, menu.id, menu);
                });
                
                // Lister tous les boutons
                const buttons = document.querySelectorAll('.filter-toggle-btn');
                console.log('🔘 Boutons trouvés:', buttons.length);
                buttons.forEach((btn, index) => {
                    console.log(`Bouton ${index}:`, btn.textContent.trim(), btn);
                });
                
                // Test automatique d'ouverture
                const testMenu = document.getElementById('filter-prix');
                if (testMenu) {
                    console.log('✅ Menu prix trouvé, test d\'ouverture...');
                    toggleFilterDropdown('prix');
                    
                    setTimeout(() => {
                        console.log('🔍 État après test:', {
                            hasShowClass: testMenu.classList.contains('show'),
                            style: testMenu.style.cssText,
                            display: getComputedStyle(testMenu).display,
                            visibility: getComputedStyle(testMenu).visibility
                        });
                    }, 500);
                } else {
                    console.log('❌ Menu prix non trouvé');
                }
            }, 1000);
            
            console.log('✅ Initialisation terminée');
        });

        // Clean up
        window.addEventListener('beforeunload', () => {
            if (window.simpleCarousel) {
                window.simpleCarousel.intervals.forEach(interval => {
                    clearInterval(interval);
                });
            }
        });
    </script>
