<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Bagues - Éclat Doré' %></title>
    <link rel="stylesheet" href="/css/bijoux.css">
    <link rel="stylesheet" href="/css/bagues.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --rose-gold: #b76e79;
            --rose-gold-light: #e8c2c8;
            --rose-gold-dark: #7d4b53;
            --cream: #fff8f0;
            --dark-text: #3a3a3a;
            --light-text: #666;
            --border-light: #e0e0e0;
            --white-soft: #fafafa;
            --shadow-soft: 0 4px 15px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* ================================
           BANNIÈRES PROMOTIONNELLES
           ================================ */
        .promo-banner, .secondary-banner {
            color: white;
            text-align: center;
            padding: 12px 0;
            font-weight: 600;
            font-size: 14px;
            position: relative;
            overflow: hidden;
            margin-bottom: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 45px;
        }

        .promo-banner {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            animation: pulse 2s infinite;
            box-shadow: 0 4px 15px rgba(238, 90, 36, 0.3);
        }

        .secondary-banner {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        /* ================================
           SYSTÈME DE FILTRES AVEC MENUS DÉPLIANTS
           ================================ */
        .filter-controls {
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .filter-dropdown {
            position: relative;
        }

        .filter-toggle {
            width: 100%;
            padding: 12px 16px;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            border: 2px solid var(--rose-gold-light);
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            color: var(--dark-text);
            transition: all 0.3s ease;
        }

        .filter-toggle:hover {
            border-color: var(--rose-gold);
            background: linear-gradient(135deg, var(--rose-gold-light), rgba(232, 194, 200, 0.3));
        }

        .filter-toggle.active {
            border-color: var(--rose-gold);
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
        }

        .filter-toggle i {
            transition: transform 0.3s ease;
        }

        .filter-toggle.active i {
            transform: rotate(180deg);
        }

        .filter-menu {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid var(--rose-gold-light);
            border-radius: 8px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            z-index: 100;
            max-height: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            margin-top: 5px;
        }

        .filter-menu.active {
            max-height: 300px;
            overflow-y: auto;
        }

        .filter-menu::-webkit-scrollbar {
            width: 4px;
        }

        .filter-menu::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .filter-menu::-webkit-scrollbar-thumb {
            background: var(--rose-gold-light);
            border-radius: 4px;
        }

        .filter-option {
            padding: 10px 16px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .filter-option:hover {
            background: var(--rose-gold-light);
        }

        .filter-option:last-child {
            border-bottom: none;
        }

        .filter-option input[type="checkbox"] {
            margin-right: 10px;
            transform: scale(1.2);
            accent-color: var(--rose-gold);
        }

        .filter-option label {
            flex: 1;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
            color: var(--dark-text);
        }

        .filter-count {
            background: var(--rose-gold);
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            min-width: 20px;
            text-align: center;
        }

        /* Section tri */
        .sort-section {
            display: flex;
            align-items: center;
            gap: 15px;
            padding-top: 20px;
            border-top: 1px solid var(--rose-gold-light);
        }

        .sort-label {
            font-weight: 600;
            color: var(--rose-gold-dark);
        }

        .sort-select {
            padding: 10px 15px;
            border: 2px solid var(--rose-gold-light);
            border-radius: 8px;
            background: white;
            color: var(--dark-text);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 200px;
        }

        .sort-select:focus, .sort-select:hover {
            border-color: var(--rose-gold);
            outline: none;
        }

        .filter-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-apply-filters, .btn-clear-filters {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .btn-apply-filters {
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
        }

        .btn-apply-filters:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(183, 110, 121, 0.3);
        }

        .btn-clear-filters {
            background: #6c757d;
            color: white;
        }

        .btn-clear-filters:hover {
            background: #5a6268;
            transform: translateY(-1px);
        }

        /* ================================
           BOUTON VOIR DÉTAILS - COULEUR FOOTER
           ================================ */
        .view-jewel-btn {
            background: linear-gradient(135deg, #7d4b53, #6d3f47);
            color: white;
            box-shadow: 0 4px 15px rgba(125, 75, 83, 0.3);
        }

        .view-jewel-btn:hover {
            background: linear-gradient(135deg, #6d3f47, #5d3439);
            box-shadow: 0 6px 20px rgba(125, 75, 83, 0.4);
            color: white;
            text-decoration: none;
        }

        /* ================================
           GRILLE PRODUITS RESPONSIVE OPTIMISÉE
           ================================ */
        .products-grid {
            display: grid;
            gap: 30px;
            margin-bottom: 50px;
        }

        /* Desktop : 3 colonnes */
        @media (min-width: 992px) {
            .products-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* Tablettes : 2 colonnes */
        @media (min-width: 769px) and (max-width: 991px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Mobile : 2 colonnes avec optimisations */
        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
            }
        }

        /* ================================
           CARTES PRODUITS OPTIMISÉES MOBILE
           ================================ */
        .product-card {
            display: flex;
            flex-direction: column;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow-soft);
            transition: all 0.4s ease;
            position: relative;
            border: 1px solid var(--border-light);
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
            border-color: var(--rose-gold-light);
        }

        .product-img {
            width: 100%;
            height: 280px;
            overflow: hidden;
            background: linear-gradient(135deg, var(--cream), var(--white-soft));
            position: relative;
        }

        .product-img img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            transition: transform 0.4s ease;
        }

        .product-card:hover .product-img img {
            transform: scale(1.05);
        }

        .placeholder-image {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--rose-gold-light), var(--cream));
            color: var(--rose-gold);
            font-size: 3rem;
        }

        .product-info {
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .product-name {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--dark-text);
            line-height: 1.4;
        }

        .product-desc {
            font-size: 0.85rem;
            color: var(--light-text);
            margin-bottom: 15px;
            flex-grow: 1;
            line-height: 1.5;
        }

        /* Système de prix */
        .product-price-container {
            margin-bottom: 15px;
        }
        
        .price-current {
            font-size: 1.2rem;
            font-weight: 700;
            color: #e74c3c;
        }
        
        .price-original {
            font-size: 1rem;
            color: #7f8c8d;
            text-decoration: line-through;
            margin-top: 3px;
        }
        
        .price-single {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--rose-gold);
        }

        /* Actions produits SANS panier - optimisé mobile */
        .product-actions {
            display: flex;
            gap: 8px;
        }

        .product-btn {
            flex: 1;
            padding: 12px 16px;
            border: none;
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .product-btn:hover {
            transform: translateY(-2px);
        }

        .view-jewel-btn {
            background: linear-gradient(135deg, #8e44ad, #9b59b6);
            color: white;
            box-shadow: 0 4px 15px rgba(142, 68, 173, 0.3);
        }

        .view-jewel-btn:hover {
            background: linear-gradient(135deg, #7d3c98, #8e44ad);
            box-shadow: 0 6px 20px rgba(142, 68, 173, 0.4);
            color: white;
            text-decoration: none;
        }

        /* ================================
           SYSTÈME DE SWIPE POUR IMAGES
           ================================ */
        .product-img {
            width: 100%;
            height: 280px;
            overflow: hidden;
            background: linear-gradient(135deg, var(--cream), var(--white-soft));
            position: relative;
            cursor: grab;
        }

        .product-img:active {
            cursor: grabbing;
        }

        .product-img img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            transition: transform 0.4s ease;
            user-select: none;
            -webkit-user-drag: none;
        }

        .product-card:hover .product-img img {
            transform: scale(1.05);
        }

        /* Indicateurs de swipe */
        .swipe-indicators {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 6px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card:hover .swipe-indicators {
            opacity: 1;
        }

        .swipe-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.6);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .swipe-dot.active {
            background: var(--rose-gold);
            transform: scale(1.2);
        }

        /* Instructions de swipe */
        .swipe-hint {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 4px 8px;
            border-radius: 15px;
            font-size: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }

        .product-card:hover .swipe-hint {
            opacity: 1;
        }
        .product-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            z-index: 5;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }
        
        .product-badge.promo {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            animation: pulse 2s infinite;
        }
        
        .product-badge.nouveau {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
        }
        
        .product-badge.bestseller, .product-badge.populaire {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            color: white;
        }

        .product-badge.derniere-chance {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
            animation: urgentPulse 1.5s infinite;
        }

        @keyframes urgentPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        /* ================================
           RESPONSIVE DESIGN OPTIMISÉ MOBILE
           ================================ */
        @media (max-width: 768px) {
            .promo-banner, .secondary-banner {
                font-size: 12px;
                padding: 10px 5px;
                min-height: 40px;
            }
            
            .filter-controls {
                padding: 15px;
                margin-bottom: 25px;
            }
            
            .filter-row {
                flex-direction: column;
                gap: 15px;
            }
            
            .filter-section {
                min-width: unset;
            }
            
            .filter-group {
                margin-bottom: 15px;
            }
            
            .filter-group h4 {
                font-size: 14px;
                margin-bottom: 10px;
            }
            
            .sort-section {
                flex-direction: column;
                gap: 10px;
                align-items: flex-start;
            }
            
            .filter-actions {
                flex-direction: column;
            }
            
            .btn-apply-filters, .btn-clear-filters {
                width: 100%;
                padding: 12px;
                font-size: 14px;
            }
            
            /* Images plus grandes sur mobile */
            .product-img {
                height: 220px; /* Augmenté de 200px à 220px */
            }
            
            .product-info {
                padding: 15px;
            }
            
            .product-name {
                font-size: 1rem;
            }
            
            .product-desc {
                font-size: 0.8rem;
                margin-bottom: 12px;
            }
            
            /* Boutons plus petits et élégants sur mobile */
            .product-btn {
                padding: 10px 12px; /* Réduit de 12px 16px */
                font-size: 0.75rem; /* Réduit de 0.85rem */
                border-radius: 20px; /* Réduit de 25px */
                font-weight: 500;
            }
            
            .product-actions {
                gap: 6px;
            }
            
            .product-badge {
                font-size: 9px;
                padding: 4px 8px;
                top: 8px;
                left: 8px;
            }
        }

        @media (max-width: 480px) {
            .products-grid {
                gap: 12px;
            }
            
            /* Images encore plus grandes sur très petits écrans */
            .product-img {
                height: 200px;
            }
            
            .product-info {
                padding: 12px;
            }
            
            .product-btn {
                padding: 8px 10px;
                font-size: 0.7rem;
            }
            
            .filter-controls {
                padding: 12px;
            }
        }

        /* ================================
           PAGINATION
           ================================ */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 50px;
        }

        .page-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 2px solid var(--border-light);
            text-decoration: none;
            color: var(--dark-text);
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            background: white;
        }

        .page-link:hover, .page-link.active {
            background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
            color: white;
            border-color: var(--rose-gold);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(183, 110, 121, 0.3);
        }

        /* ================================
           ÉTAT VIDE
           ================================ */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--light-text);
        }

        .empty-state h3 {
            font-size: 1.6rem;
            margin-bottom: 15px;
            color: var(--rose-gold);
        }

        .empty-state p {
            font-size: 1rem;
        }

        /* ================================
           UTILITAIRES
           ================================ */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .category-intro {
            padding: 50px 0 30px;
        }

        .intro-content {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 40px;
        }

        .intro-content h3 {
            font-size: 2rem;
            color: var(--rose-gold);
            margin-bottom: 20px;
            font-weight: 600;
        }

        .intro-content p {
            font-size: 1rem;
            color: var(--dark-text);
            line-height: 1.7;
        }

        .products {
            padding: 30px 0 60px;
        }

        .page-banner {
            height: 350px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/images/bagues-banner.jpg') center/cover;
        }

        .banner-content h2 {
            font-size: 2.8rem;
            font-weight: 300;
            letter-spacing: 2px;
            margin-bottom: 15px;
        }

        .banner-content p {
            font-size: 1.2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        @media (max-width: 768px) {
            .page-banner {
                height: 250px;
            }
            
            .banner-content h2 {
                font-size: 2rem;
            }
            
            .banner-content p {
                font-size: 1rem;
            }
            
            .category-intro {
                padding: 30px 0 20px;
            }
            
            .intro-content h3 {
                font-size: 1.6rem;
            }
            
            .intro-content p {
                font-size: 0.9rem;
            }
            
            .pagination {
                margin-top: 30px;
            }
            
            .page-link {
                width: 40px;
                height: 40px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <!-- Bannières promotionnelles -->
    <div class="promo-banner">
        <div class="promo-text">
            <i class="fas fa-fire"></i>
            PROMOTIONS EXCEPTIONNELLES ! Jusqu'à -50% sur une sélection de bijoux
            <i class="fas fa-fire"></i>
        </div>
    </div>

    <div class="secondary-banner">
        <div class="secondary-text">
            <i class="fas fa-shipping-fast"></i>
            Livraison gratuite dès 150€ d'achat
        </div>
    </div>

    <header>
        <%- include('partials/navbarre.ejs') %>
        <div class="overlay" id="overlay"></div>
    </header>

    <section class="page-banner">
        <div class="banner-content">
            <h2><%= pageTitle || 'Nos Bagues' %></h2>
            <p>Des créations délicates pour sublimer vos mains</p>
        </div>
    </section>

    <section class="category-intro">
        <div class="container">
            <div class="intro-content">
                <h3>L'élégance au bout des doigts</h3>
                <p>Découvrez notre collection de bagues en rose gold et or, ornées de pierres précieuses soigneusement sélectionnées. Chaque pièce est conçue pour magnifier votre style et apporter une touche d'éclat à vos tenues quotidiennes ou vos occasions spéciales.</p>
            </div>
           
            <!-- Système de filtres avec menus dépliants -->
            <div class="filter-controls">
                <form method="GET" action="/bijoux/bagues" id="filterForm">
                    <div class="filters-grid">
                        <!-- Filtre Matériaux -->
                        <div class="filter-dropdown">
                            <div class="filter-toggle" onclick="toggleFilterMenu(this)">
                                <span><i class="fas fa-gem"></i> Matériau</span>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <div class="filter-menu">
                                <% 
                                // Matériaux par défaut
                                const defaultMaterials = [
                                    { name: 'Or rose', count: 1 },
                                    { name: 'Or', count: 0 },
                                    { name: 'Or jaune', count: 1 },
                                    { name: 'Argent', count: 0 },
                                    { name: 'Platine', count: 0 }
                                ];
                                
                                const materialsToShow = (availableFilters && availableFilters.materials && availableFilters.materials.length > 0) 
                                    ? availableFilters.materials 
                                    : defaultMaterials;
                                %>
                                <% materialsToShow.forEach(material => { %>
                                    <% if (material.count > 0) { %>
                                    <div class="filter-option">
                                        <input type="checkbox" name="matiere" value="<%= material.name %>" id="mat_<%= material.name.replace(/\s+/g, '_') %>"
                                            <%= (filters.matiere && filters.matiere.includes(material.name)) ? 'checked' : '' %>>
                                        <label for="mat_<%= material.name.replace(/\s+/g, '_') %>">
                                            <span><%= material.name %></span>
                                            <span class="filter-count">(<%= material.count %>)</span>
                                        </label>
                                    </div>
                                    <% } %>
                                <% }); %>
                            </div>
                        </div>

                        <!-- Filtre Prix -->
                        <div class="filter-dropdown">
                            <div class="filter-toggle" onclick="toggleFilterMenu(this)">
                                <span><i class="fas fa-euro-sign"></i> Prix</span>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <div class="filter-menu">
                                <% 
                                const priceRanges = [
                                    { value: '0-20', label: 'Moins de 20€' },
                                    { value: '21-40', label: '21€ - 40€' },
