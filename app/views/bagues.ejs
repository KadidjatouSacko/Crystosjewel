    <script>
        // Variables globales pour la suppression
        let jewelToDelete = null;

        // Fonction pour confirmer la suppression
        function confirmDelete(slug, name) {
            jewelToDelete = slug;
            document.getElementById('deleteJewelName').textContent = name;
            document.getElementById('deleteModal').style.display = 'flex';
        }

        // Fonction pour fermer la modal
        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
            jewelToDelete = null;
        }

        // Fonction pour effectuer la suppression
        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            if (!jewelToDelete) return;

            try {
                const response = await fetch(`/admin/jewels/${jewelToDelete}/delete`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('Bijou supprim√© avec succ√®s', 'Suppression', true);
