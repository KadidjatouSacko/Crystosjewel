    <script>
        // ================================
        // SYSTÈME DE SWIPE POUR IMAGES
        // ================================
        class ImageSwiper {
            constructor(container) {
                this.container = container;
                this.images = [
                    container.querySelector('img').src,
                    // Simuler d'autres images pour la démo
                    container.querySelector('img').src + '?view=2',
                    container.querySelector('img').src + '?view=3'
                ];
                this.currentIndex = 0;
                this.startX = 0;
                this.isDragging = false;
                
                this.init();
            }
            
            init() {
                const img = this.container.querySelector('img');
                if (!img) return;
                
                // Événements tactiles
                this.container.addEventListener('touchstart', this.handleTouchStart.bind(this), { passive: true });
                this.container.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: false });
                this.container.addEventListener('touchend', this.handleTouchEnd.bind(this));
                
                // Événements souris
                this.container.addEventListener('mousedown', this.handleMouseDown.bind(this));
                this.container.addEventListener('mousemove', this.handleMouseMove.bind(this));
                this.container.addEventListener('mouseup', this.handleMouseUp.bind(this));
                this.container.addEventListener('mouseleave', this.handleMouseUp.bind(this));
                
                // Clic sur les indicateurs
                const dots = this.container.querySelectorAll('.swipe-dot');
                dots.forEach((dot, index) => {
                    dot.addEventListener('click', () => this.goToSlide(index));
                });
                
                this.updateIndicators();
            }
            
            handleTouchStart(e) {
                this.startX = e.touches[0].clientX;
                this.isDragging = true;
            }
            
            handleTouchMove(e) {
                if (!this.isDragging) return;
                e.preventDefault();
                
                const currentX = e.touches[0].clientX;
                const diff = this.startX - currentX;
                
                // Ajouter un effet visuel pendant le swipe
                const img = this.container.querySelector('img');
                if (img) {
                    img.style.transform = `translateX(${-diff * 0.5}px) scale(1.02)`;
                }
            }
            
            handleTouchEnd(e) {
                if (!this.isDragging) return;
                this.isDragging = false;
                
                const endX = e.changedTouches[0].clientX;
                const diff = this.startX - endX;
                
                // Reset de l'image
                const img = this.container.querySelector('img');
                if (img) {
                    img.style.transform = '';
                }
                
                if (Math.abs(diff) > 50) { // Seuil de swipe
                    if (diff > 0) {
                        this.nextImage();
                    } else {
                        this.prevImage();
                    }
                }
            }
            
            handleMouseDown(e) {
                this.startX = e.clientX;
                this.isDragging = true;
                this.container.style.cursor = 'grabbing';
            }
            
            handleMouseMove(e) {
                if (!this.isDragging) return;
                
                const currentX = e.clientX;
                const diff = this.startX - currentX;
                
                const img = this.container.querySelector('img');
                if (img) {
                    img.style.transform = `translateX(${-diff * 0.3}px) scale(1.02)`;
                }
            }
            
            handleMouseUp(e) {
                if (!this.isDragging) return;
                this.isDragging = false;
                this.container.style.cursor = 'grab';
                
                const endX = e.clientX;
                const diff = this.startX - endX;
                
                const img = this.container.querySelector('img');
                if (img) {
                    img.style.transform = '';
                }
                
                if (Math.abs(diff) > 30) {
                    if (diff > 0) {
                        this.nextImage();
                    } else {
                        this.prevImage();
                    }
                }
            }
            
            nextImage() {
                this.currentIndex = (this.currentIndex + 1) % this.images.length;
                this.updateImage();
                this.updateIndicators();
                this.showSwipeEffect('next');
            }
            
            prevImage() {
                this.currentIndex = (this.currentIndex - 1 + this.images.length) % this.images.length;
                this.updateImage();
                this.updateIndicators();
                this.showSwipeEffect('prev');
            }
            
            goToSlide(index) {
                this.currentIndex = index;
                this.updateImage();
                this.updateIndicators();
                this.showSwipeEffect('direct');
            }
            
            updateImage() {
                const img = this.container.querySelector('img');
                if (img) {
                    // Effet de transition fluide
                    img.style.opacity = '0.7';
                    img.style.transform = 'scale(0.95)';
                    
                    setTimeout(() => {
                        img.src = this.images[this.currentIndex];
                        img.style.opacity = '1';
                        img.style.transform = 'scale(1)';
                    }, 150);
                }
            }
            
            updateIndicators() {
                const dots = this.container.querySelectorAll('.swipe-dot');
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === this.currentIndex);
                });
            }
            
            showSwipeEffect(direction) {
                // Ajouter un effet visuel pour indiquer le changement
                const card = this.container.closest('.product-card');
                if (card) {
                    card.style.transform = 'scale(1.02)';
                    setTimeout(() => {
                        card.style.transform = '';
                    }, 200);
                }
            }
        }

        // ================================
        // FONCTIONS FILTRES
        // ================================
        function clearFilters() {
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
            });
            document.querySelector('select[name="sort"]').value = 'newest';
            document.getElementById('filterForm').submit();
        }

        // Auto-submit sur changement de checkbox avec délai
        let filterTimeout;
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                clearTimeout(filterTimeout);
                filterTimeout = setTimeout(() => {
                    document.getElementById('filterForm').submit();
                }, 500); // Délai plus long pour permettre plusieurs sélections
            });
        });

        // ================================
        // ANIMATIONS ET EFFETS
        // ================================
        
        // Animation des cartes au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -30px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les animations des cartes
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
                observer.observe(card);
            });

            // Initialiser le système de swipe pour chaque image
            const imageContainers = document.querySelectorAll('.product-img');
            imageContainers.forEach(container => {
                new ImageSwiper(container);
            });

            // Effet de hover amélioré sur les cartes
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });

        // ================================
        // AMÉLIORATIONS UX
        // ================================
        
        // Smooth scroll pour la pagination
        document.querySelectorAll('.page-link').forEach(link => {
            link.addEventListener('click', function(e) {
                // Scroll vers le haut avant le changement de page
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        });

        // Feedback visuel sur les filtres
        document.querySelectorAll('.filter-item').forEach(item => {
            item.addEventListener('click', function() {
                const checkbox = this.querySelector('input[type="checkbox"]');
                if (checkbox) {
                    checkbox.checked = !checkbox.checked;
                    
                    // Effet visuel
                    this.style.background = checkbox.checked 
                        ? 'linear-gradient(135deg, var(--rose-gold-light), rgba(232, 194, 200, 0.5))'
                        : '';
                    
                    // Déclencher le changement
                    checkbox.dispatchEvent(new Event('change'));
                }
            });
        });

        // Améliorer l'accessibilité
        document.querySelectorAll('.product-img').forEach(container => {
            container.setAttribute('role', 'button');
            container.setAttribute('tabindex', '0');
            container.setAttribute('aria-label', 'Faire glisser pour voir plus d\'images');
            
            // Navigation au clavier
            container.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowLeft') {
                    const swiper = container.swiper;
                    if (swiper) swiper.prevImage();
                } else if (e.key === 'ArrowRight') {
                    const swiper = container.swiper;
                    if (swiper) swiper.nextImage();
                }
            });
        });

        console.log('🎉 Système de bijoux avec swipe initialisé !');
