    text-align: center;
}

/* Ic√¥nes navigation droite */
.client-icons {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 15px;
    align-items: center;
}

.client-icon {
    color: var(--dark-text);
    text-decoration: none;
    padding: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
    transition: var(--transition);
    border: 2px solid rgba(255, 255, 255, 0.5);
    position: relative;
}

.client-icon:hover {
    color: white;
    background: var(--rose-gold);
    transform: translateY(-3px);
    text-decoration: none;
}

/* User dropdown */
.user-dropdown {
    position: relative;
}

.user-dropdown-toggle {
    background: rgba(255, 255, 255, 0.4);
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    padding: 12px;
    color: var(--dark-text);
    cursor: pointer;
    transition: var(--transition);
    backdrop-filter: blur(10px);
}

.user-dropdown-toggle:hover {
    background: var(--rose-gold);
    color: white;
    transform: scale(1.1);
}

.user-dropdown-menu {
    position: absolute;
    top: calc(100% + 15px);
    right: 0;
    background: rgba(255, 255, 255, 0.98);
