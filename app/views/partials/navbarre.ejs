    min-width: 350px;
    max-height: 70vh;
    padding: 25px 0;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-15px);
    transition: all 0.4s ease;
    z-index: 99999;
    border: 2px solid var(--rose-gold-light);
    overflow-y: auto;
    
    /* Scrollbar */
    scrollbar-width: thin;
    scrollbar-color: var(--rose-gold) rgba(255, 255, 255, 0.3);
}

.user-dropdown-menu::-webkit-scrollbar {
