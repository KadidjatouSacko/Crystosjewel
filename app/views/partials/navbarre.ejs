// ===================================================================
// DROPDOWNS ADMIN HORIZONTAUX
// ===================================================================
function setupAdminDropdowns() {
    const adminNavItems = document.querySelectorAll('.admin-nav-item');
    
    adminNavItems.forEach(item => {
        const link = item.querySelector('.admin-nav-link[data-dropdown]');
        if (!link) return;
        
        const dropdownId = link.getAttribute('data-dropdown');
        const dropdown = document.getElementById(dropdownId);
        const arrow = link.querySelector('.admin-dropdown-arrow');
        
        if (!dropdown) return;
        
        // Toggle dropdown
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Fermer tous les autres dropdowns
            adminNavItems.forEach(otherItem => {
                if (otherItem !== item) {
                    otherItem.classList.remove('active');
                    const otherDropdown = otherItem.querySelector('.admin-dropdown');
                    if (otherDropdown) {
                        otherDropdown.classList.remove('active');
                    }
                }
            });
            
            // Toggle ce dropdown
            const isActive = item.classList.contains('active');
            
            if (isActive) {
                item.classList.remove('active');
                dropdown.classList.remove('active');
            } else {
                item.classList.add('active');
                dropdown.classList.add('active');
            }
        });
    });
    
    // Fermer en cliquant √† l'ext√©rieur
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.admin-nav-item')) {
            adminNavItems.forEach(item => {
                item.classList.remove('active');
                const dropdown = item.querySelector('.admin-dropdown');
                if (dropdown) {
                    dropdown.classList.remove('active');
                }
            });
        }
    });
}

