    scrollbar-color: var(--rose-gold) rgba(255, 255, 255, 0.3);
}

.mobile-container::-webkit-scrollbar {
    width: 6px;
}

.mobile-container::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 10px;
}

.mobile-container::-webkit-scrollbar-thumb {
    background: var(--rose-gold);
    border-radius: 10px;
}

.mobile-container.active {
    right: 0;
}

/* Header mobile */
.mobile-header {
    padding: 30px 25px 20px;
    background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
    color: white;
    position: relative;
    border-bottom: 3px solid var(--rose-gold-light);
}

.mobile-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    color: white;
    font-size: 18px;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
}

.mobile-close:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: rotate(90deg);
}

.mobile-logo {
    font-size: 1.6rem;
    font-weight: 800;
    margin: 0;
}

.mobile-subtitle {
    font-size: 0.85rem;
    opacity: 0.9;
    margin-top: 5px;
    font-style: italic;
}

/* Body mobile */
.mobile-body {
    padding: 25px;
}

.mobile-section {
    margin-bottom: 25px;
}

.mobile-section-title {
    font-size: 0.8rem;
    font-weight: 800;
    color: var(--rose-gold-dark);
    text-transform: uppercase;
    letter-spacing: 1.2px;
    margin-bottom: 15px;
    padding-left: 5px;
}

.mobile-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.mobile-nav-item {
    margin-bottom: 8px;
}

.mobile-nav-link {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px 20px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 15px;
    text-decoration: none;
    color: var(--dark-text);
    font-weight: 600;
    transition: var(--transition);
    border: 2px solid rgba(183, 110, 121, 0.1);
}

.mobile-nav-link:hover {
    background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
    color: white;
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(183, 110, 121, 0.3);
    border-color: var(--rose-gold);
    text-decoration: none;
}

.mobile-nav-link i {
    font-size: 18px;
    width: 20px;
    text-align: center;
}

/* Responsive - MOBILE BURGER SEULEMENT EN DESSOUS DE 768px */
@media (max-width: 767px) {
    .mobile-toggle {
        display: block;
    }
    
    .admin-menu,
    .client-menu {
        display: none;
    }
    
    .client-icons {
        display: none;
    }
    
    .admin-actions {
        display: none;
    }
    
    .client-header {
        margin-bottom: 15px;
        position: relative;
    }
    
    .client-logo h1 {
        font-size: 2rem;
    }
    
    .mobile-container {
        width: 90%;
    }
    
    /* NAVIGATION MOBILE R√âORGANIS√âE */
    .mobile-quick-nav {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 15px 0;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        margin: 0 20px 20px 20px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.4);
    }
    
    .mobile-quick-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
        color: var(--dark-text);
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 15px;
        transition: var(--transition);
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        flex: 1;
        max-width: 80px;
    }
    
    .mobile-quick-link:hover {
        color: white;
        background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(183, 110, 121, 0.3);
    }
    
    .mobile-quick-link i {
        font-size: 20px;
    }
    
    .mobile-quick-link span {
        font-size: 0.75rem;
        font-weight: 600;
        text-align: center;
    }
}

@media (max-width: 480px) {
    .mobile-container {
        width: 95%;
    }
    
