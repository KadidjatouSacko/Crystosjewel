    // Notification de bienvenue pour les clients
    if (user && user.role_id === 1) {
        showNotification(`Bienvenue ${user.first_name || 'Client'}`, 'info');
    }
}

function updateUserNames(user) {
    if (user) {
        const displayName = user.first_name ? 
            `${user.first_name} ${user.last_name || ''}`.trim() : 
            user.name || user.email;
        
        // Mise √† jour des noms dans tous les √©l√©ments
        const userNameElements = ['userName', 'adminUserName'];
        userNameElements.forEach(elementId => {
            const element = document.getElementById(elementId);
            if (element) {
                element.textContent = displayName;
            }
        });
    }
}

function updateUserBadges(user) {
    const badges = {
        admin: document.getElementById('adminBadge'),
        client: document.getElementById('clientBadge')
    };
    
    if (user) {
        if (user.role_id === 2) {
            // Admin
            badges.admin?.style.setProperty('display', 'inline-block');
            badges.client?.style.setProperty('display', 'none');
        } else if (user.role_id === 1) {
            // Client
            badges.admin?.style.setProperty('display', 'none');
            badges.client?.style.setProperty('display', 'inline-block');
        }
    }
}

