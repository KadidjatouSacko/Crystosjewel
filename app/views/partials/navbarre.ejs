}

.logout-link:hover {
    background: linear-gradient(135deg, #ee5a52, #dc4c41) !important;
    color: white !important;
}

/* ===================================================================
MENU MOBILE - BURGER SEULEMENT SUR PETIT √âCRAN + ESPACEMENT
=================================================================== */
.mobile-toggle {
    display: none;
    background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
    border: none;
    border-radius: 12px;
    font-size: 18px;
    cursor: pointer;
    padding: 12px 15px;
    color: white;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(183, 110, 121, 0.3);
    position: absolute;
    top: 15px;
}

/* ESPACEMENT DES BOUTONS BURGER */
#adminMobileToggle {
    right: 80px; /* Espac√© du bord droit */
}

#clientMobileToggle {
    right: 20px; /* Plus pr√®s du bord */
}

.mobile-toggle:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(183, 110, 121, 0.4);
}

.mobile-toggle.active {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
}

/* Menu mobile overlay */
.mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(5px);
    z-index: 1998;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease;
}

.mobile-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Container mobile */
.mobile-container {
    position: fixed;
    top: 0;
    right: -100%;
    width: 85%;
    max-width: 400px;
    height: 100vh;
    background: linear-gradient(145deg, 
        rgba(255, 248, 240, 0.98) 0%, 
        rgba(232, 194, 200, 0.95) 100%);
    backdrop-filter: blur(25px);
    z-index: 1999;
    transition: right 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow-y: auto;
    border-left: 3px solid var(--rose-gold);
    box-shadow: -10px 0 50px rgba(0, 0, 0, 0.3);
    
    /* Scrollbar mobile */
