// ===================================================================
// MENU MOBILE - BURGER SEULEMENT SUR PETIT √âCRAN
// ===================================================================
function setupMobileMenu() {
    const adminMobileToggle = document.getElementById('adminMobileToggle');
    const clientMobileToggle = document.getElementById('clientMobileToggle');
    const mobileOverlay = document.getElementById('mobileOverlay');
    const mobileContainer = document.getElementById('mobileContainer');
    const mobileClose = document.getElementById('mobileClose');
    
    // Ouvrir le menu mobile
    function openMobileMenu() {
        if (mobileOverlay && mobileContainer) {
            mobileOverlay.classList.add('active');
            mobileContainer.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Changer l'ic√¥ne du toggle actif
            const activeToggle = document.querySelector('.mobile-toggle.active');
            if (activeToggle) {
                activeToggle.innerHTML = '<i class="fas fa-times"></i>';
            }
            
            console.log('üì± Menu mobile ouvert');
        }
    }
    
    // Fermer le menu mobile
    function closeMobileMenu() {
        if (mobileOverlay && mobileContainer) {
            mobileOverlay.classList.remove('active');
            mobileContainer.classList.remove('active');
            document.body.style.overflow = '';
            
            // Remettre l'ic√¥ne burger
            document.querySelectorAll('.mobile-toggle').forEach(toggle => {
                toggle.classList.remove('active');
                toggle.innerHTML = '<i class="fas fa-bars"></i>';
            });
            
            console.log('üì± Menu mobile ferm√©');
        }
    }
    
    // Event listeners
    if (adminMobileToggle) {
        adminMobileToggle.addEventListener('click', function() {
            this.classList.add('active');
            clientMobileToggle?.classList.remove('active');
            openMobileMenu();
        });
    }
    
    if (clientMobileToggle) {
        clientMobileToggle.addEventListener('click', function() {
            this.classList.add('active');
            adminMobileToggle?.classList.remove('active');
            openMobileMenu();
        });
    }
    
    if (mobileClose) {
        mobileClose.addEventListener('click', closeMobileMenu);
    }
    
    if (mobileOverlay) {
        mobileOverlay.addEventListener('click', closeMobileMenu);
    }
    
    // Fermer avec Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeMobileMenu();
        }
    });
    
    // Fermer en redimensionnant vers desktop
    window.addEventListener('resize', function() {
        if (window.innerWidth > 767) {
            closeMobileMenu();
        }
    });
}

