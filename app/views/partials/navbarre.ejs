    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 Navigation initialisée');
            
            // Initialisation
            setupMobileMenu();
            setupDropdowns();
            setupSubmenus();
            loadUserState();
            markActivePage();
            
            console.log('✅ Navigation complètement chargée');
        });

        // MENU MOBILE
        function setupMobileMenu() {
            const menuToggle = document.getElementById('menuToggle');
            const navMenu = document.getElementById('navMenu');
            const navOverlay = document.getElementById('navOverlay');
            
            if (menuToggle && navMenu && navOverlay) {
                menuToggle.addEventListener('click', toggleMobileMenu);
                navOverlay.addEventListener('click', closeMobileMenu);
            }
        }

        function toggleMobileMenu() {
            const navMenu = document.getElementById('navMenu');
            const navOverlay = document.getElementById('navOverlay');
            const menuToggle = document.getElementById('menuToggle');
            
            const isActive = navMenu.classList.contains('active');
            
            if (isActive) {
                closeMobileMenu();
            } else {
                navMenu.classList.add('active');
                navOverlay.classList.add('active');
                document.body.style.overflow = 'hidden';
                menuToggle.innerHTML = '<i class="fas fa-times"></i>';
            }
        }

        function closeMobileMenu() {
            const navMenu = document.getElementById('navMenu');
            const navOverlay = document.getElementById('navOverlay');
            const menuToggle = document.getElementById('menuToggle');
            
            navMenu.classList.remove('active');
            navOverlay.classList.remove('active');
            document.body.style.overflow = '';
            menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
            
            // Fermer tous les sous-menus
            document.querySelectorAll('.nav-submenu.active').forEach(submenu => {
                submenu.classList.remove('active');
            });
            document.querySelectorAll('.dropdown-arrow.rotated').forEach(arrow => {
                arrow.classList.remove('rotated');
            });
        }

        // DROPDOWNS UTILISATEUR
        function setupDropdowns() {
            const userDropdownToggle = document.getElementById('userDropdownToggle');
            const userDropdownMenu = document.getElementById('userDropdownMenu');
            
            if (userDropdownToggle && userDropdownMenu) {
                let isDropdownOpen = false;
                
                userDropdownToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    isDropdownOpen = !isDropdownOpen;
                    
                    if (isDropdownOpen) {
                        userDropdownMenu.classList.add('active');
                        console.log('👤 Menu utilisateur ouvert');
                    } else {
                        userDropdownMenu.classList.remove('active');
                        console.log('👤 Menu utilisateur fermé');
                    }
                });
                
                // Fermer en cliquant à l'extérieur
                document.addEventListener('click', function(e) {
                    if (!userDropdownToggle.contains(e.target) && 
                        !userDropdownMenu.contains(e.target) && 
                        isDropdownOpen) {
                        userDropdownMenu.classList.remove('active');
                        isDropdownOpen = false;
                    }
                });
            }
        }

        // SOUS-MENUS
        function setupSubmenus() {
            const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');
            
            dropdownTriggers.forEach(trigger => {
                trigger.addEventListener('click', function(e) {
                    e.preventDefault();
                    const submenu = this.nextElementSibling;
                    const arrow = this.querySelector('.dropdown-arrow');
                    
                    if (submenu) {
                        submenu.classList.toggle('active');
                        arrow?.classList.toggle('rotated');
                    }
                });
            });
            
            // Fermer en cliquant à l'extérieur
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.nav-dropdown')) {
                    document.querySelectorAll('.nav-submenu.active').forEach(submenu => {
                        submenu.classList.remove('active');
                    });
                    document.querySelectorAll('.dropdown-arrow.rotated').forEach(arrow => {
                        arrow.classList.remove('rotated');
                    });
                }
            });
        }

        // CHARGEMENT DE L'ÉTAT UTILISATEUR
        function loadUserState() {
            let user = null;
            let isAdmin = false;
            
            // Récupérer depuis les variables globales définies dans le <head>
            if (typeof window.currentUser !== 'undefined') {
                user = window.currentUser;
                isAdmin = window.isAdmin || false;
                console.log('📊 Données utilisateur chargées:', { user: !!user, isAdmin, role_id: user?.role_id });
            } else {
                console.log('⚠️ Aucune donnée utilisateur trouvée');
            }
            
            updateUserInterface(user, isAdmin);
        }

        // MISE À JOUR DE L'INTERFACE UTILISATEUR
        function updateUserInterface(user, isAdmin) {
            const userConnected = document.getElementById('userConnected');
            const userNotConnected = document.getElementById('userNotConnected');
            const adminNavbar = document.getElementById('adminNavbar');
            const favoritesIcon = document.getElementById('favoritesIcon');
            const adminSection = document.getElementById('adminSection');
            const clientSection = document.getElementById('clientSection');
            const adminBadge = document.getElementById('adminBadge');
            const clientBadge = document.getElementById('clientBadge');
            const userName = document.getElementById('userName');
            const adminUserName = document.getElementById('adminUserName');
            
            if (user) {
                console.log('✅ Utilisateur connecté détecté');
                
                // Afficher l'interface connectée
                if (userConnected) userConnected.style.display = 'block';
                if (userNotConnected) userNotConnected.style.display = 'none';
                if (favoritesIcon) favoritesIcon.style.display = 'block';
                
                // Nom d'affichage
                const displayName = user.first_name ? 
                    `${user.first_name} ${user.last_name || ''}`.trim() : 
                    user.name || user.email;
                
                if (userName) userName.textContent = displayName;
                if (adminUserName) adminUserName.textContent = displayName;
                
                // Gestion des rôles selon role_id
                if (user.role_id === 2 || isAdmin) {
                    // ADMIN (role_id = 2)
                    console.log('🛡️ Mode administrateur activé');
                    if (adminNavbar) adminNavbar.style.display = 'block';
                    if (adminSection) adminSection.style.display = 'block';
                    if (clientSection) clientSection.style.display = 'none';
                    if (adminBadge) adminBadge.style.display = 'inline-block';
                    if (clientBadge) clientBadge.style.display = 'none';
                    
                    showNotification('Mode administrateur activé', 'success');
                    
                } else if (user.role_id === 1) {
                    // CLIENT (role_id = 1)
                    console.log('👤 Mode client activé');
                    if (adminNavbar) adminNavbar.style.display = 'none';
                    if (adminSection) adminSection.style.display = 'none';
                    if (clientSection) clientSection.style.display = 'block';
                    if (adminBadge) adminBadge.style.display = 'none';
                    if (clientBadge) clientBadge.style.display = 'inline-block';
                    
                    showNotification(`Bienvenue ${user.first_name || 'Client'}`, 'info');
                    
                } else {
                    // AUTRE RÔLE - traiter comme client par défaut
                    console.log('👤 Mode utilisateur standard');
                    if (adminNavbar) adminNavbar.style.display = 'none';
                    if (adminSection) adminSection.style.display = 'none';
                    if (clientSection) clientSection.style.display = 'block';
                    if (adminBadge) adminBadge.style.display = 'none';
                    if (clientBadge) clientBadge.style.display = 'none';
                }
                
            } else {
                console.log('🚫 Utilisateur non connecté');
                
                // Afficher l'interface déconnectée
                if (userConnected) userConnected.style.display = 'none';
                if (userNotConnected) userNotConnected.style.display = 'block';
                if (favoritesIcon) favoritesIcon.style.display = 'none';
                if (adminNavbar) adminNavbar.style.display = 'none';
                if (adminSection) adminSection.style.display = 'none';
                if (clientSection) clientSection.style.display = 'none';
            }
        }

        // MARQUER LA PAGE ACTIVE
        function markActivePage() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link-item');
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                
                const href = link.getAttribute('href');
                if (href === currentPath || 
                    (href === '/' && currentPath === '/') ||
                    (href !== '/' && currentPath.startsWith(href))) {
                    link.classList.add('active');
                }
            });
            
            console.log('🎯 Page active marquée:', currentPath);
        }

        // SYSTÈME DE NOTIFICATIONS
        function showNotification(message, type = 'info', duration = 3000) {
            // Supprimer les notifications existantes
            document.querySelectorAll('.notification').forEach(notif => {
                notif.remove();
            });
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-triangle' : 'fa-info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            // Animation d'entrée
            setTimeout(() => notification.classList.add('show'), 100);
            
            // Auto-suppression
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (notification.parentElement) {
                        notification.remove();
                    }
                }, 300);
            }, duration);
        }

        // RACCOURCIS CLAVIER
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMobileMenu();
                
                // Fermer tous les dropdowns
                document.querySelectorAll('.dropdown-menu.active').forEach(menu => {
                    menu.classList.remove('active');
                });
                
                document.querySelectorAll('.nav-submenu.active').forEach(submenu => {
                    submenu.classList.remove('active');
                });
            }
        });

        // RESPONSIVE
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                closeMobileMenu();
            }
        });

        // FONCTIONS GLOBALES POUR DEBUG ET TESTS
        window.navigationDebug = {
