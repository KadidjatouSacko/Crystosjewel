}

.client-nav-link.active {
    background: linear-gradient(135deg, var(--rose-gold), var(--rose-gold-dark));
    color: white;
    box-shadow: 0 8px 25px rgba(125, 75, 83, 0.4);
}

.client-nav-link i {
    font-size: 1.1rem;
}

.client-dropdown-arrow {
    margin-left: 5px;
    font-size: 0.8rem;
    transition: transform 0.3s ease;
}

.client-nav-item.active .client-dropdown-arrow {
    transform: rotate(180deg);
}

/* Dropdown client */
.client-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 20px;
