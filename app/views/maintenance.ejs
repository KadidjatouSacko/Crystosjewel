<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance - CrustosJewel</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --rose-gold: #b76e79;
            --rose-gold-light: #e8c2c8;
            --rose-gold-dark: #7d4b53;
            --cream: #fff8f0;
            --dark-text: #3a3a3a;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
            --shadow: 0 4px 12px rgba(183, 110, 121, 0.15);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, var(--cream) 0%, var(--rose-gold-light) 100%);
            color: var(--dark-text);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .maintenance-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: var(--shadow);
            text-align: center;
            max-width: 500px;
            width: 100%;
            border: 1px solid rgba(183, 110, 121, 0.1);
        }

        .logo h1 {
            font-size: 2rem;
            font-weight: 600;
            color: var(--rose-gold);
            letter-spacing: 2px;
            margin-bottom: 0.5rem;
        }

        .logo span {
            display: block;
            font-size: 0.9rem;
            color: var(--rose-gold-dark);
            letter-spacing: 3px;
            margin-bottom: 2rem;
        }

        .maintenance-icon {
            font-size: 3rem;
            color: var(--rose-gold);
            margin-bottom: 1.5rem;
        }

        .maintenance-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--rose-gold-dark);
            margin-bottom: 1rem;
        }

        .maintenance-message {
            font-size: 1rem;
            color: var(--dark-text);
            line-height: 1.6;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .schedule-section {
            background: linear-gradient(135deg, var(--rose-gold-light), var(--rose-gold));
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin: 2rem 0;
        }

        .schedule-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .dates-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            text-align: center;
        }

        .date-item {
            background: rgba(255, 255, 255, 0.2);
            padding: 1rem;
            border-radius: 8px;
        }

        .date-label {
            font-size: 0.8rem;
            opacity: 0.9;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .date-value {
            font-size: 1rem;
            font-weight: 600;
        }

        .countdown-section {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin: 2rem 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid var(--rose-gold-light);
        }

        .countdown-title {
            font-size: 1.1rem;
            color: var(--rose-gold-dark);
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .countdown-timer {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .time-unit {
            background: linear-gradient(135deg, var(--rose-gold-light), var(--rose-gold));
            color: white;
            padding: 1rem 0.5rem;
            border-radius: 8px;
            text-align: center;
        }

        .time-number {
            font-size: 1.5rem;
            font-weight: 700;
            display: block;
        }

        .time-label {
            font-size: 0.7rem;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .progress-container {
            margin: 1rem 0;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: var(--rose-gold-light);
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--rose-gold), var(--rose-gold-dark));
            border-radius: 3px;
            transition: width 0.5s ease;
            width: 0%;
        }

        .progress-text {
            font-size: 0.9rem;
            color: var(--rose-gold-dark);
            margin-top: 0.5rem;
        }

        .contact-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .contact-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            color: var(--rose-gold);
            font-weight: 500;
            padding: 0.8rem 1.2rem;
            border: 1px solid var(--rose-gold-light);
            border-radius: 20px;
            transition: var(--transition);
            font-size: 0.9rem;
        }

        .contact-link:hover {
            background: var(--rose-gold);
            color: white;
            transform: translateY(-2px);
        }

        /* Section Admin */
        .admin-panel {
            margin-top: 2rem;
            padding: 1.5rem;
            background: linear-gradient(135deg, var(--danger), #c82333);
            color: white;
            border-radius: 12px;
            border: 2px solid rgba(220, 53, 69, 0.3);
        }

        .admin-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .admin-info {
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .admin-buttons {
            display: flex;
            justify-content: center;
            gap: 0.8rem;
            flex-wrap: wrap;
        }

        .admin-btn {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 0.8rem 1.2rem;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            transition: var(--transition);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .admin-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        /* Toast */
        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--success);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            box-shadow: var(--shadow);
            transform: translateX(100%);
            transition: transform 0.3s ease;
            z-index: 1001;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .toast.show {
            transform: translateX(0);
        }

        .toast.error {
            background: var(--danger);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .maintenance-container {
                padding: 2rem;
            }

            .logo h1 {
                font-size: 1.6rem;
            }

            .countdown-timer {
                grid-template-columns: repeat(2, 1fr);
                gap: 0.5rem;
            }

            .time-number {
                font-size: 1.2rem;
            }

            .dates-grid {
                grid-template-columns: 1fr;
            }

            .contact-links, .admin-buttons {
                flex-direction: column;
                align-items: center;
            }
        }

        @media (max-width: 480px) {
            .maintenance-container {
                padding: 1.5rem;
            }

            .countdown-timer {
                grid-template-columns: 1fr 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="maintenance-container">
        <!-- Logo -->
        <div class="logo">
            <h1>CRUSTOJEWEL</h1>
            <span>BIJOUX D'EXCEPTION</span>
        </div>

        <!-- IcÃ´ne de maintenance -->
        <div class="maintenance-icon">
            <i class="fas fa-tools"></i>
        </div>

        <!-- Titre et message -->
        <h2 class="maintenance-title">Site en Maintenance</h2>
        <p class="maintenance-message">
            <% if (maintenance && maintenance.reason) { %>
                <%= maintenance.reason %>
            <% } else { %>
                Nous effectuons actuellement une maintenance pour amÃ©liorer votre expÃ©rience. 
                Nous serons de retour trÃ¨s bientÃ´t !
            <% } %>
        </p>

        <!-- Planning de maintenance -->
        <div class="schedule-section">
            <h3 class="schedule-title">
                <i class="fas fa-calendar-alt"></i>
                Planning
            </h3>
            <div class="dates-grid">
                <div class="date-item">
                    <div class="date-label">DÃ©but</div>
                    <div class="date-value" id="startDateDisplay">
                        <% if (maintenance && maintenance.activatedAt) { %>
                            <%= new Date(maintenance.activatedAt).toLocaleDateString('fr-FR', {
                                day: '2-digit',
                                month: '2-digit',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        <% } else { %>
                            En cours
                        <% } %>
                    </div>
                </div>
                <div class="date-item">
                    <div class="date-label">Fin prÃ©vue</div>
                    <div class="date-value" id="endDateDisplay">
                        <% if (maintenance && maintenance.endTime) { %>
                            <%= new Date(maintenance.endTime).toLocaleDateString('fr-FR', {
                                day: '2-digit',
                                month: '2-digit',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        <% } else { %>
                            BientÃ´t
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Compteur temps restant -->
        <div class="countdown-section">
            <h3 class="countdown-title">Temps restant</h3>
            <div class="countdown-timer" id="countdown">
                <div class="time-unit">
                    <span class="time-number" id="days">--</span>
                    <span class="time-label">Jours</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="hours">--</span>
                    <span class="time-label">Heures</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="minutes">--</span>
                    <span class="time-label">Minutes</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="seconds">--</span>
                    <span class="time-label">Secondes</span>
                </div>
            </div>
            
            <!-- Barre de progression -->
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressBar"></div>
                </div>
                <div class="progress-text" id="progressText">Maintenance en cours...</div>
            </div>
        </div>

        <!-- Liens de contact -->
        <div class="contact-links">
            <a href="mailto:contact@crustojewel.fr" class="contact-link">
                <i class="fas fa-envelope"></i>
                Contact
            </a>
            <a href="tel:+33123456789" class="contact-link">
                <i class="fas fa-phone"></i>
                Appeler
            </a>
            <% if (!isAuthenticated) { %>
            <a href="/connexion-inscription" class="contact-link">
                <i class="fas fa-user-shield"></i>
                Administration
            </a>
            <% } %>
        </div>

        <!-- Section Admin -->
        <% if (isAdmin) { %>
        <div class="admin-panel">
            <h3 class="admin-title">
                <i class="fas fa-shield-alt"></i>
                Panneau Administrateur
            </h3>
            
            <div class="admin-info">
                <strong>ConnectÃ© en tant que :</strong> <%= user ? user.email : 'Admin' %>
            </div>
            
            <div class="admin-buttons">
                <button class="admin-btn" onclick="deactivateMaintenance()">
                    <i class="fas fa-power-off"></i>
                    DÃ©sactiver la maintenance
                </button>
                
                <a href="/admin/settings" class="admin-btn">
                    <i class="fas fa-tachometer-alt"></i>
                    ParamÃ¨tres
                </a>
                
                <button class="admin-btn" onclick="checkStatus()">
                    <i class="fas fa-info-circle"></i>
                    VÃ©rifier le statut
                </button>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Message</span>
    </div>

    <script>
        console.log('ð Chargement page de maintenance');
        
        // Configuration basÃ©e sur les donnÃ©es du serveur
        const config = {
            startDate: new Date('<%= maintenance && maintenance.activatedAt ? maintenance.activatedAt : new Date().toISOString() %>'),
            endDate: <% if (maintenance && maintenance.endTime) { %>new Date('<%= maintenance.endTime %>')<% } else { %>new Date(Date.now() + 2 * 60 * 60 * 1000)<% } %>,
            isActive: <%= maintenance ? maintenance.active : 'false' %>,
            isAdmin: <%= isAdmin ? 'true' : 'false' %>
        };

        console.log('ð Configuration maintenance:', config);

        let countdownInterval;
        let progressInterval;
        let statusCheckInterval;

        // ==========================================
        // GESTIONNAIRE DE MAINTENANCE
        // ==========================================
        const MaintenanceManager = {
            async checkStatus() {
                try {
                    console.log('ð VÃ©rification du statut...');
                    
                    const response = await fetch('/api/maintenance/status');
                    if (!response.ok) {
                        throw new Error(`Erreur HTTP: ${response.status}`);
                    }
                    
                    const data = await response.json();
                    console.log('ð RÃ©ponse statut:', data);
                    
                    // GÃ©rer les diffÃ©rents formats de rÃ©ponse
                    let isActive = false;
                    if (data.success) {
                        if (data.maintenance && typeof data.maintenance.active !== 'undefined') {
                            isActive = data.maintenance.active;
                        } else if (data.status && typeof data.status.isActive !== 'undefined') {
                            isActive = data.status.isActive;
                        }
                    }
                    
                    console.log('ð Maintenance active:', isActive);
                    
                    // Si maintenance dÃ©sactivÃ©e, rediriger les non-admins
                    if (!isActive && !config.isAdmin) {
                        this.showToast('Maintenance terminÃ©e ! Redirection...', 'success');
                        setTimeout(() => {
                            window.location.href = '/';
                        }, 2000);
                    }
                    
                    return isActive;
                    
                } catch (error) {
                    console.error('â Erreur vÃ©rification statut:', error);
                    return null;
                }
            },

            showToast(message, type = 'success') {
                console.log(`ð Toast: ${message} (${type})`);
                
                const toast = document.getElementById('toast');
                const toastMessage = document.getElementById('toastMessage');
                const icon = toast.querySelector('i');
                
                if (!toast || !toastMessage || !icon) {
                    console.warn('â ï¸ ÃlÃ©ments toast non trouvÃ©s');
                    alert(message); // Fallback
                    return;
                }
                
                toastMessage.textContent = message;
                
                if (type === 'error') {
                    toast.classList.add('error');
                    icon.className = 'fas fa-exclamation-circle';
                } else {
                    toast.classList.remove('error');
                    icon.className = 'fas fa-check-circle';
                }
                
                toast.classList.add('show');
                setTimeout(() => toast.classList.remove('show'), 4000);
            }
        };

        // ==========================================
        // FONCTIONS ADMIN
        // ==========================================
        <% if (isAdmin) { %>
        async function deactivateMaintenance() {
            if (!confirm('Ãtes-vous sÃ»r de vouloir dÃ©sactiver la maintenance ?')) {
                return;
            }
            
            try {
                console.log('ð§ DÃ©sactivation maintenance...');
                
                const response = await fetch('/api/maintenance/deactivate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`Erreur HTTP: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('â RÃ©ponse dÃ©sactivation:', data);
                
                if (data.success) {
                    MaintenanceManager.showToast('Maintenance dÃ©sactivÃ©e ! Redirection...', 'success');
                    setTimeout(() => {
                        window.location.href = '/admin/settings';
                    }, 1500);
                } else {
                    throw new Error(data.message || 'Ãchec de la dÃ©sactivation');
                }
                
            } catch (error) {
                console.error('â Erreur dÃ©sactivation:', error);
                MaintenanceManager.showToast('Erreur: ' + error.message, 'error');
            }
        }
        
        async function checkStatus() {
            const status = await MaintenanceManager.checkStatus();
            if (status !== null) {
                const message = status ? 'Maintenance active' : 'Service normal';
                MaintenanceManager.showToast('Statut: ' + message, 'success');
            } else {
                MaintenanceManager.showToast('Erreur lors de la vÃ©rification', 'error');
            }
        }
        <% } %>

        // ==========================================
        // COMPTE Ã REBOURS
        // ==========================================
        function startCountdown() {
            if (countdownInterval) clearInterval(countdownInterval);

            countdownInterval = setInterval(function() {
                const now = new Date().getTime();
                const endTime = config.endDate.getTime();
                const distance = endTime - now;

                if (distance <= 0) {
                    document.getElementById('days').textContent = '00';
                    document.getElementById('hours').textContent = '00';
                    document.getElementById('minutes').textContent = '00';
                    document.getElementById('seconds').textContent = '00';
                    
                    clearInterval(countdownInterval);
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = String(days).padStart(2, '0');
                document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
            }, 1000);
        }

        // ==========================================
        // BARRE DE PROGRESSION
        // ==========================================
        function startProgressBar() {
            if (progressInterval) clearInterval(progressInterval);

            progressInterval = setInterval(function() {
                const now = new Date().getTime();
                const startTime = config.startDate.getTime();
                const endTime = config.endDate.getTime();
                const totalDuration = endTime - startTime;
                const elapsed = now - startTime;
                
                let progress = 0;
                if (elapsed > 0 && totalDuration > 0) {
                    progress = Math.min((elapsed / totalDuration) * 100, 100);
                }

                const progressBar = document.getElementById('progressBar');
                const progressText = document.getElementById('progressText');
                
                if (progressBar) {
                    progressBar.style.width = progress + '%';
                }
                
                if (progressText) {
                    progressText.textContent = `Progression: ${Math.round(progress)}%`;
                }
            }, 1000);
        }

        // ==========================================
        // VÃRIFICATION PÃRIODIQUE DU STATUT
        // ==========================================
        function startStatusCheck() {
            // VÃ©rifier le statut toutes les 30 secondes (non-admins uniquement)
            if (!config.isAdmin) {
                console.log('ð DÃ©marrage vÃ©rification pÃ©riodique du statut');
                statusCheckInterval = setInterval(function() {
                    MaintenanceManager.checkStatus();
                }, 30000); // 30 secondes
            } else {
                console.log('â¹ï¸ Admin dÃ©tectÃ© - pas de vÃ©rification pÃ©riodique');
            }
        }

        // ==========================================
        // INITIALISATION
        // ==========================================
        document.addEventListener('DOMContentLoaded', function() {
            console.log('ð Initialisation page de maintenance');
            
            // DÃ©marrer toutes les fonctionnalitÃ©s
            startCountdown();
            startProgressBar();
            startStatusCheck();
            
            // VÃ©rification initiale du statut
            setTimeout(() => {
                MaintenanceManager.checkStatus();
            }, 2000);
            
            console.log('â Page de maintenance initialisÃ©e');
        });

        // ==========================================
        // NETTOYAGE
        // ==========================================
        window.addEventListener('beforeunload', function() {
            console.log('ð§¹ Nettoyage des intervalles');
            if (countdownInterval) clearInterval(countdownInterval);
            if (progressInterval) clearInterval(progressInterval);
            if (statusCheckInterval) clearInterval(statusCheckInterval);
        });
    </script>
</body>
</html>