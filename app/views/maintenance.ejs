<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance - CrustosJewel</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --rose-gold: #b76e79;
            --rose-gold-light: #e8c2c8;
            --rose-gold-dark: #7d4b53;
            --cream: #fff8f0;
            --dark-text: #3a3a3a;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
            --shadow: 0 4px 12px rgba(183, 110, 121, 0.15);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, var(--cream) 0%, var(--rose-gold-light) 100%);
            color: var(--dark-text);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .maintenance-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: var(--shadow);
            text-align: center;
            max-width: 500px;
            width: 100%;
            border: 1px solid rgba(183, 110, 121, 0.1);
        }

        .logo h1 {
            font-size: 2rem;
            font-weight: 600;
            color: var(--rose-gold);
            letter-spacing: 2px;
            margin-bottom: 0.5rem;
        }

        .logo span {
            display: block;
            font-size: 0.9rem;
            color: var(--rose-gold-dark);
            letter-spacing: 3px;
            margin-bottom: 2rem;
        }

        .maintenance-icon {
            font-size: 3rem;
            color: var(--rose-gold);
            margin-bottom: 1.5rem;
        }

        .maintenance-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--rose-gold-dark);
            margin-bottom: 1rem;
        }

        .maintenance-message {
            font-size: 1rem;
            color: var(--dark-text);
            line-height: 1.6;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .schedule-section {
            background: linear-gradient(135deg, var(--rose-gold-light), var(--rose-gold));
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin: 2rem 0;
        }

        .schedule-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .dates-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            text-align: center;
        }

        .date-item {
            background: rgba(255, 255, 255, 0.2);
            padding: 1rem;
            border-radius: 8px;
        }

        .date-label {
            font-size: 0.8rem;
            opacity: 0.9;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .date-value {
            font-size: 1rem;
            font-weight: 600;
        }

        .countdown-section {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            margin: 2rem 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid var(--rose-gold-light);
        }

        .countdown-title {
            font-size: 1.1rem;
            color: var(--rose-gold-dark);
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .countdown-timer {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .time-unit {
            background: linear-gradient(135deg, var(--rose-gold-light), var(--rose-gold));
            color: white;
            padding: 1rem 0.5rem;
            border-radius: 8px;
            text-align: center;
        }

        .time-number {
            font-size: 1.5rem;
            font-weight: 700;
            display: block;
        }

        .time-label {
            font-size: 0.7rem;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .progress-container {
            margin: 1rem 0;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: var(--rose-gold-light);
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--rose-gold), var(--rose-gold-dark));
            border-radius: 3px;
            transition: width 0.5s ease;
            width: 0%;
        }

        .progress-text {
            font-size: 0.9rem;
            color: var(--rose-gold-dark);
            margin-top: 0.5rem;
        }

        .contact-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
        }

        .contact-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            color: var(--rose-gold);
            font-weight: 500;
            padding: 0.8rem 1.2rem;
            border: 1px solid var(--rose-gold-light);
            border-radius: 20px;
            transition: var(--transition);
            font-size: 0.9rem;
        }

        .contact-link:hover {
            background: var(--rose-gold);
            color: white;
            transform: translateY(-2px);
        }

        /* Section Admin - supprimée */

        /* Modal - supprimée */

        /* Toast */
        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--success);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            box-shadow: var(--shadow);
            transform: translateX(100%);
            transition: transform 0.3s ease;
            z-index: 1001;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .toast.show {
            transform: translateX(0);
        }

        .toast.error {
            background: var(--danger);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .maintenance-container {
                padding: 2rem;
            }

            .logo h1 {
                font-size: 1.6rem;
            }

            .countdown-timer {
                grid-template-columns: repeat(2, 1fr);
                gap: 0.5rem;
            }

            .time-number {
                font-size: 1.2rem;
            }

            .dates-grid {
                grid-template-columns: 1fr;
            }

            .contact-links {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .maintenance-container {
                padding: 1.5rem;
            }

            .countdown-timer {
                grid-template-columns: 1fr 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="maintenance-container">
        <!-- Logo -->
        <div class="logo">
            <h1>CRUSTOJEWEL</h1>
            <span>BIJOUX D'EXCEPTION</span>
        </div>

        <!-- Icône de maintenance -->
        <div class="maintenance-icon">
            <i class="fas fa-tools"></i>
        </div>

        <!-- Titre et message -->
        <h2 class="maintenance-title">Site en Maintenance</h2>
        <p class="maintenance-message">
            Nous effectuons actuellement une maintenance pour améliorer votre expérience. 
            Nous serons de retour très bientôt !
        </p>

        <!-- Planning de maintenance -->
        <div class="schedule-section">
            <h3 class="schedule-title">
                <i class="fas fa-calendar-alt"></i>
                Planning
            </h3>
            <div class="dates-grid">
                <div class="date-item">
                    <div class="date-label">Début</div>
                    <div class="date-value" id="startDateDisplay">
                        <% if (typeof maintenanceStart !== "undefined" && maintenanceStart) { %>
                            <%= new Date(maintenanceStart).toLocaleDateString('fr-FR', {
                                day: '2-digit',
                                month: '2-digit',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        <% } else { %>
                            En cours
                        <% } %>
                    </div>
                </div>
                <div class="date-item">
                    <div class="date-label">Fin prévue</div>
                    <div class="date-value" id="endDateDisplay">
                        <% if (typeof maintenanceEnd !== "undefined" && maintenanceEnd) { %>
                            <%= new Date(maintenanceEnd).toLocaleDateString('fr-FR', {
                                day: '2-digit',
                                month: '2-digit',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        <% } else { %>
                            Bientôt
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Compteur temps restant -->
        <div class="countdown-section">
            <h3 class="countdown-title">Temps restant</h3>
            <div class="countdown-timer" id="countdown">
                <div class="time-unit">
                    <span class="time-number" id="days">00</span>
                    <span class="time-label">Jours</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="hours">00</span>
                    <span class="time-label">Heures</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="minutes">00</span>
                    <span class="time-label">Minutes</span>
                </div>
                <div class="time-unit">
                    <span class="time-number" id="seconds">00</span>
                    <span class="time-label">Secondes</span>
                </div>
            </div>
            
            <!-- Barre de progression -->
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressBar"></div>
                </div>
                <div class="progress-text" id="progressText">Maintenance en cours...</div>
            </div>
        </div>

        <!-- Liens de contact -->
        <div class="contact-links">
            <a href="mailto:contact@crustojewel.fr" class="contact-link">
                <i class="fas fa-envelope"></i>
                Contact
            </a>
            <a href="tel:+33123456789" class="contact-link">
                <i class="fas fa-phone"></i>
                Appeler
            </a>
            <a href="/login" class="contact-link">
                <i class="fas fa-user-shield"></i>
                Administration
            </a>
        </div>
    </div>

    <!-- Modal de confirmation - supprimée -->

    <!-- Toast -->
    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Message</span>
    </div>

    <script>
        // Configuration
        const config = {
            startDate: new Date('<%= typeof maintenanceStart !== "undefined" && maintenanceStart ? maintenanceStart : new Date().toISOString() %>'),
            endDate: new Date('<%= typeof maintenanceEnd !== "undefined" && maintenanceEnd ? maintenanceEnd : new Date(Date.now() + 2 * 60 * 60 * 1000).toISOString() %>'),
            isActive: <%= typeof maintenanceActive !== "undefined" ? maintenanceActive : 'true' %>
        };

        let countdownInterval;
        let progressInterval;

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            startCountdown();
            startProgressBar();
        });

        function startCountdown() {
            if (countdownInterval) clearInterval(countdownInterval);

            countdownInterval = setInterval(function() {
                const now = new Date().getTime();
                const endTime = config.endDate.getTime();
                const distance = endTime - now;

                if (distance <= 0) {
                    document.getElementById('days').textContent = '00';
                    document.getElementById('hours').textContent = '00';
                    document.getElementById('minutes').textContent = '00';
                    document.getElementById('seconds').textContent = '00';
                    
                    showToast('Maintenance terminée !', 'success');
                    setTimeout(() => window.location.href = '/', 3000);
                    clearInterval(countdownInterval);
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = String(days).padStart(2, '0');
                document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
            }, 1000);
        }

        function startProgressBar() {
            if (progressInterval) clearInterval(progressInterval);

            progressInterval = setInterval(function() {
                const now = new Date().getTime();
                const startTime = config.startDate.getTime();
                const endTime = config.endDate.getTime();
                const totalDuration = endTime - startTime;
                const elapsed = now - startTime;
                
                let progress = 0;
                if (elapsed > 0 && totalDuration > 0) {
                    progress = Math.min((elapsed / totalDuration) * 100, 100);
                }

                document.getElementById('progressBar').style.width = progress + '%';
                document.getElementById('progressText').textContent = 
                    `Progression: ${Math.round(progress)}%`;
            }, 1000);
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const icon = toast.querySelector('i');
            
            toastMessage.textContent = message;
            
            if (type === 'error') {
                toast.classList.add('error');
                icon.className = 'fas fa-exclamation-circle';
            } else {
                toast.classList.remove('error');
                icon.className = 'fas fa-check-circle';
            }
            
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 4000);
        }
    </script>
</body>
</html>