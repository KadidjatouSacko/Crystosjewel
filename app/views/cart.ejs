        /* Très petits écrans */
        @media (max-width: 360px) {
            .item-wrapper {
                grid-template-columns: 60px 1fr;
                gap: 8px;
                padding: 8px 10px;
            }

            .item-image {
                width: 60px;
                height: 60px;
            }

            .item-info h3 {
                font-size: 0.85rem;
            }

            .spec-item {
                font-size: 0.6rem;
                padding: 1px 3px;
            }

            .item-price-display {
                font-size: 0.75rem;
            }

            .quantity-control {
                transform: scale(0.9);
            }

            .item-total {
                font-size: 0.8rem;
            }

            .btn {
                padding: 6px 10px;
                font-size: 0.75rem;
            }
