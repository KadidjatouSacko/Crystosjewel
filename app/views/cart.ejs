        /* Animations améliorées */
        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(100%);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideOutRight {
            from {
                opacity: 1;
                transform: translateX(0);
            }
            to {
                opacity: 0;
                transform: translateX(100%);
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.02);
            }
        }

        .pulse-animation {
            animation: pulse 0.3s ease;
        }

        /* États de chargement */
        .loading-state {
            opacity: 0.6;
            pointer-events: none;
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        /* Notifications modernes */
        .cart-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            max-width: 400px;
            padding: 16px 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-large);
            animation: slideInRight 0.3s ease-out;
            font-family: inherit;
            backdrop-filter: blur(10px);
        }

        .notification-success {
            background: rgba(16, 185, 129, 0.95);
            color: white;
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

        .notification-error {
            background: rgba(239, 68, 68, 0.95);
            color: white;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        /* Améliorations accessibilité */
        .btn:focus,
        .qty-btn:focus,
        .qty-input:focus,
        .item-image a:focus,
        .item-info h3 a:focus {
            outline: 3px solid rgba(232, 180, 184, 0.5);
            outline-offset: 2px;
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Loading spinner */
        .spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Styles pour invités */
        .guest-checkout-info {
            background: linear-gradient(135deg, #f8f4f0 0%, #fdf9f6 100%);
            border: 1px solid rgba(232, 180, 184, 0.2);
            border-radius: 12px;
            padding: 16px;
            margin: 16px 0;
            text-align: center;
            animation: slideInUp 0.5s ease-out;
        }

        .guest-benefits {
            display: flex;
            gap: 8px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 12px;
        }

        .guest-benefit {
            background: white;
            border: 1px solid #e8b4b8;
            border-radius: 6px;
            padding: 6px 12px;
            font-size: 0.8rem;
            color: #b8868a;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbarre.ejs') %>

    <!-- Header -->
    <div class="page-header">
        <div class="container">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-shopping-cart"></i>
                    <%= title %>
                </h1>
                <div class="breadcrumb">
                    <a href="/" onclick="storePreviousPage()">Accueil</a> › 
                    <a href="/jewels" onclick="storePreviousPage()">Bijoux</a> › 
                    <span>Panier</span>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <% if (cart && cart.items && cart.items.length > 0) { %>
            <div class="cart-layout">
                <!-- Articles du panier -->
                <div class="cart-section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="fas fa-shopping-bag"></i>
                            Vos articles
                            <span class="item-count" id="item-count"><%= cart.items.length %></span>
                        </h2>
                    </div>
                    <div class="cart-items">
                        <% cart.items.forEach(item => { %>
                            <div class="cart-item" data-jewel-id="<%= item.jewel.id %>">
                                <!-- ✅ ITEM WRAPPER AVEC LIENS CLIQUABLES -->
                                <div class="item-wrapper">
                                    <!-- ✅ IMAGE CLIQUABLE vers la page produit -->
                                    <div class="item-image">
                                        <% if (item.jewel.image) { %>
                                            <a href="/bijoux/<%= item.jewel.slug || item.jewel.id %>" title="Voir le détail du produit">
                                                <img src="/uploads/jewels/<%= item.jewel.image %>" alt="<%= item.jewel.name %>" loading="lazy">
                                            </a>
                                        <% } else { %>
                                            <a href="/bijoux/<%= item.jewel.slug || item.jewel.id %>" title="Voir le détail du produit">
                                                <div class="item-placeholder">
                                                    <i class="fas fa-gem"></i>
                                                </div>
                                            </a>
                                        <% } %>
                                    </div>
                                    
                                    <div class="item-content">
                                        <div class="item-info">
                                            <!-- ✅ TITRE CLIQUABLE vers la page produit -->
                                            <h3>
                                                <a href="/bijoux/<%= item.jewel.slug || item.jewel.id %>" 
                                                   style="text-decoration: none; color: inherit; transition: color 0.3s ease;">
                                                    <%= item.jewel.name %>
                                                </a>
                                            </h3>

                                            <!-- ✅ AFFICHAGE TAILLES CORRIGÉ -->
                                            <div class="item-specs">
                                                <% if (item.jewel.matiere) { %>
                                                    <div class="spec-item">
                                                        <i class="fas fa-star"></i>
                                                        <%= item.jewel.matiere %>
                                                    </div>
                                                <% } %>
                                                
                                                <% if (item.jewel.carat) { %>
                                                    <div class="spec-item">
                                                        <i class="fas fa-gem"></i>
                                                        <%= item.jewel.carat %> carats
                                                    </div>
                                                <% } %>
                                                
                                                <!-- ✅ GESTION TAILLES CORRIGÉE -->
                                                <% if (item.size) { %>
                                                    <!-- TAILLE SPÉCIFIQUEMENT SÉLECTIONNÉE -->
                                                    <div class="spec-item selected-size">
                                                        <i class="fas fa-ruler"></i>
                                                        <strong>Taille: <%= item.size %></strong>
                                                    </div>
                                                <% } else if (item.jewel.tailles && Array.isArray(item.jewel.tailles) && item.jewel.tailles.length > 0) { %>
                                                    <!-- TAILLES DISPONIBLES (si aucune sélectionnée) -->
                                                    <div class="spec-item available-sizes">
                                                        <i class="fas fa-ruler"></i>
                                                        Tailles: 
                                                        <% 
                                                        let taillesDisplay = item.jewel.tailles.map(t => {
                                                            if (typeof t === 'object' && t !== null) {
                                                                return t.taille || t.size || t.value || t.label || 'N/A';
                                                            }
                                                            return String(t);
                                                        }).join(', ');
                                                        %>
                                                        <%= taillesDisplay %>
                                                    </div>
                                                <% } %>
                                                
                                                <% if (item.jewel.poids) { %>
                                                    <div class="spec-item">
                                                        <i class="fas fa-weight"></i>
                                                        <%= item.jewel.poids %>g
                                                    </div>
                                                <% } %>
                                            </div>

                                            <div class="item-price-display" data-price="<%= item.jewel.price_ttc %>">
                                                <%= Number(item.jewel.price_ttc).toFixed(2) %> € l'unité
                                            </div>
                                            
                                            <% if (item.jewel.stock < 5 && item.jewel.stock > 0) { %>
                                                <div class="stock-alert">
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                    Plus que <%= item.jewel.stock %> en stock!
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <!-- Contrôles de quantité et suppression -->
                                        <div class="item-controls">
                                            <div class="quantity-wrapper">
                                                <span class="quantity-label">Qté:</span>
                                                <div class="quantity-control">
                                                    <button class="qty-btn decrease-qty" 
                                                            data-jewel-id="<%= item.jewel.id %>"
                                                            <%= item.quantity <= 1 ? 'disabled' : '' %>>
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" 
                                                           class="qty-input" 
                                                           value="<%= item.quantity %>" 
                                                           min="1" 
                                                           max="<%= item.jewel.stock %>" 
                                                           data-jewel-id="<%= item.jewel.id %>">
                                                    <button class="qty-btn increase-qty" 
                                                            data-jewel-id="<%= item.jewel.id %>"
                                                            <%= item.quantity >= item.jewel.stock ? 'disabled' : '' %>>
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            
                                            <div class="item-total">
                                                <span class="item-total-price"><%= (item.jewel.price_ttc * item.quantity).toFixed(2) %></span> €
                                            </div>
                                            
                                            <button class="remove-btn btn-remove-cart" 
                                                    data-jewel-id="<%= item.jewel.id %>" 
                                                    title="Supprimer cet article">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Résumé du panier -->
                <div class="cart-summary">
                    <h3 class="summary-title">
                        <i class="fas fa-receipt"></i>
                        Résumé
                    </h3>
                    
                    <div class="summary-line">
                        <span>Sous-total (<span id="items-count"><%= cart.items.length %></span> articles):</span>
                        <span id="subtotal"><%= subtotal.toFixed(2) %> €</span>
                    </div>
                    
                    <!-- Section Code Promo -->
                    <div class="promo-section">
                        <% if (appliedPromo && discount > 0) { %>
                            <!-- ✅ Code promo appliqué -->
                            <div class="applied-promo">
                                <div class="promo-info">
                                    <div class="promo-label">
                                        <i class="fas fa-tag"></i>
                                        Code promo: <strong><%= appliedPromo.code %></strong>
                                    </div>
                                    <button class="remove-promo-btn" id="remove-promo">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <div class="promo-discount">
                                    -<%= appliedPromo.discountPercent %>% (-<%= discount.toFixed(2) %> €)
                                </div>
                            </div>
                            
                            <div class="summary-line">
                                <span>Après réduction:</span>
                                <span id="discounted-subtotal"><%= discountedSubtotal.toFixed(2) %> €</span>
                            </div>
                        <% } else { %>
                            <!-- 📝 Formulaire code promo -->
                            <div class="promo-form">
                                <div class="promo-input-group">
                                    <input type="text" 
                                           id="promo-code" 
                                           placeholder="Code promo" 
                                           class="promo-input"
                                           maxlength="20">
                                    <button type="button" 
                                            id="apply-promo" 
                                            class="promo-btn">
                                        <i class="fas fa-tag"></i>
                                        Appliquer
                                    </button>
                                </div>
                                <div id="promo-message" class="promo-message"></div>
                            </div>
                        <% } %>
                    </div>

                    <!-- Réduction dans le récapitulatif -->
                    <% if (discount && discount > 0) { %>
                        <div class="summary-line discount-line">
                            <span>Réduction (<%= appliedPromo.discountPercent %>%):</span>
                            <span class="discount-amount">-<%= discount.toFixed(2) %> €</span>
                        </div>
                    <% } %>

                    <div class="summary-line">
                        <span>Livraison:</span>
                        <span id="shipping">
                            <% if (shippingFee > 0) { %>
                                <%= shippingFee.toFixed(2) %> €
                            <% } else { %>
                                <span style="color: var(--success); font-weight: 600;">Gratuit ✓</span>
                            <% } %>
                        </span>
                    </div>

                    <!-- Total final -->
                    <div class="summary-line total">
                        <span>Total:</span>
                        <span id="total"><%= finalTotal.toFixed(2) %> €</span>
                    </div>

                    <!-- Section commande -->
                    <% if (cart && cart.items && cart.items.length > 0) { %>
                        <div class="guest-checkout-info">
                            <% if (!user) { %>
                                <!-- Message pour les visiteurs non connectés -->
                                <div style="text-align: center; margin-bottom: 16px;">
                                    <div style="background: linear-gradient(135deg, #e8f5e8 0%, #f0f9f0 100%); 
                                               border: 1px solid #a7f3d0; 
                                               border-radius: 8px; 
                                               padding: 12px; 
                                               margin-bottom: 12px;">
                                        <div style="display: flex; align-items: center; justify-content: center; gap: 8px; color: #065f46;">
                                            <i class="fas fa-info-circle"></i>
                                            <span style="font-weight: 600; font-size: 0.9rem;">
                                                Aucune inscription requise pour commander !
                                            </span>
                                        </div>
                                        <p style="margin: 8px 0 0 0; font-size: 0.85rem; color: #059669;">
                                            Vous pouvez finaliser votre achat en tant qu'invité
                                        </p>
                                    </div>
                                    
                                    <div class="guest-benefits">
                                        <div class="guest-benefit">
                                            <i class="fas fa-shipping-fast"></i> Livraison rapide
                                        </div>
                                        <div class="guest-benefit">
                                            <i class="fas fa-shield-alt"></i> Paiement sécurisé
                                        </div>
                                        <div class="guest-benefit">
                                            <i class="fas fa-undo"></i> Retours faciles
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Bouton Commander principal -->
                            <button onclick="proceedToCheckout()" class="btn btn-primary" style="width: 100%; margin-bottom: 8px;">
                                <i class="fas fa-credit-card"></i>
                                <% if (user) { %>
                                    Finaliser ma commande
                                <% } else { %>
                                    Commander sans créer de compte
                                <% } %>
                            </button>

                            <% if (!user) { %>
                                <!-- Options pour les non-connectés -->
                                <div style="text-align: center; margin-top: 12px;">
                                    <p style="font-size: 0.85rem; color: #6b7280; margin-bottom: 8px;">
                                        Vous avez déjà un compte ?
                                    </p>
                                    <a href="/connexion-inscription?return=/commande/recapitulatif" 
                                       class="btn btn-secondary" 
                                       style="width: 100%; margin-bottom: 8px;">
                                        <i class="fas fa-sign-in-alt"></i>
                                        Se connecter pour commander
                                    </a>
                                    <a href="/connexion-inscription?return=/commande/recapitulatif" 
                                       style="font-size: 0.8rem; 
                                              color: #b8868a; 
                                              text-decoration: none;">
                                        Créer un compte pour un suivi optimisé
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                    
                    <button onclick="goBack()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Continuer les achats
                    </button>

                    <button id="clear-cart" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Vider le panier
                    </button>
                </div>
            </div>
        <% } else { %>
            <!-- Panier vide -->
            <div class="empty-cart">
                <div class="empty-cart-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h2>Votre panier est vide</h2>
                <p>Découvrez notre collection exceptionnelle de bijoux artisanaux et trouvez la pièce parfaite qui vous ressemble.</p>
                <a href="/jewels" class="btn btn-primary" style="width: auto; display: inline-flex;">
                    <i class="fas fa-gem"></i>
                    Découvrir la collection
                </a>
            </div>
        <% } %>

        <!-- Recommandations -->
        <% if (recommendations && recommendations.length > 0) { %>
            <div class="recommendations">
                <h3 class="recommendations-title">Vous pourriez aussi aimer</h3>
                <div class="carousel-container">
                    <div class="products-carousel" id="products-carousel">
                        <% recommendations.forEach(jewel => { %>
                            <div class="product-card">
                                <div class="product-img" style="background-image: url('<%= jewel.image ? '/uploads/jewels/' + jewel.image : '/images/placeholder.jpg' %>')">
                                    <% if (jewel.stock < 5 && jewel.stock > 0) { %>
                                        <div class="product-badge">Stock limité</div>
                                    <% } else if (jewel.stock === 0) { %>
                                        <div class="product-badge danger">Rupture</div>
                                    <% } %>
                                </div>
                                <div class="product-info">
                                    <h4 class="product-name"><%= jewel.name %></h4>
                                    <div class="product-price"><%= Number(jewel.price_ttc).toFixed(2) %> €</div>
                                    <div class="product-actions">
                                        <a href="/bijoux/<%= jewel.slug %>" class="btn btn-outline btn-sm">
                                            <i class="fas fa-eye"></i>
                                            Voir le produit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <!-- Navigation du carousel -->
                    <button class="carousel-nav prev" id="carousel-prev">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="carousel-nav next" id="carousel-next">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    
                    <!-- Dots du carousel -->
                    <div class="carousel-dots" id="carousel-dots"></div>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer.ejs') %>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('🛒 Script panier initialisé');

        // Fonction pour revenir à la page précédente
        window.goBack = function() {
            const previousPage = localStorage.getItem('previousPage');
            if (previousPage && previousPage !== window.location.href) {
                window.location.href = previousPage;
            } else {
                window.location.href = '/bijoux'; // Retour vers la boutique par défaut
            }
        };

        // Stocker la page précédente
        window.storePreviousPage = function() {
            localStorage.setItem('previousPage', window.location.href);
        };

        // Fonction pour afficher les notifications modernes
        function showNotification(message, type = 'success') {
            // Supprimer les notifications existantes
            const existingNotifications = document.querySelectorAll('.cart-notification');
            existingNotifications.forEach(notif => notif.remove());

            const notification = document.createElement('div');
            notification.className = `cart-notification notification-${type}`;
            
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 12px;">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}" style="font-size: 1.2rem;"></i>
                    <span style="flex: 1;">${message}</span>
                    <button type="button" onclick="this.parentElement.parentElement.remove()" 
                            style="background: none; border: none; font-size: 20px; cursor: pointer; color: inherit; opacity: 0.8;">
                        ×
                    </button>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto-supprimer après 4 secondes
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.animation = 'slideOutRight 0.3s ease-out';
                    setTimeout(() => notification.remove(), 300);
                }
            }, 4000);
        }

        // Fonction pour mettre à jour le compteur du panier
        function updateCartCounter(count) {
            const badges = document.querySelectorAll('.cart-count, .badge-cart, #cart-counter, .cart-counter');
            badges.forEach(badge => {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline-block' : 'none';
            });
        }

        // 🗑️ SUPPRESSION D'ARTICLES
        function setupRemoveButtons() {
            const removeButtons = document.querySelectorAll('.btn-remove-cart, .remove-btn');
            
            console.log(`🔍 ${removeButtons.length} boutons de suppression trouvés`);

            removeButtons.forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    const jewelId = this.dataset.jewelId;
                    console.log(`🗑️ Suppression bijou ID: ${jewelId}`);

                    if (!jewelId) {
                        showNotification('Erreur: impossible d\'identifier le produit', 'error');
                        return;
                    }

                    // Confirmation élégante
                    const itemName = this.closest('.cart-item').querySelector('h3 a').textContent || this.closest('.cart-item').querySelector('h3').textContent;
                    const confirmMessage = `Supprimer "${itemName}" du panier ?`;
                    
                    if (!confirm(confirmMessage)) {
                        return;
                    }

                    const originalHTML = this.innerHTML;
                    this.disabled = true;
                    this.innerHTML = '<div class="spinner"></div>';

                    try {
                        const response = await fetch(`/panier/supprimer/${jewelId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        const data = await response.json();

                        if (data.success) {
                            const itemElement = this.closest('.cart-item');
                            
                            if (itemElement) {
                                // Animation de suppression améliorée
                                itemElement.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
                                itemElement.style.opacity = '0';
                                itemElement.style.transform = 'translateX(-100%) scale(0.8)';
                                
                                setTimeout(() => {
                                    itemElement.remove();
                                    
                                    const remainingItems = document.querySelectorAll('.cart-item');
                                    if (remainingItems.length === 0) {
                                        setTimeout(() => window.location.reload(), 500);
                                    } else {
                                        recalculateCartTotals();
                                        updateItemCounts(remainingItems.length);
                                    }
                                }, 400);
                            }

                            updateCartCounter(data.cartCount || 0);
                            showNotification(data.message || 'Article supprimé', 'success');

                        } else {
                            throw new Error(data.message || 'Erreur de suppression');
                        }

                    } catch (error) {
                        console.error('❌ Erreur:', error);
                        showNotification(error.message || 'Erreur de suppression', 'error');
                        this.disabled = false;
                        this.innerHTML = originalHTML;
                    }
                });
            });
        }

        // 🔄 MODIFICATION DE QUANTITÉ
        function setupQuantityControls() {
            // Boutons + et -
            document.querySelectorAll('.qty-btn').forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    const input = this.parentElement.querySelector('.qty-input');
                    const jewelId = this.dataset.jewelId;
                    const isIncrease = this.classList.contains('increase-qty');
                    const currentValue = parseInt(input.value);
                    const maxValue = parseInt(input.max);
                    
                    let newValue;
                    if (isIncrease && currentValue < maxValue) {
                        newValue = currentValue + 1;
                    } else if (!isIncrease && currentValue > 1) {
                        newValue = currentValue - 1;
                    } else {
                        return;
                    }
                    
                    input.value = newValue;
                    await updateQuantity(jewelId, newValue);
                });
            });

            // Inputs directs
            document.querySelectorAll('.qty-input').forEach(input => {
                let debounceTimer;
                
                input.addEventListener('input', function() {
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(async () => {
                        const jewelId = this.dataset.jewelId;
                        const newQuantity = parseInt(this.value);
                        if (newQuantity > 0) {
                            await updateQuantity(jewelId, newQuantity);
                        }
                    }, 500);
                });
            });
        }

        // Fonction pour mettre à jour la quantité avec animation
        async function updateQuantity(jewelId, newQuantity) {
            if (!jewelId || isNaN(newQuantity) || newQuantity < 1) {
                return;
            }

            const itemElement = document.querySelector(`.cart-item[data-jewel-id="${jewelId}"]`);
            
            if (itemElement) {
                itemElement.classList.add('pulse-animation');
                setTimeout(() => itemElement.classList.remove('pulse-animation'), 300);
            }

            try {
                const response = await fetch('/panier/modifier', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        jewelId: parseInt(jewelId),
                        quantity: newQuantity
                    })
                });

                const data = await response.json();

                if (data.success) {
                    updateCartCounter(data.cartCount || 0);
                    recalculateCartTotals();
                    showNotification('Quantité mise à jour', 'success');
                    
                    // Mettre à jour les boutons +/-
                    updateQuantityButtons(jewelId, newQuantity);
                    
                } else {
                    throw new Error(data.message || 'Erreur mise à jour');
                }

            } catch (error) {
                console.error('❌ Erreur modification quantité:', error);
                showNotification(error.message || 'Erreur de modification', 'error');
            }
        }

        // Mettre à jour les boutons de quantité
        function updateQuantityButtons(jewelId, newQuantity) {
            const input = document.querySelector(`.qty-input[data-jewel-id="${jewelId}"]`);
            
            if (input) {
                const qtyControls = input.parentElement;
                const decreaseBtn = qtyControls.querySelector('.decrease-qty');
                const increaseBtn = qtyControls.querySelector('.increase-qty');
                const maxQuantity = parseInt(input.max);
                
                if (decreaseBtn) decreaseBtn.disabled = newQuantity <= 1;
                if (increaseBtn) increaseBtn.disabled = newQuantity >= maxQuantity;
            }
        }

        // 🧮 RECALCUL DES TOTAUX
        function recalculateCartTotals() {
            let subtotal = 0;
            let itemCount = 0;

            document.querySelectorAll('.cart-item').forEach(item => {
                const priceElement = item.querySelector('.item-price-display');
                const quantityElement = item.querySelector('.qty-input');
                const totalElement = item.querySelector('.item-total-price');
                
                if (priceElement && quantityElement) {
                    const price = parseFloat(priceElement.dataset.price);
                    const quantity = parseInt(quantityElement.value);
                    
                    if (!isNaN(price) && !isNaN(quantity)) {
                        const itemTotal = price * quantity;
                        subtotal += itemTotal;
                        itemCount += quantity;
                        
                        // Animation du total mis à jour
                        if (totalElement) {
                            totalElement.textContent = itemTotal.toFixed(2);
                            totalElement.parentElement.classList.add('pulse-animation');
                            setTimeout(() => {
                                totalElement.parentElement.classList.remove('pulse-animation');
                            }, 300);
                        }
                    }
                }
            });

            // Mettre à jour l'affichage avec animations
            updateSummaryWithAnimation(subtotal, itemCount);
        }

        // Mettre à jour le résumé avec animation
        function updateSummaryWithAnimation(subtotal, itemCount) {
            const subtotalElement = document.querySelector('#subtotal');
            const shippingElement = document.querySelector('#shipping');
            const totalElement = document.querySelector('#total');

            const shippingFee = subtotal >= 50 ? 0 : 5.90;
            const total = subtotal + shippingFee;

            if (subtotalElement) {
                subtotalElement.textContent = `${subtotal.toFixed(2)} €`;
                subtotalElement.classList.add('pulse-animation');
                setTimeout(() => subtotalElement.classList.remove('pulse-animation'), 300);
            }
            
            if (shippingElement) {
                if (shippingFee === 0) {
                    shippingElement.innerHTML = '<span style="color: var(--success); font-weight: 600;">Gratuit ✓</span>';
                } else {
                    shippingElement.textContent = `${shippingFee.toFixed(2)} €`;
                }
            }
            
            if (totalElement) {
                totalElement.textContent = `${total.toFixed(2)} €`;
                totalElement.classList.add('pulse-animation');
                setTimeout(() => totalElement.classList.remove('pulse-animation'), 300);
            }

            updateCartCounter(itemCount);
        }

        // Mettre à jour les compteurs d'articles
        function updateItemCounts(count) {
            const itemCount = document.getElementById('item-count');
            const itemsCount = document.getElementById('items-count');
            if (itemCount) itemCount.textContent = count;
            if (itemsCount) itemsCount.textContent = count;
        }

        // 🧹 VIDER LE PANIER
        function setupClearCartButton() {
            const clearButton = document.querySelector('#clear-cart');
            
            if (clearButton) {
                clearButton.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    if (!confirm('Vider complètement le panier ?')) {
                        return;
                    }

                    const originalHTML = this.innerHTML;
                    this.disabled = true;
                    this.innerHTML = '<div class="spinner"></div> Vidage...';

                    try {
                        const response = await fetch('/panier/vider', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        const data = await response.json();

                        if (data.success) {
                            showNotification('Panier vidé avec succès', 'success');
                            updateCartCounter(0);
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            throw new Error(data.message || 'Erreur vidage');
                        }

                    } catch (error) {
                        console.error('❌ Erreur vidage:', error);
                        showNotification(error.message || 'Erreur vidage', 'error');
                        this.disabled = false;
                        this.innerHTML = originalHTML;
                    }
                });
            }
        }

        // 🎠 GESTION DU CAROUSEL
        function setupCarousel() {
            const carousel = document.getElementById('products-carousel');
            const prevBtn = document.getElementById('carousel-prev');
            const nextBtn = document.getElementById('carousel-next');
            const dotsContainer = document.getElementById('carousel-dots');
            
            if (!carousel) return;

            const cards = carousel.querySelectorAll('.product-card');
            const totalCards = cards.length;
            
            if (totalCards <= 2) {
                // Pas besoin de carousel si 2 cartes ou moins
                if (prevBtn) prevBtn.style.display = 'none';
                if (nextBtn) nextBtn.style.display = 'none';
                if (dotsContainer) dotsContainer.style.display = 'none';
                return;
            }

            let currentIndex = 0;
            let cardsPerView = window.innerWidth >= 768 ? 3 : 2;
            const maxIndex = Math.max(0, totalCards - cardsPerView);
            
            // Créer les dots
            function createDots() {
                if (!dotsContainer) return;
                dotsContainer.innerHTML = '';
                const numDots = maxIndex + 1;
                
                for (let i = 0; i <= maxIndex; i++) {
                    const dot = document.createElement('div');
                    dot.className = `carousel-dot ${i === 0 ? 'active' : ''}`;
                    dot.addEventListener('click', () => goToSlide(i));
                    dotsContainer.appendChild(dot);
                }
            }
            
            // Aller à une slide
            function goToSlide(index) {
                currentIndex = Math.max(0, Math.min(maxIndex, index));
                const cardWidth = cards[0].offsetWidth + 16; // width + gap
                carousel.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
                
                // Mettre à jour les dots
                const dots = dotsContainer?.querySelectorAll('.carousel-dot');
                dots?.forEach((dot, i) => {
                    dot.classList.toggle('active', i === currentIndex);
                });
                
                // Mettre à jour les boutons
                if (prevBtn) prevBtn.disabled = currentIndex === 0;
                if (nextBtn) nextBtn.disabled = currentIndex === maxIndex;
            }
            
            // Navigation
            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    if (currentIndex > 0) {
                        goToSlide(currentIndex - 1);
                    }
                });
            }
            
            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    if (currentIndex < maxIndex) {
                        goToSlide(currentIndex + 1);
                    }
                });
            }
            
            // Touch/swipe pour mobile
            let startX = 0;
            let isDragging = false;
            
            carousel.addEventListener('touchstart', (e) => {
                startX = e.touches[0].clientX;
                isDragging = true;
            });
            
            carousel.addEventListener('touchmove', (e) => {
                if (!isDragging) return;
                e.preventDefault();
            });
            
            carousel.addEventListener('touchend', (e) => {
                if (!isDragging) return;
                isDragging = false;
                
                const endX = e.changedTouches[0].clientX;
                const diff = startX - endX;
                
                if (Math.abs(diff) > 50) { // Seuil minimum pour swipe
                    if (diff > 0 && currentIndex < maxIndex) {
                        goToSlide(currentIndex + 1);
                    } else if (diff < 0 && currentIndex > 0) {
                        goToSlide(currentIndex - 1);
                    }
                }
            });
            
            // Responsive
            function handleResize() {
                const newCardsPerView = window.innerWidth >= 768 ? 3 : 2;
                if (newCardsPerView !== cardsPerView) {
                    cardsPerView = newCardsPerView;
                    const newMaxIndex = Math.max(0, totalCards - cardsPerView);
                    
                    if (currentIndex > newMaxIndex) {
                        currentIndex = newMaxIndex;
                    }
                    
                    createDots();
                    goToSlide(currentIndex);
                }
            }
            
            window.addEventListener('resize', handleResize);
            
            // Initialiser
            createDots();
            goToSlide(0);
        }

        // 🎫 GESTION DES CODES PROMO
        function setupPromoCode() {
            const applyBtn = document.getElementById('apply-promo');
            const promoInput = document.getElementById('promo-code');
            const promoMessage = document.getElementById('promo-message');
            const removePromoBtn = document.getElementById('remove-promo');

            // Appliquer un code promo
            if (applyBtn && promoInput) {
                applyBtn.addEventListener('click', async function() {
                    const code = promoInput.value.trim();
                    
                    if (!code) {
                        showPromoMessage('Veuillez saisir un code promo', 'error');
                        return;
                    }

                    const originalHTML = this.innerHTML;
                    this.disabled = true;
                    this.innerHTML = '<div class="spinner"></div> Vérification...';

                    try {
                        const response = await fetch('/appliquer-code-promo', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ code })
                        });

                        const data = await response.json();

                        if (data.success) {
                            showPromoMessage(data.message, 'success');
                            setTimeout(() => {
                                window.location.reload();
                            }, 1500);
                        } else {
                            showPromoMessage(data.message, 'error');
                            this.disabled = false;
                            this.innerHTML = originalHTML;
                        }

                    } catch (error) {
                        console.error('❌ Erreur code promo:', error);
                        showPromoMessage('Erreur lors de l\'application du code', 'error');
                        this.disabled = false;
                        this.innerHTML = originalHTML;
                    }
                });

                // Appliquer avec Entrée
                promoInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        applyBtn.click();
                    }
                });
            }

            // Retirer un code promo
            if (removePromoBtn) {
                removePromoBtn.addEventListener('click', async function() {
                    if (!confirm('Retirer le code promo ?')) {
                        return;
                    }

                    try {
                        const response = await fetch('/retirer-code-promo', {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        const data = await response.json();

                        if (data.success) {
                            showNotification('Code promo retiré', 'success');
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            showNotification('Erreur lors de la suppression', 'error');
                        }

                    } catch (error) {
                        console.error('❌ Erreur suppression promo:', error);
                        showNotification('Erreur lors de la suppression', 'error');
                    }
                });
            }
        }

        // Afficher un message promo
        function showPromoMessage(message, type) {
            const promoMessage = document.getElementById('promo-message');
            if (promoMessage) {
                promoMessage.className = `promo-message ${type}`;
                promoMessage.textContent = message;
                promoMessage.style.display = 'block';

                if (type === 'error') {
                    setTimeout(() => {
                        promoMessage.style.display = 'none';
                    }, 5000);
                }
            }
        }

        // 🚀 FONCTION CHECKOUT
        window.proceedToCheckout = function() {
            console.log('🛒 Procédure de checkout initiée');
            
            // Vérifier s'il y a des articles dans le panier
            const cartItems = document.querySelectorAll('.cart-item');
            if (cartItems.length === 0) {
                showNotification('Votre panier est vide', 'error');
                return;
            }
            
            // Rediriger vers le récapitulatif de commande
            window.location.href = '/commande/recapitulatif';
        };

        // 🚀 INITIALISATION
        setupRemoveButtons();
        setupQuantityControls();
        setupClearCartButton();
        setupCarousel();
        setupPromoCode();

        // Stocker la page actuelle comme précédente quand on navigue
        document.querySelectorAll('a:not([href^="/panier"])').forEach(link => {
            link.addEventListener('click', () => {
                localStorage.setItem('previousPage', window.location.href);
            });
        });

        console.log('✅ Panier modernisé initialisé avec succès');
    });
    </script>

