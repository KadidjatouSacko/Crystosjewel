<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --rose-gold: #b76e79;
            --rose-gold-dark: #a05d68;
            --rose-gold-light: #d4a5b0;
            --cream: #faf8f5;
            --light-gray: #f8f9fa;
            --dark-text: #2c3e50;
            --border-light: #e9ecef;
            --shadow-soft: 0 2px 10px rgba(183, 110, 121, 0.1);
            --shadow-medium: 0 8px 25px rgba(183, 110, 121, 0.15);
            --shadow-strong: 0 15px 35px rgba(183, 110, 121, 0.2);
            --transition: all 0.3s ease;
            --border-radius: 15px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--light-gray);
            color: var(--dark-text);
            line-height: 1.6;
        }

        /* ===== BANNIÈRES DYNAMIQUES ===== */
        .banners-container {
            margin-bottom: 40px;
        }

        .banner {
            border-radius: var(--border-radius);
            padding: 40px 30px;
            margin-bottom: 20px;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
            background-attachment: fixed;
        }

        .banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="sparkle" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="white" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23sparkle)"/></svg>');
            opacity: 0.1;
        }

        .banner-main {
            background: linear-gradient(135deg, var(--rose-gold) 0%, var(--rose-gold-dark) 100%);
            padding: 60px 30px;
        }

        .banner-promotion {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            padding: 30px;
        }

        .banner-nouveau {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            padding: 30px;
        }

        .banner-stock {
            background: linear-gradient(135deg, #e67e22 0%, #d68910 100%);
            padding: 30px;
        }

        .banner-content {
            position: relative;
            z-index: 1;
        }

        .banner h1, .banner h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .banner-main h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .banner h2 {
            font-size: 1.8rem;
        }

        .banner p {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .banner-link {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .banner-link:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
            transform: translateY(-2px);
        }

        /* ===== SECTION FILTRES AVANCÉS ===== */
        .filters-section {
            background: white;
            border-radius: var(--border-radius);
            padding: 30px;
            margin-bottom: 40px;
            box-shadow: var(--shadow-soft);
            border: 1px solid var(--border-light);
        }

        .filters-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--light-gray);
        }

        .filters-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--dark-text);
            margin: 0;
        }

        .results-count {
            font-size: 1rem;
            color: var(--rose-gold);
            font-weight: 500;
        }

        .filters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 25px;
            margin-bottom: 25px;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
        }

        .filter-label {
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--dark-text);
            font-size: 0.95rem;
        }

        .filter-select, .filter-input {
            padding: 12px 15px;
            border: 2px solid var(--border-light);
            border-radius: 10px;
            font-size: 0.9rem;
            transition: var(--transition);
            background: white;
        }

        .filter-select:focus, .filter-input:focus {
            outline: none;
            border-color: var(--rose-gold);
            box-shadow: 0 0 0 3px rgba(183, 110, 121, 0.1);
        }

        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .checkbox-item.active {
            background: var(--rose-gold);
            color: white;
            border-color: var(--rose-gold-dark);
        }

        .checkbox-item input {
            margin-right: 8px;
            accent-color: var(--rose-gold);
        }

        .price-range {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .price-input {
            flex: 1;
            padding: 10px;
            border: 2px solid var(--border-light);
            border-radius: 8px;
            text-align: center;
        }

        .filters-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            padding-top: 20px;
            border-top: 1px solid var(--border-light);
        }

        .btn-filter {
            background: var(--rose-gold);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-filter:hover {
            background: var(--rose-gold-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }

        .btn-reset {
            background: transparent;
            color: var(--dark-text);
            border: 2px solid var(--border-light);
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-reset:hover {
            border-color: var(--rose-gold);
            color: var(--rose-gold);
        }

        /* ===== SECTION TRI ===== */
        .sort-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: white;
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-soft);
        }

        .sort-info {
            font-size: 1.1rem;
            color: var(--dark-text);
        }

        .sort-dropdown {
            position: relative;
        }

        .sort-select {
            padding: 10px 40px 10px 15px;
            border: 2px solid var(--border-light);
            border-radius: 10px;
            background: white;
            cursor: pointer;
            font-weight: 500;
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 12px center;
            background-size: 20px;
        }

        .sort-select:focus {
            outline: none;
            border-color: var(--rose-gold);
            box-shadow: 0 0 0 3px rgba(183, 110, 121, 0.1);
        }

        /* ===== GRILLE PRODUITS ===== */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .product-card {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow-soft);
            transition: var(--transition);
            position: relative;
            border: 1px solid var(--border-light);
        }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-strong);
        }

        .product-image {
            position: relative;
            width: 100%;
            height: 280px;
            overflow: hidden;
            background: var(--light-gray);
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        /* ===== BADGES DYNAMIQUES ===== */
        .product-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 2;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            backdrop-filter: blur(5px);
        }

        .badge-promotion {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            animation: pulse-promotion 2s infinite;
        }

        .badge-nouveau {
            background: linear-gradient(135deg, #27ae60, #229954);
            color: white;
        }

        .badge-bestseller {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            color: white;
        }

        .badge-stock-limite {
            background: linear-gradient(135deg, #e67e22, #d68910);
            color: white;
            animation: pulse-urgent 1.5s infinite;
        }

        .badge-populaire {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
        }

        @keyframes pulse-promotion {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        @keyframes pulse-urgent {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.08); }
        }

        /* ===== INFORMATIONS PRODUIT ===== */
        .product-info {
            padding: 20px;
        }

        .product-category {
            font-size: 0.8rem;
            color: var(--rose-gold);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .product-name {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--dark-text);
            line-height: 1.3;
        }

        .product-description {
            font-size: 0.9rem;
            color: var(--dark-text);
            opacity: 0.7;
            margin-bottom: 15px;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .price-container {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
        }

        .original-price {
            font-size: 1rem;
            color: #999;
            text-decoration: line-through;
        }

        .final-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--rose-gold);
        }

        .savings {
            font-size: 0.8rem;
            color: #27ae60;
            font-weight: 600;
            background: rgba(39, 174, 96, 0.1);
            padding: 2px 8px;
            border-radius: 12px;
        }

        .product-actions {
            display: flex;
            gap: 10px;
        }

        .btn-primary {
            flex: 1;
            background: var(--rose-gold);
            border: none;
            padding: 12px 15px;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-primary:hover {
            background: var(--rose-gold-dark);
            transform: translateY(-2px);
            color: white;
        }

        .btn-wishlist {
            background: transparent;
            border: 2px solid var(--border-light);
            padding: 12px;
            border-radius: 10px;
            color: var(--dark-text);
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-wishlist:hover {
            border-color: var(--rose-gold);
            color: var(--rose-gold);
            background: rgba(183, 110, 121, 0.1);
        }

        /* ===== PAGINATION ===== */
        .pagination-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }

        .pagination {
            display: flex;
            gap: 10px;
            align-items: center;
            background: white;
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-soft);
        }

        .page-btn {
            padding: 12px 16px;
            border: 2px solid var(--border-light);
            background: white;
            color: var(--dark-text);
            text-decoration: none;
            border-radius: 8px;
            transition: var(--transition);
            font-weight: 500;
            min-width: 44px;
            text-align: center;
        }

        .page-btn:hover, .page-btn.active {
            border-color: var(--rose-gold);
            background: var(--rose-gold);
            color: white;
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* ===== ÉTAT VIDE ===== */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-soft);
        }

        .empty-icon {
            font-size: 4rem;
            color: var(--rose-gold);
            margin-bottom: 20px;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--dark-text);
        }

        .empty-text {
            color: var(--dark-text);
            opacity: 0.7;
            margin-bottom: 20px;
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 768px) {
            .banner-main h1 {
                font-size: 2.5rem;
            }
            
            .banner h2 {
                font-size: 1.5rem;
            }
            
            .filters-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .sort-section {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }
            
            .products-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 20px;
            }
            
            .filters-actions {
                flex-direction: column;
            }
            
            .checkbox-group {
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            .banner {
                padding: 30px 20px;
            }
            
            .filters-section {
                padding: 20px;
            }
            
            .products-grid {
                grid-template-columns: 1fr;
            }
            
            .pagination {
                flex-wrap: wrap;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbarre.ejs') %>

    <!-- Bannières Dynamiques -->
    <div class="container">
        <div class="banners-container">
            <% banners.forEach(banner => { %>
                <div class="banner <%= banner.class %>" <% if (banner.background) { %>style="background: <%= banner.background %>"<% } %>>
                    <div class="banner-content">
                        <% if (banner.type === 'main') { %>
                            <h1><%= banner.title %></h1>
                        <% } else { %>
                            <h2><%= banner.title %></h2>
                        <% } %>
                        <p><%= banner.subtitle %></p>
                        <% if (banner.link) { %>
                            <a href="<%= banner.link %>" class="banner-link">Découvrir</a>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Section Filtres Avancés -->
        <div class="filters-section">
            <div class="filters-header">
                <h3 class="filters-title">
                    <i class="fas fa-filter"></i> Filtrer & Trier
                </h3>
                <div class="results-count">
                    <strong><%= pagination.totalJewels %></strong> bijou<%= pagination.totalJewels > 1 ? 'x' : '' %> trouvé<%= pagination.totalJewels > 1 ? 's' : '' %>
                </div>
            </div>

            <form method="GET" action="<%= baseRoute %>" id="filtersForm">
                <div class="filters-grid">
                    <!-- Filtre Matière -->
                    <% if (availableFilters.materials.length > 0) { %>
                    <div class="filter-group">
                        <label class="filter-label">Matière</label>
                        <div class="checkbox-group">
                            <% availableFilters.materials.forEach(material => { %>
                                <label class="checkbox-item <%= filters.matiere.includes(material.name) ? 'active' : '' %>">
                                    <input type="checkbox" name="matiere" value="<%= material.name %>" 
                                           <%= filters.matiere.includes(material.name) ? 'checked' : '' %>>
                                    <%= material.name %> (<%= material.count %>)
                                </label>
                            <% }); %>
                        </div>
                    </div>
                    <% } %>

                    <!-- Filtre Taille -->
                    <% if (availableFilters.sizes.length > 0) { %>
                    <div class="filter-group">
                        <label class="filter-label">Taille</label>
                        <div class="checkbox-group">
                            <% availableFilters.sizes.forEach(size => { %>
                                <label class="checkbox-item <%= filters.taille.includes(size.name) ? 'active' : '' %>">
                                    <input type="checkbox" name="taille" value="<%= size.name %>" 
                                           <%= filters.taille.includes(size.name) ? 'checked' : '' %>>
                                    <%= size.name %> (<%= size.count %>)
                                </label>
                            <% }); %>
                        </div>
                    </div>
                    <% } %>

                    <!-- Filtre Type -->
                    <% if (availableFilters.types.length > 0) { %>
                    <div class="filter-group">
                        <label class="filter-label">Type</label>
                        <div class="checkbox-group">
                            <% availableFilters.types.forEach(type => { %>
                                <label class="checkbox-item <%= filters.type.includes(type.name) ? 'active' : '' %>">
                                    <input type="checkbox" name="type" value="<%= type.name %>" 
                                           <%= filters.type.includes(type.name) ? 'checked' : '' %>>
                                    <%= type.name %> (<%= type.count %>)
                                </label>
                            <% }); %>
                        </div>
                    </div>
                    <% } %>

                    <!-- Filtre Prix -->
                    <div class="filter-group">
                        <label class="filter-label">Prix (€)</label>
                        <div class="price-range">
                            <input type="number" name="prix_min" class="price-input" 
                                   placeholder="Min" value="<%= filters.prix_min || '' %>"
                                   min="<%= availableFilters.priceRange.min %>"
                                   max="<%= availableFilters.priceRange.max %>">
                            <span>-</span>
                            <input type="number" name="prix_max" class="price-input" 
                                   placeholder="Max" value="<%= filters.prix_max || '' %>"
                                   min="<%= availableFilters.priceRange.min %>"
                                   max="<%= availableFilters.priceRange.max %>">
                        </div>
                    </div>

                    <!-- Filtre Disponibilité -->
                    <div class="filter-group">
                        <label class="filter-label">Disponibilité</label>
                        <select name="disponibilite" class="filter-select">
                            <option value="">Tous</option>
                            <% if (availableFilters.availability.in_stock > 0) { %>
                                <option value="en_stock" <%= filters.disponibilite === 'en_stock' ? 'selected' : '' %>>
                                    En stock (<%= availableFilters.availability.in_stock %>)
                                </option>
                            <% } %>
                            <% if (availableFilters.availability.on_sale > 0) { %>
                                <option value="en_promo" <%= filters.disponibilite === 'en_promo' ? 'selected' : '' %>>
                                    En promotion (<%= availableFilters.availability.on_sale %>)
                                </option>
                            <% } %>
                            <% if (availableFilters.availability.new_items > 0) { %>
                                <option value="nouveau" <%= filters.disponibilite === 'nouveau' ? 'selected' : '' %>>
                                    Nouveautés (<%= availableFilters.availability.new_items %>)
                                </option>
                            <% } %>
                        </select>
                    </div>

                    <!-- Tri -->
                    <div class="filter-group">
                        <label class="filter-label">Trier par</label>
                        <select name="sort" class="filter-select">
                            <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>Plus récents</option>
                            <option value="oldest" <%= filters.sort === 'oldest' ? 'selected' : '' %>>Plus anciens</option>
                            <option value="price_asc" <%= filters.sort === 'price_asc' ? 'selected' : '' %>>Prix croissant</option>
                            <option value="price_desc" <%= filters.sort === 'price_desc' ? 'selected' : '' %>>Prix décroissant</option>
                            <option value="name_asc" <%= filters.sort === 'name_asc' ? 'selected' : '' %>>Nom A-Z</option>
                            <option value="name_desc" <%= filters.sort === 'name_desc' ? 'selected' : '' %>>Nom Z-A</option>
                            <option value="popular" <%= filters.sort === 'popular' ? 'selected' : '' %>>Plus populaires</option>
                            <option value="bestseller" <%= filters.sort === 'bestseller' ? 'selected' : '' %>>Meilleures ventes</option>
                        </select>
                    </div>
                </div>

                <div class="filters-actions">
                    <button type="submit" class="btn-filter">
                        <i class="fas fa-search"></i> Appliquer les filtres
                    </button>
                    <a href="<%= baseRoute %>" class="btn-reset">
                        <i class="fas fa-undo"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>

        <!-- Grille des Produits -->
        <% if (jewels && jewels.length > 0) { %>
            <div class="products-grid">
                <% jewels.forEach(jewel => { %>
                    <div class="product-card">
                        <!-- Badge dynamique -->
                        <% if (jewel.badge) { %>
                            <div class="product-badge <%= jewel.badge.class %>">
                                <%= jewel.badge.text %>
                            </div>
                        <% } %>
                        
                        <!-- Image produit -->
                        <div class="product-image">
                            <img src="/uploads/jewels/<%= jewel.image %>" 
                                 alt="<%= jewel.name %>"
                                 onerror="this.src='/images/no-image.jpg'">
                        </div>
                        
                        <!-- Informations produit -->
                        <div class="product-info">
                            <div class="product-category">
                                <%= jewel.category ? jewel.category.name : 'Bijou' %>
                            </div>
                            
                            <h4 class="product-name"><%= jewel.name %></h4>
                            
                            <% if (jewel.description) { %>
                                <p class="product-description">
                                    <%= jewel.description %>
                                </p>
                            <% } %>
                            
                            <!-- Prix -->
                            <div class="price-container">
                                <% if (jewel.hasDiscount) { %>
                                    <span class="original-price"><%= jewel.formattedOriginalPrice %></span>
                                    <span class="final-price"><%= jewel.formattedFinalPrice %></span>
                                    <span class="savings">-<%= jewel.formattedSavings %></span>
                                <% } else { %>
                                    <span class="final-price"><%= jewel.formattedFinalPrice %></span>
                                <% } %>
                            </div>
                            
                            <!-- Actions -->
                            <div class="product-actions">
                                <a href="/bijoux/<%= jewel.slug || jewel.id %>" class="btn-primary">
                                    <i class="fas fa-eye"></i> Voir le bijou
                                </a>
                                <button class="btn-wishlist" onclick="addToWishlist(<%= jewel.id %>)">
                                    <i class="far fa-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- État vide -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3 class="empty-title">Aucun bijou trouvé</h3>
                <p class="empty-text">
                    Essayez de modifier vos filtres ou explorez d'autres catégories.
                </p>
                <a href="<%= baseRoute %>" class="btn-primary" style="display: inline-block; text-decoration: none; margin-top: 20px;">
                    Voir tous les bijoux
                </a>
            </div>
        <% } %>
        
        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
            <div class="pagination-wrapper">
                <div class="pagination">
                    <% if (pagination.hasPrevPage) { %>
                        <a href="?page=<%= pagination.prevPage %>&<%= new URLSearchParams(req.query).toString().replace(/page=\d+&?/, '') %>" 
                           class="page-btn">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                    
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <% if (i === pagination.currentPage) { %>
                            <span class="page-btn active"><%= i %></span>
                        <% } else if (i === 1 || i === pagination.totalPages || (i >= pagination.currentPage - 2 && i <= pagination.currentPage + 2)) { %>
                            <a href="?page=<%= i %>&<%= new URLSearchParams(req.query).toString().replace(/page=\d+&?/, '') %>" 
                               class="page-btn"><%= i %></a>
                        <% } else if (i === pagination.currentPage - 3 || i === pagination.currentPage + 3) { %>
                            <span class="page-btn">...</span>
                        <% } %>
                    <% } %>
                    
                    <% if (pagination.hasNextPage) { %>
                        <a href="?page=<%= pagination.nextPage %>&<%= new URLSearchParams(req.query).toString().replace(/page=\d+&?/, '') %>" 
                           class="page-btn">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Gestion des filtres
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit lors des changements de tri
            const sortSelect = document.querySelector('select[name="sort"]');
            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    document.getElementById('filtersForm').submit();
                });
            }

            // Gestion des checkboxes avec style
            const checkboxes = document.querySelectorAll('.checkbox-item input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const item = this.closest('.checkbox-item');
                    if (this.checked) {
                        item.classList.add('active');
                    } else {
                        item.classList.remove('active');
                    }
                });
            });

            // Animation des cartes au scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observer toutes les cartes produits
            document.querySelectorAll('.product-card').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(card);
            });
        });

        // Fonction pour ajouter aux favoris
        function addToWishlist(jewelId) {
            // Implémenter la logique d'ajout aux favoris
            console.log('Ajout aux favoris:', jewelId);
            
            // Animation du bouton
            const btn = event.target.closest('.btn-wishlist');
            btn.innerHTML = '<i class="fas fa-heart"></i>';
            btn.style.color = '#e74c3c';
            
            // Vous pouvez ajouter ici votre logique AJAX
        }

        // Filtres responsifs pour mobile
        function toggleMobileFilters() {
            const filtersSection = document.querySelector('.filters-section');
            filtersSection.classList.toggle('mobile-open');
        }
    </script>
</body>
