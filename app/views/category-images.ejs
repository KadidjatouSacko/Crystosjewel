    document.addEventListener('DOMContentLoaded', function() {
        console.log('üöÄ Initialisation de l\'interface...');
        
        // Animation des cartes
        const cards = document.querySelectorAll('.category-card');
        cards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
        });

        // Gestion des ratios d'aspect
        const aspectRatioButtons = document.querySelectorAll('.aspect-ratio-btn');
        aspectRatioButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                // Animation de transition
                aspectRatioButtons.forEach(b => {
                    b.classList.remove('active');
                    b.style.transform = 'scale(1)';
                });
                
                this.classList.add('active');
                this.style.transform = 'scale(1.05)';
                
                const ratio = this.dataset.ratio;
                if (currentCropCategoryId && croppers[currentCropCategoryId]) {
                    const aspectRatio = ratio === 'free' ? NaN : parseFloat(ratio);
                    croppers[currentCropCategoryId].setAspectRatio(aspectRatio);
                    
                    // Petit d√©lai pour l'animation puis mise √† jour de l'aper√ßu
                    setTimeout(() => {
                        updatePreview();
                    }, 200);
                }
                
                // Feedback visuel
                showNotification(`üìê Format ${this.textContent.trim()} s√©lectionn√©`, 'info');
            });
        });

        // Raccourcis clavier
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closeCropModal();
            }
        });

        // Message de bienvenue
        setTimeout(() => {
            showNotification('üíé Interface de gestion rose-gold charg√©e', 'success');
        }, 500);

        console.log('‚úÖ Interface initialis√©e avec succ√®s');
    });
