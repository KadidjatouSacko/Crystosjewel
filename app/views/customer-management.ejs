        function exportCustomers() {
            updateSelectedCustomers();
            const exportType = selectedCustomers.length > 0 ? 'selected' : 'all';
            
            const params = new URLSearchParams({
                type: exportType,
                customers: selectedCustomers.join(',')
            });

            window.open(`/admin/export-customers?${params.toString()}`, '_blank');
        }

