        // Éditer un client
        function editCustomer(customerId) {
            fetch(`/admin/customer/${customerId}/details`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        populateEditForm(data.customer);
                        openModal('editCustomerModal');
                    } else {
                        alert('Erreur lors du chargement des données du client');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Erreur lors du chargement des données du client');
                });
        }

        // Remplir le formulaire d'édition
        function populateEditForm(customer) {
            document.getElementById('editCustomerId').value = customer.id;
            document.getElementById('editFirstName').value = customer.first_name || '';
            document.getElementById('editLastName').value = customer.last_name || '';
            document.getElementById('editEmail').value = customer.email || '';
            document.getElementById('editPhone').value = customer.phone || '';
            document.getElementById('editAddress').value = customer.address || '';
            document.getElementById('editNewsletterOpt').checked = customer.marketing_opt_in || false;
            document.getElementById('editEmailNotifications').checked = customer.email_notifications || false;
        }

        // Sauvegarder les modifications du client
        function saveCustomer(event) {
            event.preventDefault();
            
            const formData = new FormData(event.target);
            const customerData = {
                customerId: formData.get('customerId'),
                firstName: formData.get('firstName'),
                lastName: formData.get('lastName'),
                email: formData.get('email'),
                phone: formData.get('phone'),
                address: formData.get('address'),
                newsletterOpt: formData.has('newsletterOpt'),
                emailNotifications: formData.has('emailNotifications')
            };

            fetch('/admin/customer/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(customerData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Client mis à jour avec succès');
                    closeModal('editCustomerModal');
                    location.reload(); // Recharger la page pour voir les modifications
                } else {
                    alert('Erreur lors de la mise à jour: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Erreur lors de la mise à jour du client');
            });
        }

        // Envoyer un email à un client spécifique
        function emailCustomer(email) {
            document.getElementById('emailRecipients').value = 'selected';
            // Simuler la sélection de ce client spécifique
            openEmailModal();
        }

        // Ouvrir le modal d'email
        function openEmailModal() {
            updateSelectedCustomers();
            if (document.getElementById('emailRecipients').value === 'selected' && selectedCustomers.length === 0) {
                alert('Veuillez sélectionner au moins un client');
                return;
            }
            openModal('emailModal');
        }

        // Sélectionner un template d'email
        function selectEmailTemplate(template) {
            currentTemplate = template;
            
            // Retirer la classe active de tous les templates
            document.querySelectorAll('.template-card').forEach(card => {
                card.classList.remove('active');
            });
            
            // Ajouter la classe active au template sélectionné
            document.querySelector(`[data-template="${template}"]`).classList.add('active');
            
            // Mettre à jour l'aperçu
            updatePreview();
        }

        // Mettre à jour l'aperçu de l'email
        function updatePreview() {
            const title = document.getElementById('emailTitle').value || 'Titre de l\'email';
            const content = document.getElementById('emailContent').value || 'Votre message apparaîtra ici...';
            const discount = document.getElementById('emailDiscount').value;
            const promoCode = document.getElementById('emailPromoCode').value;

            document.getElementById('previewTitle').textContent = title;
            document.getElementById('previewMessage').innerHTML = content.replace(/\n/g, '<br>');

            const promoDiv = document.getElementById('previewPromo');
            if (discount && discount > 0 && promoCode) {
                document.getElementById('previewCode').textContent = promoCode;
                promoDiv.style.display = 'block';
            } else {
                promoDiv.style.display = 'none';
            }
        }

        // Envoyer un email en masse
        function sendBulkEmail(event) {
            event.preventDefault();
            
            const formData = new FormData(event.target);
            const emailData = {
                recipients: document.getElementById('emailRecipients').value,
                selectedCustomers: selectedCustomers,
                template: currentTemplate,
                subject: formData.get('subject'),
                title: formData.get('title'),
                content: formData.get('content'),
                discount: formData.get('discount'),
                promoCode: formData.get('promoCode')
            };

            // Confirmer l'envoi
            const recipientCount = emailData.recipients === 'selected' ? selectedCustomers.length : 
                                 emailData.recipients === 'all' ? allCustomers.length : 'certains';
            
            if (!confirm(`Êtes-vous sûr de vouloir envoyer cet email à ${recipientCount} client(s) ?`)) {
                return;
            }

            // Désactiver le bouton d'envoi
            const sendBtn = document.getElementById('sendEmail');
            sendBtn.disabled = true;
            sendBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Envoi en cours...';

            fetch('/admin/send-bulk-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(emailData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(`Email envoyé avec succès à ${data.sentCount} client(s)`);
                    closeModal('emailModal');
                    document.getElementById('emailForm').reset();
                    selectEmailTemplate('newsletter'); // Reset template
                    updatePreview();
                } else {
                    alert('Erreur lors de l\'envoi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Erreur lors de l\'envoi des emails');
            })
            .finally(() => {
                // Réactiver le bouton
                sendBtn.disabled = false;
                sendBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Envoyer';
            });
        }

