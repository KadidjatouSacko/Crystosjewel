            min-height: 100vh;
        }

        /* Header Mobile */
        .mobile-header {
            display: none;
            background: var(--primary);
            color: white;
            padding: 1rem;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: var(--shadow-md);
