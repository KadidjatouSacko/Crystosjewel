        :root {
            --primary: #E8B4B8;
            --primary-dark: #B8868A;
            --primary-light: #F5D7DA;
            --secondary: #FDF9F6;
            --accent: #D4A5A9;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --dark: #1f2937;
            --gray-light: #f8fafc;
            --gray-medium: #64748b;
            --white: #ffffff;
            --border: #e2e8f0;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
