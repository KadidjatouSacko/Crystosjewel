            }
        }


// G√©n√©rer le contenu HTML pour la cellule tailles

  function generateSizesCellContent(sizesInfo) {
            if (!sizesInfo || !sizesInfo.hasSizeInfo) {
                return `
                    <div class="development-indicator">
                        <i class="fas fa-cog"></i>
