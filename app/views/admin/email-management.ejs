<body>
    <%- include('../partials/navbarre.ejs') %>

    <div class="page-container">
        <!-- Header -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-envelope-open-text"></i>
                Gestion des Emails
            </h1>
            <p>Créez et gérez vos campagnes d'emails avec notre éditeur avancé</p>
        </div>

        <!-- Statistiques -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <div class="stat-value"><%= stats.totalCampaigns || 0 %></div>
                <div class="stat-label">Campagnes créées</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="stat-value"><%= stats.totalSent || 0 %></div>
                <div class="stat-label">Emails envoyés</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="stat-value"><%= stats.avgOpenRate || 0 %>%</div>
                <div class="stat-label">Taux d'ouverture moyen</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div class="stat-value"><%= stats.activeTemplates || 0 %></div>
                <div class="stat-label">Templates actifs</div>
            </div>
        </div>

        <!-- Barre d'actions -->
        <div class="action-bar">
            <h3>Actions rapides</h3>
            <button onclick="openEmailEditor()" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nouvelle campagne
            </button>
        </div>

        <!-- Contenu principal -->
        <div class="content-grid">
            <!-- Zone principale -->
            <div class="main-content">
                <h3 class="section-title">
                    <i class="fas fa-rocket"></i>
                    Démarrage rapide
                </h3>
                
                <div class="quick-actions">
                    <a href="#" class="quick-action" onclick="openEmailEditor()">
                        <div class="quick-action-icon">✏️</div>
                        <div class="quick-action-title">Éditeur avancé</div>
                    </a>
                    
                    <a href="#" class="quick-action" onclick="openTemplateSelector()">
                        <div class="quick-action-icon">📄</div>
                        <div class="quick-action-title">Partir d'un template</div>
                    </a>
                    
                    <a href="#" class="quick-action" onclick="openHistory()">
                        <div class="quick-action-icon">📚</div>
                        <div class="quick-action-title">Dupliquer une campagne</div>
                    </a>
                    
                    <a href="#" class="quick-action" onclick="sendTestEmail()">
                        <div class="quick-action-icon">🧪</div>
                        <div class="quick-action-title">Envoyer un test</div>
                    </a>
                </div>

                <!-- Tableau des campagnes récentes -->
                <h3 class="section-title">
                    <i class="fas fa-history"></i>
                    Campagnes récentes
                </h3>

                <div style="overflow-x: auto;">
                    <table class="campaigns-table">
                        <thead>
                            <tr>
                                <th>Campagne</th>
                                <th>Statut</th>
                                <th>Destinataires</th>
                                <th>Ouvertures</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentEmails && recentEmails.length > 0) { %>
  <% recentEmails.forEach(campaign => { %>

                                    <tr>
                                        <td>
                                            <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 4px;">
                                                <%= campaign.subject %>
                                            </div>
                                            <div style="font-size: 12px; color: var(--text-secondary);">
                                                <%= campaign.name || 'Sans nom' %>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="status-badge status-<%= campaign.status %>">
                                                <%= campaign.status === 'sent' ? 'Envoyé' : 
                                                    campaign.status === 'draft' ? 'Brouillon' :
                                                    campaign.status === 'sending' ? 'En cours' : campaign.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <strong><%= campaign.total_recipients || 0 %></strong>
                                        </td>
                                        <td>
                                            <% const openRate = campaign.total_recipients > 0 ? Math.round((campaign.opened_count / campaign.total_recipients) * 100) : 0 %>
                                            <strong><%= campaign.opened_count || 0 %></strong>
                                            <span style="color: var(--text-secondary); font-size: 12px;">(<%= openRate %>%)</span>
                                        </td>
                                        <td style="font-size: 12px; color: var(--text-secondary);">
                                            <%= new Date(campaign.created_at).toLocaleDateString('fr-FR') %>
                                        </td>
                                        <td>
                                            <button onclick="viewCampaign(<%= campaign.id %>)" class="btn-icon btn-view" title="Voir détails">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <% if (campaign.status === 'draft') { %>
                                                <button onclick="editCampaign(<%= campaign.id %>)" class="btn-icon btn-edit" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            <% } %>
                                            <button onclick="duplicateCampaign(<%= campaign.id %>)" class="btn-icon btn-copy" title="Dupliquer">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="padding: 40px; text-align: center; color: var(--text-secondary);">
                                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 16px; display: block;"></i>
                                        <p>Aucune campagne créée pour le moment</p>
                                        <button onclick="openEmailEditor()" class="btn btn-primary" style="margin-top: 15px;">
                                            <i class="fas fa-plus"></i> Créer votre première campagne
                                        </button>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Barre latérale -->
            <div class="sidebar-content">
                <h3 class="section-title">
                    <i class="fas fa-users"></i>
                    Clients disponibles
                </h3>
                
                <div class="info-box">
                    <div class="info-row">
                        <span class="info-label">Total clients :</span>
                        <strong><%= customers ? customers.length : 0 %></strong>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Abonnés newsletter :</span>
                        <strong>
                            <% const newsletterCount = customers ? customers.filter(c => c.marketing_opt_in).length : 0 %>
                            <%= newsletterCount %>
                        </strong>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Clients VIP :</span>
                        <strong>
                            <% const vipCount = customers ? customers.filter(c => c.total_spent >= 1000).length : 0 %>
                            <%= vipCount %>
                        </strong>
                    </div>
                </div>

                <h3 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Performances
                </h3>
                
                <div style="margin-bottom: 25px;">
                    <canvas id="performanceChart" width="400" height="200"></canvas>
                </div>

                <h3 class="section-title">
                    <i class="fas fa-tools"></i>
                    Outils
                </h3>
                
                <div class="tools-section">
                    <button onclick="exportCampaigns()" class="btn btn-secondary">
                        <i class="fas fa-download"></i>
                        Exporter les campagnes
                    </button>
                    
                    <button onclick="cleanupCampaigns()" class="btn btn-warning">
                        <i class="fas fa-broom"></i>
                        Nettoyer les anciennes
                    </button>
                    
                    <button onclick="emailSettings()" class="btn" style="background: var(--accent-color); color: white;">
                        <i class="fas fa-cog"></i>
                        Paramètres emails
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Variables globales
        const emailEditor = {
            customers: <%- JSON.stringify(customers || []) %>,
            templates: <%- JSON.stringify(templates || []) %>,
            campaigns: <%- JSON.stringify(recentCampaigns || []) %>
        };

        // Fonctions principales
        function openEmailEditor() {
            window.open('/admin/emails/editor', '_blank', 'width=1400,height=900,scrollbars=yes');
        }

        function openTemplateSelector() {
            showNotification('Sélecteur de templates en cours de développement', 'info');
        }

        function openHistory() {
            window.location.href = '/admin/emails/history';
        }

        function sendTestEmail() {
            const email = prompt('Adresse email pour le test :');
            if (email && isValidEmail(email)) {
                fetch('/admin/emails/test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: email,
                        subject: 'Test depuis l\'administration',
                        content: '<h2>Email de test</h2><p>Ceci est un email de test envoyé depuis l\'interface d\'administration.</p>',
                        template: 'elegant'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification(`Email de test envoyé à ${email}`, 'success');
                    } else {
                        showNotification('Erreur lors de l\'envoi du test', 'error');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showNotification('Erreur lors de l\'envoi du test', 'error');
                });
            } else if (email) {
                showNotification('Adresse email invalide', 'error');
            }
        }

        function viewCampaign(campaignId) {
            window.location.href = `/admin/emails/campaigns/${campaignId}`;
        }

        function editCampaign(campaignId) {
            window.location.href = `/admin/emails/campaigns/${campaignId}/edit`;
        }

        function duplicateCampaign(campaignId) {
            if (confirm('Voulez-vous dupliquer cette campagne ?')) {
                fetch(`/admin/api/campaigns/${campaignId}/duplicate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Campagne dupliquée avec succès', 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification('Erreur lors de la duplication', 'error');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showNotification('Erreur lors de la duplication', 'error');
                });
            }
        }

        function exportCampaigns() {
            window.location.href = '/admin/emails/export';
        }

        function cleanupCampaigns() {
            if (confirm('Voulez-vous supprimer les campagnes de plus de 6 mois ?')) {
                fetch('/admin/api/campaigns/cleanup', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification(`${data.deletedCount} campagnes supprimées`, 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification('Erreur lors du nettoyage', 'error');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showNotification('Erreur lors du nettoyage', 'error');
                });
            }
        }

        function emailSettings() {
            window.location.href = '/admin/settings/emails';
        }

        // Graphique des performances
        function initPerformanceChart() {
            const ctx = document.getElementById('performanceChart');
            if (!ctx) return;

            const chartData = {
                labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                datasets: [{
                    label: 'Emails envoyés',
                    data: [120, 190, 300, 250, 220, 180],
                    borderColor: '#d89ab3',
                    backgroundColor: 'rgba(216, 154, 179, 0.1)',
                    tension: 0.4
                }, {
                    label: 'Taux d\'ouverture (%)',
                    data: [65, 72, 68, 75, 71, 69],
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    tension: 0.4,
                    yAxisID: 'y1'
                }]
            };

            new Chart(ctx, {
                type: 'line',
                data: chartData,
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Mois'
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Utilitaires
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const iconMap = {
                success: 'check-circle',
                error: 'exclamation-circle',
                warning: 'exclamation-triangle',
                info: 'info-circle'
            };
            
            const icon = iconMap[type] || 'info-circle';
            
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 10px;">
                    <i class="fas fa-${icon}"></i>
                    <span>${message}</span>
                </div>
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.animation = 'slideOutRight 0.3s ease forwards';
                    setTimeout(() => {
                        if (notification.parentNode) {
                            notification.parentNode.removeChild(notification);
                        }
                    }, 300);
                }
            }, 5000);
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            console.log('📧 Page gestion emails initialisée');
            initPerformanceChart();
        });
    </script>
</body>
