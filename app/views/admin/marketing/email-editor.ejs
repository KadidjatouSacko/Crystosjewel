        async function handleImageUpload(event) {
            console.log('üì∑ Upload d\'image...');
            
            try {
                const files = Array.from(event.target.files);
                if (files.length === 0) return;

                for (const file of files) {
                    if (!file.type.startsWith('image/')) {
                        showNotification('‚ö†Ô∏è Veuillez s√©lectionner des images uniquement', 'warning');
                        continue;
                    }

                    if (file.size > 5 * 1024 * 1024) {
                        showNotification('‚ö†Ô∏è Image trop grande (max 5MB)', 'warning');
                        continue;
                    }

                    const formData = new FormData();
                    formData.append('image', file);

                    const response = await fetch(`${window.EMAIL_EDITOR_CONFIG.apiEndpoint}/upload-image`, {
                        method: 'POST',
                        body: formData
                    });

                    const data = await response.json();
                    
                    if (data.success) {
                        insertImage(data.imageUrl);
                        showNotification('üì∑ Image upload√©e avec succ√®s', 'success');
                    } else {
                        throw new Error(data.message || 'Erreur upload');
