                }
                
                event.target.value = '';
                
            } catch (error) {
                console.error('‚ùå Erreur upload:', error);
                showNotification('‚ùå Erreur lors de l\'upload', 'error');
            }
        }

        function insertImage(imageUrl) {
            const emailContent = document.getElementById('emailContent');
