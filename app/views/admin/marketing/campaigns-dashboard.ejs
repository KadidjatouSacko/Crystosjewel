<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>📊 Dashboard Marketing - CrystosJewel</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        :root {
            --primary: #d89ab3;
            --primary-dark: #b794a8;
            --secondary: #8b5cf6;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --bg-primary: #f8fafc;
            --bg-secondary: #ffffff;
            --border: #e2e8f0;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --radius: 8px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .dashboard-header {
            background: var(--bg-secondary);
            border-radius: var(--radius);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .dashboard-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .dashboard-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .dashboard-actions {
            margin-top: 20px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: var(--radius);
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            text-decoration: none;
            user-select: none;
            justify-content: center;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            border: 1px solid var(--primary-dark);
        }

        .btn-success {
            background: var(--success);
            color: white;
            border: 1px solid var(--success);
        }

        .btn-info {
            background: var(--info);
            color: white;
            border: 1px solid var(--info);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--bg-secondary);
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .stat-title {
            color: var(--text-secondary);
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: white;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 14px;
        }

        .stat-trend {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-top: 10px;
            font-size: 12px;
            font-weight: 600;
        }

        .trend-up {
            color: var(--success);
        }

        .trend-down {
            color: var(--danger);
        }

        .charts-section {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: var(--bg-secondary);
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .chart-header {
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }

        .chart-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .chart-subtitle {
            color: var(--text-secondary);
            font-size: 14px;
        }

        .campaigns-section {
            background: var(--bg-secondary);
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border);
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .campaigns-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .campaigns-table th,
        .campaigns-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--border);
        }

        .campaigns-table th {
            background: var(--bg-primary);
            font-weight: 600;
            color: var(--text-secondary);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .campaigns-table tbody tr {
            transition: background-color 0.2s ease;
        }

        .campaigns-table tbody tr:hover {
            background: var(--bg-primary);
        }

        .campaign-name {
            font-weight: 600;
            color: var(--text-primary);
        }

        .campaign-subject {
            color: var(--text-secondary);
            font-size: 14px;
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .status-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-draft {
            background: rgba(100, 116, 139, 0.1);
            color: var(--text-secondary);
        }

        .status-sent {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .status-sending {
            background: rgba(59, 130, 246, 0.1);
            color: var(--info);
        }

        .metric-value {
            font-weight: 600;
            color: var(--text-primary);
        }

        .metric-rate {
            color: var(--primary);
            font-weight: 600;
        }

        .campaign-date {
            color: var(--text-secondary);
            font-size: 13px;
        }

        .campaign-actions {
            display: flex;
            gap: 8px;
        }

        .action-btn {
            padding: 6px 10px;
            border: 1px solid var(--border);
            border-radius: 4px;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .action-btn:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .pagination-btn {
            padding: 8px 12px;
            border: 1px solid var(--border);
            border-radius: 4px;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .pagination-btn:hover,
        .pagination-btn.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .pagination-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            color: var(--border);
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            z-index: 99999;
            max-width: 350px;
            animation: slideIn 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        .notification.success { background: var(--success); }
        .notification.error { background: var(--danger); }
        .notification.warning { background: var(--warning); }
        .notification.info { background: var(--info); }

        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                padding: 15px;
            }

            .charts-section {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .campaigns-table {
                font-size: 14px;
            }

            .campaigns-table th,
            .campaigns-table td {
                padding: 8px 10px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">
                <i class="fas fa-chart-bar" style="color: var(--primary);"></i>
                Dashboard Marketing
            </h1>
            <p class="dashboard-subtitle">
                Suivez les performances de vos campagnes email et analysez vos résultats
            </p>
            
            <div class="dashboard-actions">
                <a href="/admin/marketing/email-editor" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Nouvelle Campagne
                </a>
                <button class="btn btn-success" onclick="exportData()">
                    <i class="fas fa-download"></i>
                    Exporter les Données
                </button>
                <button class="btn btn-info" onclick="refreshStats()">
                    <i class="fas fa-sync-alt"></i>
                    Actualiser
                </button>
            </div>
        </div>

        <!-- Statistiques Globales -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Total Campagnes</span>
                    <div class="stat-icon" style="background: var(--primary);">
                        <i class="fas fa-paper-plane"></i>
                    </div>
                </div>
                <div class="stat-value"><%= globalStats?.total_campaigns || 0 %></div>
                <div class="stat-label">Campagnes créées</div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    +12% ce mois
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Emails Envoyés</span>
                    <div class="stat-icon" style="background: var(--success);">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
                <div class="stat-value"><%= globalStats?.total_emails_sent?.toLocaleString() || 0 %></div>
                <div class="stat-label">Emails délivrés</div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    +8% ce mois
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Taux d'Ouverture</span>
                    <div class="stat-icon" style="background: var(--info);">
                        <i class="fas fa-eye"></i>
                    </div>
                </div>
                <div class="stat-value"><%= globalStats?.global_open_rate || 0 %>%</div>
                <div class="stat-label">Moyenne générale</div>
                <div class="stat-trend <%= (globalStats?.global_open_rate || 0) >= 20 ? 'trend-up' : 'trend-down' %>">
                    <i class="fas fa-arrow-<%= (globalStats?.global_open_rate || 0) >= 20 ? 'up' : 'down' %>"></i>
                    <%= (globalStats?.global_open_rate || 0) >= 20 ? 'Excellent' : 'À améliorer' %>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-title">Taux de Clic</span>
                    <div class="stat-icon" style="background: var(--warning);">
                        <i class="fas fa-mouse-pointer"></i>
                    </div>
                </div>
                <div class="stat-value"><%= globalStats?.global_click_rate || 0 %>%</div>
                <div class="stat-label">Engagement moyen</div>
                <div class="stat-trend <%= (globalStats?.global_click_rate || 0) >= 3 ? 'trend-up' : 'trend-down' %>">
                    <i class="fas fa-arrow-<%= (globalStats?.global_click_rate || 0) >= 3 ? 'up' : 'down' %>"></i>
                    <%= (globalStats?.global_click_rate || 0) >= 3 ? 'Bon' : 'Faible' %>
                </div>
            </div>
        </div>

        <!-- Graphiques -->
        <div class="charts-section">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Performance des Campagnes</h3>
                    <p class="chart-subtitle">Évolution des taux d'ouverture et de clic</p>
                </div>
                <canvas id="performanceChart" width="400" height="200"></canvas>
            </div>

            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Répartition des Statuts</h3>
                    <p class="chart-subtitle">État actuel des campagnes</p>
                </div>
                <canvas id="statusChart" width="200" height="200"></canvas>
            </div>
        </div>

        <!-- Liste des Campagnes -->
        <div class="campaigns-section">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-list"></i>
                    Campagnes Récentes
                </h2>
                <div style="display: flex; gap: 10px;">
                    <select id="statusFilter" onchange="filterCampaigns(this.value)" style="padding: 8px; border: 1px solid var(--border); border-radius: 4px;">
                        <option value="">Tous les statuts</option>
                        <option value="draft">Brouillons</option>
                        <option value="sent">Envoyées</option>
                        <option value="sending">En cours</option>
                    </select>
                    <input type="text" id="searchCampaigns" placeholder="Rechercher..." style="padding: 8px; border: 1px solid var(--border); border-radius: 4px;" onkeyup="searchCampaigns(this.value)">
                </div>
            </div>

            <% if (campaigns && campaigns.length > 0) { %>
                <table class="campaigns-table">
                    <thead>
                        <tr>
                            <th>Campagne</th>
                            <th>Statut</th>
                            <th>Destinataires</th>
                            <th>Envoyés</th>
                            <th>Ouvertures</th>
                            <th>Clics</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="campaignsTableBody">
                        <% campaigns.forEach(campaign => { %>
                            <tr data-campaign-id="<%= campaign.id %>">
                                <td>
                                    <div class="campaign-name"><%= campaign.name %></div>
                                    <div class="campaign-subject"><%= campaign.subject %></div>
                                </td>
                                <td>
                                    <span class="status-badge status-<%= campaign.status %>">
                                        <%= campaign.status === 'draft' ? 'Brouillon' : 
                                            campaign.status === 'sent' ? 'Envoyée' : 
                                            campaign.status === 'sending' ? 'En cours' : campaign.status %>
                                    </span>
                                </td>
                                <td>
                                    <span class="metric-value"><%= campaign.recipients_count || 0 %></span>
                                </td>
                                <td>
                                    <span class="metric-value"><%= campaign.sent_count || 0 %></span>
                                </td>
                                <td>
                                    <span class="metric-value"><%= campaign.open_count || 0 %></span>
                                    <span class="metric-rate">(<%= campaign.open_rate || 0 %>%)</span>
                                </td>
                                <td>
                                    <span class="metric-value"><%= campaign.click_count || 0 %></span>
                                    <span class="metric-rate">(<%= ((campaign.click_count || 0) / Math.max(campaign.sent_count || 1, 1) * 100).toFixed(1) %>%)</span>
                                </td>
                                <td>
                                    <div class="campaign-date">
                                        <% if (campaign.sent_at) { %>
                                            <%= new Date(campaign.sent_at).toLocaleDateString('fr-FR') %>
                                        <% } else { %>
                                            <%= new Date(campaign.created_at).toLocaleDateString('fr-FR') %>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <div class="campaign-actions">
                                        <button class="action-btn" onclick="viewCampaignDetails(<%= campaign.id %>)" title="Voir les détails">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <% if (campaign.status === 'draft') { %>
                                            <button class="action-btn" onclick="editCampaign(<%= campaign.id %>)" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        <% } %>
                                        <button class="action-btn" onclick="duplicateCampaign(<%= campaign.id %>)" title="Dupliquer">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <button class="pagination-btn" onclick="changePage(<%= currentPage - 1 %>)">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                    <% } %>
                    
                    <span style="color: var(--text-secondary); margin: 0 15px;">
                        Page <%= currentPage %>
                    </span>
                    
                    <% if (hasNextPage) { %>
                        <button class="pagination-btn" onclick="changePage(<%= currentPage + 1 %>)">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    <% } %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-paper-plane"></i>
                    <h3>Aucune campagne trouvée</h3>
                    <p>Créez votre première campagne email pour commencer</p>
                    <a href="/admin/marketing/email-editor" class="btn btn-primary" style="margin-top: 20px;">
                        <i class="fas fa-plus"></i>
                        Créer une Campagne
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Modal Détails Campagne -->
    <div class="modal" id="campaignDetailsModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 10000; align-items: center; justify-content: center;">
        <div class="modal-content" style="background: white; border-radius: 12px; padding: 30px; max-width: 800px; width: 90%; max-height: 80vh; overflow-y: auto;">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid var(--border);">
                <h3 class="modal-title" style="font-size: 20px; font-weight: 600;">Détails de la Campagne</h3>
                <button class="modal-close" onclick="closeModal('campaignDetailsModal')" style="background: none; border: none; font-size: 24px; cursor: pointer; color: var(--text-secondary);">&times;</button>
            </div>
            <div id="campaignDetailsContent">
                <!-- Le contenu sera chargé dynamiquement -->
            </div>
        </div>
    </div>

    <script>
        // Configuration
        const API_BASE = '/admin/marketing/api';
        let currentPage = <%= currentPage || 1 %>;
        let allCampaigns = <%- JSON.stringify(campaigns || []) %>;

        // ===== INITIALISATION =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('📊 Initialisation du dashboard marketing...');
            
            try {
                initializeCharts();
                setupEventListeners();
                
                console.log('✅ Dashboard initialisé avec succès !');
            } catch (error) {
                console.error('❌ Erreur initialisation dashboard:', error);
                showNotification('❌ Erreur lors de l\'initialisation', 'error');
            }
        });

        // ===== GRAPHIQUES =====
        function initializeCharts() {
            // Graphique de performance
            const performanceCtx = document.getElementById('performanceChart');
            if (performanceCtx) {
                new Chart(performanceCtx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Taux d\'ouverture (%)',
                            data: [22, 25, 28, 24, 30, 27],
                            borderColor: '#d89ab3',
                            backgroundColor: 'rgba(216, 154, 179, 0.1)',
                            tension: 0.4
                        }, {
                            label: 'Taux de clic (%)',
                            data: [3.2, 3.8, 4.1, 3.5, 4.3, 3.9],
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }

            // Graphique des statuts
            const statusCtx = document.getElementById('statusChart');
            if (statusCtx) {
                const campaigns = <%- JSON.stringify(campaigns || []) %>;
                const statusCounts = campaigns.reduce((acc, campaign) => {
                    acc[campaign.status] = (acc[campaign.status] || 0) + 1;
                    return acc;
                }, {});

                new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Envoyées', 'Brouillons', 'En cours'],
                        datasets: [{
                            data: [
                                statusCounts.sent || 0,
                                statusCounts.draft || 0,
                                statusCounts.sending || 0
                            ],
                            backgroundColor: [
                                '#10b981',
                                '#64748b',
                                '#3b82f6'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
            }
        }

        // ===== EVENT LISTENERS =====
        function setupEventListeners() {
            // Auto-refresh toutes les 5 minutes
            setInterval(refreshStats, 300000);
        }

        // ===== ACTIONS =====
        async function viewCampaignDetails(campaignId) {
            try {
                const response = await fetch(`${API_BASE}/stats/${campaignId}`);
                const data = await response.json();
                
                if (data.success) {
                    displayCampaignDetails(data.stats);
                    openModal('campaignDetailsModal');
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                console.error('❌ Erreur détails campagne:', error);
                showNotification('❌ Erreur lors du chargement des détails', 'error');
            }
        }

        function displayCampaignDetails(stats) {
            const content = document.getElementById('campaignDetailsContent');
            content.innerHTML = `
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 25px;">
                    <div style="text-align: center; padding: 20px; background: var(--bg-primary); border-radius: 8px;">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--primary);">${stats.recipients_count || 0}</div>
                        <div style="color: var(--text-secondary); font-size: 14px;">Destinataires</div>
                    </div>
                    <div style="text-align: center; padding: 20px; background: var(--bg-primary); border-radius: 8px;">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--success);">${stats.sent_count || 0}</div>
                        <div style="color: var(--text-secondary); font-size: 14px;">Envoyés</div>
                    </div>
                    <div style="text-align: center; padding: 20px; background: var(--bg-primary); border-radius: 8px;">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--info);">${stats.open_rate || 0}%</div>
                        <div style="color: var(--text-secondary); font-size: 14px;">Taux d'ouverture</div>
                    </div>
                    <div style="text-align: center; padding: 20px; background: var(--bg-primary); border-radius: 8px;">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--warning);">${stats.click_rate || 0}%</div>
                        <div style="color: var(--text-secondary); font-size: 14px;">Taux de clic</div>
                    </div>
                </div>
                
                <div style="margin-bottom: 20px;">
                    <h4 style="margin-bottom: 10px; color: var(--text-primary);">Informations de la Campagne</h4>
                    <div style="background: var(--bg-primary); padding: 15px; border-radius: 8px;">
                        <p><strong>Nom:</strong> ${stats.name}</p>
                        <p><strong>Sujet:</strong> ${stats.subject}</p>
                        <p><strong>Date de création:</strong> ${new Date(stats.created_at).toLocaleDateString('fr-FR')}</p>
                        ${stats.sent_at ? `<p><strong>Date d'envoi:</strong> ${new Date(stats.sent_at).toLocaleDateString('fr-FR')}</p>` : ''}
                    </div>
                </div>
            `;
        }

        function editCampaign(campaignId) {
            window.open(`/admin/marketing/email-editor?campaign=${campaignId}`, '_blank');
        }

        async function duplicateCampaign(campaignId) {
            if (confirm('Voulez-vous dupliquer cette campagne ?')) {
                try {
                    // Pour l'instant, redirection vers l'éditeur
                    window.open(`/admin/marketing/email-editor?duplicate=${campaignId}`, '_blank');
                    showNotification('📋 Campagne dupliquée', 'success');
                } catch (error) {
                    console.error('❌ Erreur duplication:', error);
                    showNotification('❌ Erreur lors de la duplication', 'error');
                }
            }
        }

        async function refreshStats() {
            try {
                console.log('🔄 Actualisation des statistiques...');
                
                const response = await fetch(`${API_BASE}/stats`);
                const data = await response.json();
                
                if (data.success) {
                    location.reload(); // Rechargement simple pour le moment
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                console.error('❌ Erreur actualisation:', error);
                showNotification('❌ Erreur lors de l\'actualisation', 'error');
            }
        }

        function exportData() {
            // Export CSV simple
            const csvContent = "data:text/csv;charset=utf-8," 
                + "Nom,Sujet,Statut,Destinataires,Envoyés,Ouvertures,Clics,Date\n"
                + allCampaigns.map(c => 
                    `"${c.name}","${c.subject}","${c.status}",${c.recipients_count || 0},${c.sent_count || 0},${c.open_count || 0},${c.click_count || 0},"${new Date(c.created_at).toLocaleDateString('fr-FR')}"`
                ).join("\n");

            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", `campagnes_marketing_${new Date().toISOString().split('T')[0]}.csv`);
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showNotification('📊 Données exportées', 'success');
        }

        // ===== FILTRES ET RECHERCHE =====
        function filterCampaigns(status) {
            const rows = document.querySelectorAll('#campaignsTableBody tr');
            
            rows.forEach(row => {
                const statusBadge = row.querySelector('.status-badge');
                const campaignStatus = statusBadge.classList.contains('status-draft') ? 'draft' :
                                     statusBadge.classList.contains('status-sent') ? 'sent' :
                                     statusBadge.classList.contains('status-sending') ? 'sending' : '';
                
                if (!status || campaignStatus === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
            
            console.log(`🔍 Filtrage par statut: ${status || 'tous'}`);
        }

        function searchCampaigns(query) {
            const rows = document.querySelectorAll('#campaignsTableBody tr');
            
            rows.forEach(row => {
                const name = row.querySelector('.campaign-name').textContent.toLowerCase();
                const subject = row.querySelector('.campaign-subject').textContent.toLowerCase();
                
                if (!query || name.includes(query.toLowerCase()) || subject.includes(query.toLowerCase())) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
            
            console.log(`🔍 Recherche: ${query}`);
        }

        function changePage(page) {
            window.location.href = `?page=${page}`;
        }

        // ===== UTILITAIRES =====
        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            }
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.style.display = 'none';
                document.body.style.overflow = '';
            }
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease forwards';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.remove();
                    }
                }, 300);
            }, 3000);
        }

        console.log('📊 Dashboard marketing chargé avec succès !');
    </script>
</body>
