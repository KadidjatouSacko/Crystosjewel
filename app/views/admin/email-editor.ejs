        // üíæ ACTIONS PRINCIPALES
        // ==========================================
        async function saveDraft() {
            const emailData = getEmailData();
            
            if (!emailData.subject) {
                showAlert('Veuillez saisir un sujet', 'error');
                return;
            }

            showLoading(true);

            try {
                const response = await fetch('/admin/emails/campaigns/test', {
