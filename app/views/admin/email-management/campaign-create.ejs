</html></textarea>
                </div>
                
                <div class="mt-4 text-sm text-gray-600">
                    <p><strong>Variables disponibles :</strong></p>
                    <p>{{firstName}} - Pr√©nom du client | {{lastName}} - Nom du client | {{email}} - Email du client</p>
                </div>
            </div>

            <!-- Programmation -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">‚è∞ Programmation</h2>
                
                <div class="space-y-4">
                    <div>
                        <label class="flex items-center mb-2">
                            <input type="radio" name="send_type" value="now" checked
                                   class="mr-2 text-pink-600 focus:ring-pink-500">
                            Envoyer maintenant
                        </label>
                        <label class="flex items-center mb-2">
                            <input type="radio" name="send_type" value="schedule"
                                   class="mr-2 text-pink-600 focus:ring-pink-500">
                            Programmer l'envoi
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="send_type" value="draft"
                                   class="mr-2 text-pink-600 focus:ring-pink-500">
                            Sauvegarder en brouillon
                        </label>
                    </div>
                    
                    <div id="schedule-options" class="hidden">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Date et heure d'envoi</label>
                        <input type="datetime-local" id="scheduled_at" name="scheduled_at"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-gold">
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-between">
                <button type="button" onclick="previewCampaign()" 
                        class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg">
                    üëÅÔ∏è Aper√ßu
                </button>
                
                <div class="flex gap-4">
                    <button type="button" onclick="saveDraft()" 
                            class="bg-yellow-600 hover:bg-yellow-700 text-white px-6 py-2 rounded-lg">
                        üíæ Sauvegarder brouillon
                    </button>
                    <button type="submit" 
                            class="bg-pink-gold hover-pink-gold text-white px-6 py-2 rounded-lg font-semibold">
                        üöÄ Cr√©er la campagne
                    </button>
                </div>
            </div>
        </form>
    </div>

    <script>
        const templates = <%- JSON.stringify(templates || []) %>;

        // Gestion du formulaire
        document.getElementById('campaignForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            // D√©terminer le statut
            const sendType = document.querySelector('input[name="send_type"]:checked').value;
            if (sendType === 'now') {
                data.status = 'sending';
            } else if (sendType === 'schedule') {
                data.status = 'scheduled';
                if (!data.scheduled_at) {
                    alert('Veuillez s√©lectionner une date et heure d\'envoi');
                    return;
                }
            } else {
                data.status = 'draft';
            }
            
            try {
                const response = await fetch('/admin/email-management/campaigns', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Campagne cr√©√©e avec succ√®s !');
                    window.location.href = '/admin/email-management/campaigns';
                } else {
                    alert('Erreur: ' + result.error);
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la cr√©ation de la campagne');
            }
        });

        // Charger un template
        function loadTemplate() {
            const templateId = document.getElementById('template_id').value;
            if (!templateId) return;
            
            const template = templates.find(t => t.id == templateId);
            if (template) {
                document.getElementById('subject').value = template.subject || '';
                document.getElementById('content').value = template.html_content || '';
            }
        }

        // Gestion de la programmation
        document.querySelectorAll('input[name="send_type"]').forEach(radio => {
            radio.addEventListener('change', (e) => {
                const scheduleOptions = document.getElementById('schedule-options');
                
                if (e.target.value === 'schedule') {
                    scheduleOptions.classList.remove('hidden');
                    document.getElementById('scheduled_at').required = true;
                } else {
                    scheduleOptions.classList.add('hidden');
                    document.getElementById('scheduled_at').required = false;
                }
            });
        });

        // Sauvegarder en brouillon
        function saveDraft() {
            document.querySelector('input[name="send_type"][value="draft"]').checked = true;
            document.getElementById('campaignForm').dispatchEvent(new Event('submit'));
        }

        // Aper√ßu de la campagne
        function previewCampaign() {
            const content = document.getElementById('content').value;
            const subject = document.getElementById('subject').value;
            
            // Ouvrir une nouvelle fen√™tre avec l'aper√ßu
            const previewWindow = window.open('', 'preview', 'width=800,height=600');
            previewWindow.document.write(`
                <html>
                <head>
                    <title>Aper√ßu: ${subject}</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        .preview-header { background: #f3f4f6; padding: 15px; margin-bottom: 20px; border-radius: 8px; }
                    </style>
                </head>
                <body>
                    <div class="preview-header">
                        <h2>Aper√ßu de la campagne</h2>
                        <p><strong>Objet:</strong> ${subject}</p>
                        <p><small>Les variables comme {{firstName}} seront remplac√©es lors de l'envoi</small></p>
                    </div>
                    <div class="content">
                        ${content}
                    </div>
                </body>
                </html>
            `);
        }
    </script>
</body>
</html>