<script>
// Charger les campagnes r√©centes
document.addEventListener('DOMContentLoaded', function() {
    loadRecentCampaigns();
});

async function loadRecentCampaigns() {
    try {
        const response = await fetch('/admin/api/email-campaigns/recent');
        const data = await response.json();
        
        if (data.success) {
            displayRecentCampaigns(data.campaigns);
        }
    } catch (error) {
        console.error('Erreur chargement campagnes:', error);
    }
}

function displayRecentCampaigns(campaigns) {
    const container = document.getElementById('recent-campaigns');
    
    if (campaigns.length === 0) {
        container.innerHTML = '<p class="no-data">Aucune campagne r√©cente</p>';
        return;
    }
    
    container.innerHTML = campaigns.map(campaign => `
        <div class="campaign-card">
            <div class="campaign-info">
                <h4>${campaign.name}</h4>
                <p>${campaign.subject}</p>
                <div class="campaign-meta">
                    <span class="status status-${campaign.status}">${getStatusLabel(campaign.status)}</span>
                    <span class="date">${formatDate(campaign.created_at)}</span>
                </div>
            </div>
            <div class="campaign-stats">
                <div class="stat">
                    <span class="value">${campaign.emails_sent || 0}</span>
                    <span class="label">Envoy√©s</span>
                </div>
                <div class="stat">
                    <span class="value">${campaign.open_rate || 0}%</span>
                    <span class="label">Ouverture</span>
                </div>
            </div>
            <div class="campaign-actions">
                <a href="/admin/email-management/campaigns/${campaign.id}" class="btn btn-sm">Voir</a>
                ${campaign.status === 'draft' ? `<a href="/admin/email-management/campaigns/${campaign.id}/edit" class="btn btn-sm btn-primary">√âditer</a>` : ''}
            </div>
        </div>
    `).join('');
}

function getStatusLabel(status) {
    const labels = {
        'draft': 'Brouillon',
        'sent': 'Envoy√©e',
        'scheduled': 'Programm√©e',
        'cancelled': 'Annul√©e'
    };
    return labels[status] || status;
}

function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('fr-FR');
}
</script>

