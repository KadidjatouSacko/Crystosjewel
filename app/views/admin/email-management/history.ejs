<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - CrystosJewel Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .pink-gold { color: #e91e63; }
        .bg-pink-gold { background-color: #e91e63; }
        .hover-pink-gold:hover { background-color: #c2185b; }
    </style>
</head>
<body class="bg-gray-50">
    <%- include('../../partials/navbarre.ejs') %>
    
    <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">üìä Historique des Emails</h1>
            <p class="text-gray-600">Suivi de tous les emails envoy√©s</p>
        </div>

        <!-- Statistiques rapides -->
     <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
<%
const statusCounts = {};
if (typeof stats !== 'undefined' && stats && stats.length > 0) {
  stats.forEach(stat => {
    // Votre logique de traitement des stats ici
    const status = stat.status || 'unknown';
    statusCounts[status] = (statusCounts[status] || 0) + 1;
  });
}
%>
            
            <div class="bg-white rounded-lg shadow p-4">
                <div class="text-2xl font-bold text-green-600"><%= statusCounts.sent || 0 %></div>
                <div class="text-sm text-gray-600">Emails Envoy√©s</div>
            </div>
            <div class="bg-white rounded-lg shadow p-4">
                <div class="text-2xl font-bold text-red-600"><%= statusCounts.failed || 0 %></div>
                <div class="text-sm text-gray-600">Emails √âchou√©s</div>
            </div>
            <div class="bg-white rounded-lg shadow p-4">
                <div class="text-2xl font-bold text-blue-600"><%= statusCounts.pending || 0 %></div>
                <div class="text-sm text-gray-600">En Attente</div>
            </div>
            <div class="bg-white rounded-lg shadow p-4">
                <div class="text-2xl font-bold text-purple-600"><%= emailHistory.length %></div>
                <div class="text-sm text-gray-600">Total Affich√©</div>
            </div>
        </div>

        <!-- Filtres -->
        <div class="bg-white rounded-lg shadow-md p-4 mb-8">
            <form method="GET" class="flex flex-wrap gap-4 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Type d'Email</label>
                  <!-- Dans votre fichier history.ejs -->
<%
// D√©finir des valeurs par d√©faut si filters n'est pas d√©fini
const currentFilters = typeof filters !== 'undefined' ? filters : {};
%>

<select name="email_type" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-gold">
  <option value="">Tous les types</option>
  <option value="campaign" <%= (currentFilters.email_type === 'campaign') ? 'selected' : '' %>>Campagne</option>
  <option value="order_confirmation" <%= (currentFilters.email_type === 'order_confirmation') ? 'selected' : '' %>>Confirmation commande</option>
  <option value="shipping_notification" <%= (currentFilters.email_type === 'shipping_notification') ? 'selected' : '' %>>Notification exp√©dition</option>
  <option value="welcome" <%= (currentFilters.email_type === 'welcome') ? 'selected' : '' %>>Bienvenue</option>
</select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
                    <select name="status" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-gold">
                        <option value="">Tous les statuts</option>
                        <option value="sent" <%= filters.status === 'sent' ? 'selected' : '' %>>Envoy√©</option>
                        <option value="failed" <%= filters.status === 'failed' ? 'selected' : '' %>>√âchec</option>
                        <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>En attente</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">ID Client</label>
                    <input type="number" name="customer_id" value="<%= filters.customer_id || '' %>" 
                           placeholder="ID client..." 
                           class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-pink-gold">
                </div>
                
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                    üîç Filtrer
                </button>
                
                <% if (filters.email_type || filters.status || filters.customer_id) { %>
                <a href="/admin/email-management/history" class="text-gray-600 hover:text-gray-800">
                    ‚úñÔ∏è Effacer filtres
                </a>
                <% } %>
            </form>
        </div>

        <!-- Historique des emails -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <% if (emailHistory && emailHistory.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Client</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Objet</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Erreur</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% emailHistory.forEach(email => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-900">#<%= email.id %></td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-gray-900">
                                    <%= email.first_name ? (email.first_name + ' ' + (email.last_name || '')) : 'N/A' %>
                                </div>
                                <div class="text-sm text-gray-500"><%= email.recipient_email || email.customer_email %></div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                    <%= email.email_type %>
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900">
                                <div class="max-w-xs truncate" title="<%= email.subject %>">
                                    <%= email.subject %>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                    <%= email.status === 'sent' ? 'bg-green-100 text-green-800' : 
                                        email.status === 'failed' ? 'bg-red-100 text-red-800' :
                                        'bg-yellow-100 text-yellow-800' %>">
                                    <%= email.status === 'sent' ? '‚úÖ Envoy√©' : 
                                        email.status === 'failed' ? '‚ùå √âchec' :
                                        '‚è≥ En attente' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                <%= new Date(email.created_at).toLocaleString('fr-FR') %>
                            </td>
                            <td class="px-6 py-4 text-sm text-red-600">
                                <% if (email.error_message) { %>
                                <div class="max-w-xs truncate" title="<%= email.error_message %>">
                                    <%= email.error_message %>
                                </div>
                                <% } else { %>
                                -
                                <% } %>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-12">
                <div class="text-gray-500 mb-4">
                    üìß
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun email trouv√©</h3>
                <p class="text-gray-500">Aucun email ne correspond aux crit√®res de recherche.</p>
            </div>
            <% } %>
        </div>
    </div>
</body>
</html>