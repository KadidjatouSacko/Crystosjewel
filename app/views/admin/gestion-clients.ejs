            <!-- Liste des clients -->
            <div class="stats-container">
                <div class="table-container">
                    <table class="clients-table">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                                </th>
