    <link rel="stylesheet" href="/css/follow-customer.css">
    <style>
        /* ===== STYLES EMAILS ===== */
        .email-actions {
            display: flex;
            gap: 6px;
            flex-wrap: wrap;
            margin-top: 8px;
        }
        
        .btn-email {
            padding: 4px 8px;
            font-size: 11px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
        
        .btn-welcome {
            background: #3b82f6;
            color: white;
        }
        
        .btn-welcome:hover {
            background: #2563eb;
        }
        
        .btn-custom {
            background: #10b981;
            color: white;
        }
        
        .btn-custom:hover {
            background: #059669;
        }
        
        .btn-reactivation {
            background: #f59e0b;
            color: white;
        }
        
        .btn-reactivation:hover {
            background: #d97706;
        }
        
        .client-status {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 500;
            text-transform: uppercase;
        }
        
        .status-vip {
            background: #fef3c7;
            color: #92400e;
        }
        
        .status-fidele {
            background: #d1fae5;
            color: #065f46;
        }
        
        .status-actif {
            background: #dbeafe;
            color: #1e40af;
        }
        
        .status-nouveau {
            background: #f3e8ff;
            color: #6b21a8;
        }
        
        .status-inactif {
            background: #fee2e2;
            color: #991b1b;
        }
        
        .bulk-actions {
            display: none;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border: 2px solid #d89ab3;
            border-radius: 12px;
            padding: 15px 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .bulk-actions.show {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .stats-enhanced {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .stat-card-email {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-left: 4px solid #d89ab3;
        }
        
        .stat-card-email h3 {
            margin: 0 0 10px 0;
            color: #374151;
            font-size: 14px;
            font-weight: 500;
        }
        
        .stat-card-email .value {
            font-size: 24px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 5px;
        }
        
        .stat-card-email .label {
            font-size: 12px;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
    </style>
</head>
