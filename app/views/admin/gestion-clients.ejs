    <script>
        // ===== VARIABLES GLOBALES =====
        let selectedClients = [];
        let currentClientId = null;
        let currentClientName = null;
        let currentClientEmail = null;

        // ===== GESTION DES MODALES =====
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('show');
            setTimeout(() => {
                modal.style.display = 'none';
            }, 300);
        }

        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.style.display = 'flex';
            setTimeout(() => {
                modal.classList.add('show');
            }, 10);
        }

        // ===== SÃ‰LECTION MULTIPLE =====
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.client-checkbox');
            
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
            updateSelection();
        }

        function updateSelection() {
            const checkboxes = document.querySelectorAll('.client-checkbox:checked');
            selectedClients = Array.from(checkboxes).map(cb => ({
                id: cb.value,
                name: cb.dataset.name,
                email: cb.dataset.email
            }));

            const count = selectedClients.length;
            document.getElementById('selectedCount').textContent = count;
            
            const bulkActions = document.getElementById('bulkActions');
            if (count > 0) {
                bulkActions.classList.add('show');
            } else {
                bulkActions.classList.remove('show');
            }

            // Mettre Ã  jour le checkbox "Tout sÃ©lectionner"
            const selectAll = document.getElementById('selectAll');
            const totalCheckboxes = document.querySelectorAll('.client-checkbox').length;
            selectAll.checked = count === totalCheckboxes;
            selectAll.indeterminate = count > 0 && count < totalCheckboxes;
        }

        function clearSelection() {
            document.querySelectorAll('.client-checkbox').forEach(cb => cb.checked = false);
            document.getElementById('selectAll').checked = false;
            updateSelection();
        }

        // ===== EMAIL DE BIENVENUE =====
        function sendWelcomeEmail(clientId, clientName) {
            currentClientId = clientId;
            currentClientName = clientName;
            
            document.getElementById('welcomeClientName').textContent = clientName;
            openModal('welcomeModal');
        }

        async function confirmSendWelcome() {
            if (!currentClientId) return;
            
            try {
                showLoading('Envoi en cours...');
                
                const response = await fetch(`/admin/clients/${currentClientId}/send-welcome`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Email de bienvenue envoyÃ© avec succÃ¨s !', 'success');
                    closeModal('welcomeModal');
                } else {
                    showNotification('Erreur : ' + result.message, 'error');
                }
                
            } catch (error) {
                console.error('Erreur envoi email bienvenue:', error);
                showNotification('Erreur lors de l\'envoi de l\'email', 'error');
            }
        }

        // ===== EMAIL PERSONNALISÃ‰ =====
        function openCustomEmailModal(clientId, clientName, clientEmail) {
            currentClientId = clientId;
            currentClientName = clientName;
            currentClientEmail = clientEmail;
            
            document.getElementById('customEmailRecipient').value = `${clientName} (${clientEmail})`;
            document.getElementById('customEmailSubject').value = '';
            document.getElementById('customEmailMessage').value = '';
            
            openModal('customEmailModal');
        }

        async function confirmSendCustom() {
            const subject = document.getElementById('customEmailSubject').value.trim();
            const message = document.getElementById('customEmailMessage').value.trim();
            
            if (!subject || !message) {
                showNotification('Veuillez remplir le sujet et le message', 'error');
                return;
            }
            
            try {
                showLoading('Envoi en cours...');
                
                const response = await fetch(`/admin/clients/${currentClientId}/send-custom`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        subject: subject,
                        message: message
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Email personnalisÃ© envoyÃ© avec succÃ¨s !', 'success');
                    closeModal('customEmailModal');
                } else {
                    showNotification('Erreur : ' + result.message, 'error');
                }
                
            } catch (error) {
                console.error('Erreur envoi email personnalisÃ©:', error);
                showNotification('Erreur lors de l\'envoi de l\'email', 'error');
            }
        }

        // ===== EMAIL DE RELANCE =====
        async function sendReactivationEmail(clientId, clientName) {
            if (!confirm(`Envoyer un email de relance Ã  ${clientName} ?`)) return;
            
            try {
                showLoading('Envoi en cours...');
                
                const response = await fetch(`/admin/clients/${clientId}/send-reactivation`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Email de relance envoyÃ© avec succÃ¨s !', 'success');
                } else {
                    showNotification('Erreur : ' + result.message, 'error');
                }
                
            } catch (error) {
                console.error('Erreur envoi email relance:', error);
                showNotification('Erreur lors de l\'envoi de l\'email', 'error');
            }
        }

        // ===== EMAIL GROUPÃ‰ =====
        function openBulkEmailModal() {
            if (selectedClients.length === 0) {
                showNotification('Aucun client sÃ©lectionnÃ©', 'error');
                return;
            }
            
            const recipientsList = selectedClients.map(client => 
                `<span style="display: inline-block; background: #e0e7ff; color: #3730a3; padding: 4px 8px; border-radius: 4px; margin: 2px; font-size: 12px;">
                    ${client.name}
                </span>`
            ).join('');
            
            document.getElementById('bulkRecipients').innerHTML = recipientsList;
            openModal('bulkEmailModal');
        }

        function handleBulkEmailTypeChange() {
            const emailType = document.getElementById('bulkEmailType').value;
            const customFields = document.getElementById('bulkCustomFields');
            const sendBtn = document.getElementById('bulkSendBtn');
            const previewDiv = document.getElementById('bulkEmailPreview');
            
            if (emailType === 'custom') {
                customFields.style.display = 'block';
                sendBtn.disabled = true;
            } else {
                customFields.style.display = 'none';
                sendBtn.disabled = emailType === '';
            }
            
            // Afficher un aperÃ§u selon le type
            let previewContent = '';
            switch (emailType) {
                case 'welcome':
                    previewContent = `
                        <div style="background: #f0f9ff; border: 1px solid #0ea5e9; border-radius: 8px; padding: 15px; margin: 15px 0;">
                            <h4 style="margin: 0 0 10px 0; color: #0369a1;">ðŸ“§ Email de bienvenue</h4>
                            <p style="margin: 0; color: #0369a1; font-size: 14px;">
                                Message de bienvenue personnalisÃ© avec prÃ©sentation de la boutique et avantages client.
                            </p>
                        </div>
                    `;
                    break;
                case 'reactivation':
                    previewContent = `
                        <div style="background: #fef3f2; border: 1px solid #fca5a5; border-radius: 8px; padding: 15px; margin: 15px 0;">
                            <h4 style="margin: 0 0 10px 0; color: #dc2626;">ðŸ”„ Email de relance</h4>
                            <p style="margin: 0; color: #dc2626; font-size: 14px;">
                                Message de rÃ©activation avec offre spÃ©ciale et incitation au retour.
                            </p>
                        </div>
                    `;
                    break;
            }
            previewDiv.innerHTML = previewContent;
        }

        // Validation des champs personnalisÃ©s pour email groupÃ©
        document.addEventListener('DOMContentLoaded', function() {
            const subjectField = document.getElementById('bulkEmailSubject');
            const messageField = document.getElementById('bulkEmailMessage');
            
            if (subjectField) subjectField.addEventListener('input', validateBulkCustomFields);
            if (messageField) messageField.addEventListener('input', validateBulkCustomFields);
        });

        function validateBulkCustomFields() {
            const emailType = document.getElementById('bulkEmailType').value;
            const sendBtn = document.getElementById('bulkSendBtn');
            
            if (emailType === 'custom') {
                const subject = document.getElementById('bulkEmailSubject').value.trim();
                const message = document.getElementById('bulkEmailMessage').value.trim();
                sendBtn.disabled = !subject || !message;
            }
        }

        async function confirmSendBulk() {
            const emailType = document.getElementById('bulkEmailType').value;
            
            if (!emailType) {
                showNotification('Veuillez choisir un type d\'email', 'error');
                return;
            }
            
            const clientIds = selectedClients.map(client => client.id);
            let customData = {};
            
            if (emailType === 'custom') {
                const subject = document.getElementById('bulkEmailSubject').value.trim();
                const message = document.getElementById('bulkEmailMessage').value.trim();
                
                if (!subject || !message) {
                    showNotification('Veuillez remplir le sujet et le message', 'error');
                    return;
                }
                
                customData = { subject, message };
            }
            
            if (!confirm(`Envoyer un email ${emailType} Ã  ${selectedClients.length} client(s) ?`)) return;
            
            try {
                showLoading('Envoi en cours...');
                
                const response = await fetch('/admin/clients/send-bulk-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        clientIds: clientIds,
                        emailType: emailType,
                        customData: customData
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification(`Emails envoyÃ©s : ${result.totalSent} succÃ¨s, ${result.totalFailed} Ã©checs`, 'success');
                    closeModal('bulkEmailModal');
                    clearSelection();
                } else {
                    showNotification('Erreur : ' + result.message, 'error');
                }
                
            } catch (error) {
                console.error('Erreur envoi email groupÃ©:', error);
                showNotification('Erreur lors de l\'envoi des emails', 'error');
            }
        }

        // ===== UTILITAIRES =====
        function showNotification(message, type = 'info') {
            // Supprimer les notifications existantes
            document.querySelectorAll('.notification').forEach(notif => notif.remove());
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 16px 20px;
                border-radius: 8px;
                color: white;
                font-weight: 500;
                z-index: 2000;
                max-width: 400px;
                background: ${type === 'success' ? '#10b981' : type === 'error' ? '#ef4444' : '#3b82f6'};
                animation: slideIn 0.3s ease-out;
            `;
            
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 10px;">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto-suppression aprÃ¨s 5 secondes
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => notification.remove(), 300);
            }, 5000);
        }

        function showLoading(message = 'Chargement...') {
            showNotification(message, 'info');
        }

        // ===== GESTION DES Ã‰VÃ‰NEMENTS =====
        document.addEventListener('click', function(event) {
            // Fermer les modales en cliquant Ã  l'extÃ©rieur
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    closeModal(modal.id);
                }
            });
        });

        document.addEventListener('keydown', function(event) {
            // Fermer les modales avec Escape
            if (event.key === 'Escape') {
                const openModals = document.querySelectorAll('.modal[style*="display: flex"]');
                openModals.forEach(modal => closeModal(modal.id));
            }
        });

        // ===== CSS ANIMATIONS =====
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    opacity: 0;
                    transform: translateX(100%);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }
            
            .modal {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(4px);
                align-items: center;
                justify-content: center;
            }
            
            .modal-content {
                background: white;
                border-radius: 16px;
                max-width: 600px;
                width: 90%;
                max-height: 90vh;
                overflow-y: auto;
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
                animation: modalSlideIn 0.3s ease-out;
            }
            
            @keyframes modalSlideIn {
                from {
                    opacity: 0;
                    transform: translateY(-20px) scale(0.95);
                }
                to {
                    opacity: 1;
                    transform: translateY(0) scale(1);
                }
            }
        `;
        document.head.appendChild(style);

        console.log('Interface email clients initialisÃ©e');
    </script>
