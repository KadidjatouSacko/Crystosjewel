    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('ð Page dÃ©tails code promo chargÃ©e');

            // Graphique d'Ã©volution si donnÃ©es disponibles
            <% if (monthlyStats && monthlyStats.length > 0) { %>
                const ctx = document.getElementById('usageChart').getContext('2d');
                const monthlyData = <%- JSON.stringify(monthlyStats) %>;
                
                const labels = monthlyData.map(item => {
                    const date = new Date(item.month);
                    return date.toLocaleDateString('fr-FR', { month: 'short', year: 'numeric' });
                });

                const ordersData = monthlyData.map(item => parseInt(item.orders_count) || 0);
                const revenueData = monthlyData.map(item => parseFloat(item.total_revenue) || 0);
                const discountData = monthlyData.map(item => parseFloat(item.total_discount) || 0);

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Nombre de commandes',
                            data: ordersData,
                            borderColor: '#E8B4B8',
                            backgroundColor: 'rgba(232, 180, 184, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y'
                        }, {
                            label: 'Chiffre d\'affaires (â¬)',
                            data: revenueData,
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y1'
                        }, {
                            label: 'RÃ©ductions accordÃ©es (â¬)',
                            data: discountData,
                            borderColor: '#f59e0b',
                            backgroundColor: 'rgba(245, 158, 11, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y1'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false,
                        },
                        scales: {
                            x: {
                                display: true,
                                title: {
                                    display: true,
                                    text: 'Mois'
                                }
                            },
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Nombre de commandes'
                                }
                            },
                            y1: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                title: {
                                    display: true,
                                    text: 'Montant (â¬)'
                                },
                                grid: {
                                    drawOnChartArea: false,
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'Performance du Code <%= promo.code %>'
                            }
                        }
                    }
                });
            <% } %>

            // Auto-hide des messages flash
            setTimeout(() => {
                document.querySelectorAll('.alert').forEach(alert => {
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-10px)';
                    setTimeout(() => alert.remove(), 300);
                });
            }, 5000);

            // Animation de la barre de progression
            setTimeout(() => {
                const progressFill = document.querySelector('.progress-fill');
                if (progressFill) {
                    const targetWidth = progressFill.style.width;
                    progressFill.style.width = '0%';
                    setTimeout(() => {
                        progressFill.style.width = targetWidth;
                    }, 100);
                }
            }, 500);
        });
